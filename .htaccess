# Habilita RewriteEngine
RewriteEngine On

# Não precisa de RewriteBase /wazeportal, já que o site não está mais em uma subpasta
# RewriteBase /wazeportal

# Bloqueia o acesso ao arquivo .env
<Files ".env">
    Order Allow,Deny
    Deny from all
</Files>

# Permite o acesso direto à pasta /parceiros
RewriteCond %{REQUEST_URI} !^/parceiros/

# Redireciona tudo para o index.php, exceto a pasta /parceiros
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
