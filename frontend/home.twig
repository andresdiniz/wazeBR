<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .alert-map {
        height: 300px;
        width: 100%;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }
    
    .confidence-badge {
        min-width: 60px;
    }
</style>

<div class="container mt-5">
    <div class="row g-4">
        <!-- Acidentes -->
        <div class="col-xl-6 col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-car-crash me-2"></i>Acidentes
                </div>
                <div class="card-body">
                    {% if accidentAlerts is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Cidade</th>
                                    <th>Localização</th>
                                    <th>Data</th>
                                    <th>Confiança</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for alert in accidentAlerts %}
                                <tr>
                                    <td>{{ alert.city }}</td>
                                    <td>
                                        <small class="text-muted d-block">{{ alert.street }}</small>
                                        <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}" 
                                           target="_blank" 
                                           class="btn btn-link btn-sm">
                                            Ver no mapa
                                        </a>
                                    </td>
                                    <td>{{ (alert.pubMillis / 1000) | date("d/m/Y H:i") }}</td>
                                    <td>
                                        <span class="badge confidence-badge bg-{{ alert.confidence > 80 ? 'success' : (alert.confidence > 50 ? 'warning' : 'danger') }}">
                                            {{ alert.confidence }}%
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-outline-primary btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#alertModal{{ alert.uuid }}">
                                            Detalhes
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info mb-0 text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Não há eventos de acidentes registrados
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Congestionamentos -->
        <div class="col-xl-6 col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <i class="fas fa-traffic-light me-2"></i>Congestionamentos
                </div>
                <div class="card-body">
                    {% if jamAlerts is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Cidade</th>
                                    <th>Localização</th>
                                    <th>Data</th>
                                    <th>Confiança</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for alert in jamAlerts %}
                                <tr>
                                    <td>{{ alert.city }}</td>
                                    <td>
                                        <small class="text-muted d-block">{{ alert.street }}</small>
                                        <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}" 
                                           target="_blank" 
                                           class="btn btn-link btn-sm">
                                            Ver no mapa
                                        </a>
                                    </td>
                                    <td>{{ (alert.pubMillis / 1000) | date("d/m/Y H:i") }}</td>
                                    <td>
                                        <span class="badge confidence-badge bg-{{ alert.confidence > 80 ? 'success' : (alert.confidence > 50 ? 'warning' : 'danger') }}">
                                            {{ alert.confidence }}%
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-outline-primary btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#alertModal{{ alert.uuid }}">
                                            Detalhes
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info mb-0 text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Não há congestionamentos registrados
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Único Dinâmico -->
<div class="modal fade" id="dynamicAlertModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalhes do Alerta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const modal = new bootstrap.Modal('#dynamicAlertModal');
    let currentMap = null;

    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', async () => {
            const alertData = {
                uuid: button.getAttribute('data-bs-target').replace('#alertModal', ''),
                lat: parseFloat(button.dataset.lat),
                lon: parseFloat(button.dataset.lon),
                city: button.closest('tr').querySelector('td:first-child').textContent,
                street: button.closest('tr').querySelector('td:nth-child(2) small').textContent,
                confidence: button.closest('tr').querySelector('.confidence-badge').textContent,
                date: button.closest('tr').querySelector('td:nth-child(3)').textContent,
                note: button.closest('tr').querySelector('td:nth-child(5)')?.textContent || 'N/A'
            };

            // Carregar conteúdo do modal
            const modalContent = `
                <div class="row g-3">
                    <div class="col-md-6">
                        <p><strong>Cidade:</strong> ${alertData.city}</p>
                        <p><strong>Rua:</strong> ${alertData.street}</p>
                        <p><strong>Coordenadas:</strong><br> 
                            Lat: ${alertData.lat.toFixed(6)}, Lon: ${alertData.lon.toFixed(6)}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Data/Hora:</strong> ${alertData.date}</p>
                        <p><strong>Confiança:</strong> ${alertData.confidence}</p>
                        <p><strong>KM DNIT:</strong> <span id="kmValue">${await getDnitKm(alertData.lat, alertData.lon)}</span></p>
                    </div>
                    <div class="col-12">
                        <div class="alert-map" id="leafletMap"></div>
                    </div>
                </div>
            `;

            document.getElementById('modalContent').innerHTML = modalContent;
            modal.show();

            // Inicializar mapa após o modal ser exibido
            modal._element.addEventListener('shown.bs.modal', () => {
                if(currentMap) currentMap.remove();
                
                currentMap = L.map('leafletMap').setView([alertData.lat, alertData.lon], 15);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap'
                }).addTo(currentMap);

                L.marker([alertData.lat, alertData.lon])
                    .addTo(currentMap)
                    .bindPopup('Localização exata do alerta');
            });
        });
    });

    async function getDnitKm(lat, lon) {
        try {
            // Simular chamada à API
            await new Promise(resolve => setTimeout(resolve, 800));
            return (Math.random() * 100).toFixed(1) + ' km';
        } catch {
            return 'Indisponível';
        }
    }
});
</script>