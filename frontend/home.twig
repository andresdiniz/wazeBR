                <div class="modern-card-header bg-primary-gradient">
                    Mapa de Congestionamento (Tempo Real)
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <div class="card-body p-0">
                    <div id="congestionMap"></div>
                </div>
            </div>
        </div>

    </div>
    
    <div class="row">
        {# ... Outros cards ou tabelas ... #}
    </div>

</div>
{% for jam in jamLive %}
    <div class="modal fade" id="jamModal{{ jam.uuid }}" tabindex="-1" role="dialog" aria-labelledby="jamModalLabel{{ jam.uuid }}" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="jamModalLabel{{ jam.uuid }}">Detalhes do Congestionamento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Rua:</strong> {{ jam.street }}</p>
                    <p><strong>N√≠vel:</strong> <span class="badge bg-{{ jam.level|level_badge_class }}">{{ jam.level }} - {{ jam.level|level_text }}</span></p>
                    <p><strong>Km:</strong> {{ jam.length_km|number_format(2, ',', '.') }} km</p>
                    <p><strong>Atraso:</strong> {{ (jam.delay_seconds / 60)|number_format(0, ',', '.') }} minutos</p>
                    <p><strong>Motoristas Impactados:</strong> {{ jam.total_wazers_impactados|number_format(0, ',', '.') }}</p>
                    <p><strong>Hor√°rio:</strong> {{ jam.pub_utc_date|date("d/m/Y H:i:s") }}</p>

                    <div id="modalMap{{ jam.uuid }}" class="modal-map" style="height: 300px; width: 100%; border-radius: 0.5rem; margin-top: 15px;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
            </div>
        </div>
    </div>
{% endfor %}


