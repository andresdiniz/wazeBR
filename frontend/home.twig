<script>
document.addEventListener("DOMContentLoaded", function () {
    
    // Vari√°vel para controlar se os tooltips j√° foram inicializados
    let tooltipsInitialized = false;

    // Inicializar Tooltips do Bootstrap apenas uma vez
    function initTooltips() {
        if (tooltipsInitialized) return;
        
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl, {
                trigger: 'hover',
                boundary: 'window'
            });
        });
        
        tooltipsInitialized = true;
        console.log('‚úì Tooltips inicializados');
    }

    // Inicializar tooltips
    initTooltips();

    // Rastrear mapas j√° inicializados
    const initializedMaps = new Set();

    // Configura√ß√£o dos modais com mapas
    $(".open-modal").on("click", function () {
        const lat = parseFloat($(this).data("lat"));
        const lon = parseFloat($(this).data("lon"));
        const modalId = $(this).attr("data-bs-target");
        const mapId = modalId.replace("#alertModal", "map-");

        // Usar 'one' para garantir que o evento s√≥ seja anexado uma vez
        $(modalId).one('shown.bs.modal', function () {
            // Verificar se o mapa j√° foi inicializado
            if (initializedMaps.has(mapId)) {
                return;
            }

            const mapElement = document.getElementById(mapId);
            if (mapElement && !mapElement._leaflet_id) {
                try {
                    const map = L.map(mapId).setView([lat, lon], 15);

                    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                        attribution: "&copy; OpenStreetMap contributors"
                    }).addTo(map);

                    L.marker([lat, lon]).addTo(map)
                        .bindPopup("Localiza√ß√£o do Alerta")
                        .openPopup();

                    setTimeout(function () {
                        map.invalidateSize();
                    }, 100);

                    // Marcar como inicializado
                    initializedMaps.add(mapId);
                } catch (error) {
                    console.error('Erro ao criar mapa no modal:', error);
                }
            }
        });
    });

    // Configura√ß√£o do DataTable
    const dataTableConfig = {
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json'
        },
        scrollX: true,
        responsive: true,
        pageLength: 25,
        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
        order: [[2, 'desc']],
        columnDefs: [
            { orderable: false, targets: [4] },
            { width: "15%", targets: [0] },
            { width: "10%", targets: [4] }
        ],
        dom: '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
             '<"row"<"col-sm-12"tr>>' +
             '<"row mt-3"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
        initComplete: function() {
            // Usar Notify.js se dispon√≠vel
            if (typeof $.notify !== 'undefined') {
                $.notify("‚úì Dados carregados com sucesso!", {
                    position: "top right",
                    className: "success",
                    autoHideDelay: 3000
                });
            }
        }
    };

    // Inicializar DataTables
    if ($('#accidentsTable').length) {
        $('#accidentsTable').DataTable(dataTableConfig);
        console.log('‚úì Tabela de acidentes inicializada');
    }

    if ($('#trafficTable').length) {
        $('#trafficTable').DataTable(dataTableConfig);
        console.log('‚úì Tabela de congestionamentos inicializada');
    }

    // Inicializa√ß√£o do mapa de congestionamento
    const mapLoading = document.getElementById('mapLoading');
    if (mapLoading) mapLoading.classList.remove('d-none');

    const congestionMap = L.map('congestionMap').setView([-20.66, -43.79], 13);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(congestionMap);

    // Obter dados do elemento script JSON
    let jamsData = [];
    const jamsDataElement = document.getElementById('jamsData');
    
    if (jamsDataElement) {
        try {
            jamsData = JSON.parse(jamsDataElement.textContent);
        } catch (error) {
            console.error('Erro ao parsear dados de congestionamento:', error);
        }
    }

    function getColorForLevel(level) {
        const colors = {
            5: '#dc3545', // Vermelho - Tr√°fego parado
            4: '#fd7e14', // Laranja - Tr√°fego muito lento
            3: '#ffc107', // Amarelo - Tr√°fego lento
            2: '#28a745', // Verde - Tr√°fego moderado
            1: '#17a2b8'  // Azul - Tr√°fego leve
        };
        return colors[level] || '#6c757d';
    }

    function getLevelText(level) {
        const texts = {
            5: 'Tr√°fego Parado',
            4: 'Tr√°fego Muito Lento',
            3: 'Tr√°fego Lento',
            2: 'Tr√°fego Moderado',
            1: 'Tr√°fego Leve'
        };
        return texts[level] || 'Desconhecido';
    }

    if (Array.isArray(jamsData) && jamsData.length > 0) {
        let processedJams = 0;
        
        jamsData.forEach(jam => {
            if (jam.lines && Array.isArray(jam.lines) && jam.lines.length > 0) {
                const latlngs = jam.lines.map(line => [line.latitude, line.longitude]);
                const color = getColorForLevel(jam.level);
                const levelText = getLevelText(jam.level);
                
                const polyline = L.polyline(latlngs, {
                    color: color,
                    weight: 6,
                    opacity: 0.8,
                    lineJoin: 'round'
                }).addTo(congestionMap);

                polyline.bindPopup(`
                    <div style="min-width: 200px;">
                        <h6 class="mb-2"><i class="fas fa-traffic-light me-2"></i>${levelText}</h6>
                        <p class="mb-1"><strong>Rua:</strong> ${jam.street || 'N√£o informada'}</p>
                        <p class="mb-1"><strong>Cidade:</strong> ${jam.city || 'N√£o informada'}</p>
                        <p class="mb-0"><strong>N√≠vel:</strong> ${jam.level}/5</p>
                    </div>
                `);

                // Efeitos de hover
                polyline.on('mouseover', function() {
                    this.setStyle({ weight: 8, opacity: 1 });
                });

                polyline.on('mouseout', function() {
                    this.setStyle({ weight: 6, opacity: 0.8 });
                });
                
                processedJams++;
            }
        });

        // Remover loading e mostrar notifica√ß√£o
        setTimeout(() => {
            if (mapLoading) mapLoading.classList.add('d-none');
            
            if (typeof $.notify !== 'undefined') {
                $.notify(`‚úì ${processedJams} congestionamento(s) carregado(s)`, {
                    position: "top right",
                    className: "info",
                    autoHideDelay: 4000
                });
            }
        }, 500);

        console.log(`‚úì ${processedJams} congestionamentos carregados`);
    } else {
        setTimeout(() => {
            if (mapLoading) mapLoading.classList.add('d-none');
            
            if (typeof $.notify !== 'undefined') {
                $.notify("‚ö† Nenhum congestionamento ativo no momento", {
                    position: "top right",
                    className: "warn",
                    autoHideDelay: 4000
                });
            }
        }, 500);
    }

    // Anima√ß√£o do contador de motoristas
    const driversCountElement = document.getElementById('driversCount');
    if (driversCountElement) {
        const targetValue = parseInt(driversCountElement.textContent.replace(/\D/g, ''));
        
        if (!isNaN(targetValue) && targetValue > 0) {
            let currentValue = 0;
            const duration = 2000;
            const startTime = Date.now();

            function updateCounter() {
                const elapsed = Date.now() - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function
                const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                currentValue = Math.floor(targetValue * easeOutQuart);
                
                driversCountElement.textContent = currentValue.toLocaleString('pt-BR');

                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                } else {
                    driversCountElement.textContent = targetValue.toLocaleString('pt-BR');
                }
            }

            updateCounter();
        }
    }

    // Notifica√ß√£o de boas-vindas
    setTimeout(() => {
        if (typeof $.notify !== 'undefined') {
            $.notify("üöó Bem-vindo ao Dashboard WAZE!", {
                position: "top right",
                className: "success",
                autoHideDelay: 5000
            });
        }
    }, 1000);

    console.log('‚úÖ Dashboard inicializado com sucesso!');
});
</script>