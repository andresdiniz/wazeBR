                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        
        function inicializarMapa(uuid, latitude, longitude) {
            const map = L.map(`map-${uuid}`).setView([latitude, longitude], 14);
    
            // ConfiguraÃ§Ã£o do mapa com OpenStreetMap
            L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);
    
            // Marca o local no mapa
            L.marker([latitude, longitude]).addTo(map)
                .bindPopup("LocalizaÃ§Ã£o do Evento")
                .openPopup();
    
            // Centraliza o mapa no ponto
            map.setView([latitude, longitude], 14);
        }
    
        // Evento para abrir o modal corretamente
        document.querySelectorAll("[id^=alertModal]").forEach(modal => {
            modal.addEventListener("show.bs.modal", async function () {
                const uuid = modal.id.replace("alertModal", "");
                const latitude = parseFloat(modal.getAttribute("data-lat"));
                const longitude = parseFloat(modal.getAttribute("data-lon"));
                const tipo = modal.getAttribute("data-tipo");   // ObtÃ©m o tipo corretamente
                const subtipo = modal.getAttribute("data-subtipo"); // ObtÃ©m o subtipo corretamente
    
                if (!isNaN(latitude) && !isNaN(longitude)) {
                    // Busca KM do DNIT
                    const km = await buscarKmDnit(latitude, longitude);
                    document.getElementById(`km-value-${uuid}`).textContent = km || "NÃ£o encontrado";
                    
                    // Inicializa o mapa
                    inicializarMapa(uuid, latitude, longitude);
                }
    
                // Chama a API para traduzir tipo e subtipo
                if (tipo && subtipo) {
                    try {
                        const response = await fetch(`api.php?action=traduzir&tipo=${encodeURIComponent(tipo)}&subtipo=${encodeURIComponent(subtipo)}`);
                        const data = await response.json();
    
                        if (data.success) {
                            document.getElementById(`tipo-alerta-${uuid}`).textContent = `ðŸš¨ Tipo: ${data.tipo}`;
                            document.getElementById(`subtipo-alerta-${uuid}`).textContent = `ðŸ“Œ Subtipo: ${data.subtipo}`;
                        } else {
                            console.error("Erro na API:", data.message);
                            document.getElementById(`tipo-alerta-${uuid}`).textContent = `ðŸš¨ Tipo: ${tipo}`;
                            document.getElementById(`subtipo-alerta-${uuid}`).textContent = `ðŸ“Œ Subtipo: ${subtipo}`;
                        }
                    } catch (error) {
                        console.error("Erro ao buscar traduÃ§Ã£o:", error);
                        document.getElementById(`tipo-alerta-${uuid}`).textContent = `ðŸš¨ Tipo: ${tipo}`;
                        document.getElementById(`subtipo-alerta-${uuid}`).textContent = `ðŸ“Œ Subtipo: ${subtipo}`;
                    }
                }
            });
        });
    });
</script>
    


