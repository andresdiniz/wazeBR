    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $(".open-modal").on("click", async function () {
                let lat = $(this).data("lat");
                let lon = $(this).data("lon");
                let modalId = $(this).data("bs-target");
                let mapId = modalId.replace("#alertModal", "map-");
                let kmId = modalId.replace("#alertModal", "km-value-");

                // Inicialização do mapa dentro do modal quando ele é aberto
                const modalElement = document.querySelector(modalId);
                modalElement.addEventListener('show.bs.modal', () => {
                    // Verifica se o mapa já foi inicializado para evitar múltiplos mapas
                    if (!L.DomUtil.get(mapId)._leaflet_id) {
                        let map = L.map(mapId).setView([lat, lon], 13);

                        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                            attribution: "&copy; OpenStreetMap contributors"
                        }).addTo(map);

                        L.marker([lat, lon]).addTo(map)
                            .bindPopup("Localização do Alerta")
                            .openPopup();
                        // Força o Leaflet a redimensionar o mapa após a exibição do modal
                        setTimeout(() => {
                            map.invalidateSize();
                        }, 100);
                    } else {
                        // Se o mapa já existe, apenas atualiza a visualização
                        let map = L.DomUtil.get(mapId)._leaflet_id ? L.map(mapId) : null;
                        if (map) {
                            map.setView([lat, lon], 13);
                            L.marker([lat, lon]).setLatLng([lat, lon]).bindPopup("Localização do Alerta").openPopup();
                        }
                    }
                });

                // Chama a função assíncrona para buscar o KM (você precisará definir essa função)
                async function buscarKmDnit(latitude, longitude, raio) {
                    // Substitua esta lógica pela sua chamada real à API do DNIT
                    console.log(`Buscando KM para lat: ${latitude}, lon: ${longitude}, raio: ${raio}`);
                    // Simulação de uma chamada de API
                    return new Promise(resolve => {
                        setTimeout(() => {
                            const kmAleatorio = Math.floor(Math.random() * 1000);
                            resolve(kmAleatorio.toString());
                        }, 1000);
                    });
                }

                const km = await buscarKmDnit(lat, lon, 150);
                $(`#${kmId}`).text(km || "Não encontrado");
            });

            // Inicialização do DataTables (removido, pois não estava sendo usado no HTML fornecido)
        });
    </script>
