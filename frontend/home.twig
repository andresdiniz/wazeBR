<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
        --warning-gradient: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
        --danger-gradient: linear-gradient(135deg, #e74a3b 0%, #be2617 100%);
        --info-gradient: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
    }

    /* Mapa de congestionamento */
    #congestionMap {
        height: 550px;
        width: 100%;
        border-radius: 0.5rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    /* Estilos Modern Card */
    .modern-card {
        border: none;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .modern-card:hover {
        transform: translateY(-2px);
    }
    .modern-card-header {
        padding: 1.25rem;
        color: white;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.1rem;
        border-bottom: none;
    }
    .bg-danger-gradient { background: var(--danger-gradient); }
    .bg-info-gradient { background: var(--info-gradient); }
    .bg-success-gradient { background: var(--success-gradient); }
    .bg-primary-gradient { background: var(--primary-gradient); }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #4e73df;
    }

    /* Estilo para a lista do resumo */
    .list-group-item {
        border-color: #f8f9fc;
        font-size: 0.95rem;
    }
    .empty-state {
        text-align: center;
        padding: 20px;
        color: #b9b9c9;
    }
    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }
</style>

