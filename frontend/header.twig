    <!-- Auto-refresh script otimizado -->
    <script>
        (function() {
            'use strict';
            
            // Configuração do auto-refresh
            const AUTO_REFRESH_CONFIG = {
                interval: 180000, // 3 minutos
                validPages: ['home', 'dashboard', 'routes', 'irregularidades']
            };
            
            // Função para verificar se deve fazer refresh
            function shouldAutoRefresh() {
                const currentPath = window.location.pathname.split('/').pop() || 'home';
                return AUTO_REFRESH_CONFIG.validPages.includes(currentPath);
            }
            
            // Inicializa auto-refresh se necessário
            if (shouldAutoRefresh()) {
                setInterval(function() {
                    // Verifica se a página ainda está ativa antes de recarregar
                    if (!document.hidden) {
                        window.location.reload();
                    }
                }, AUTO_REFRESH_CONFIG.interval);
            }
        })();
    </script>

