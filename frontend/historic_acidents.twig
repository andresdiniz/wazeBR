<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .card-summary {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .card-summary:hover {
        transform: translateY(-5px);
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px 0;
    }

    .dataTables_wrapper {
        padding: 15px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .filter-label {
        font-weight: 600;
        color: #2c3e50;
    }
</style>

<div class="container my-5">
    <h1 class="text-center mb-4 display-4 font-weight-bold text-primary">
        <i class="fas fa-traffic-light"></i> Histórico de Acidentes
    </h1>

    <!-- Cards de Resumo -->
    <div class="row mb-4" id="summaryCards">
        <div class="col-md-4 mb-3">
            <div class="card card-summary bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-exclamation-triangle"></i> Total de Acidentes</h5>
                    <h2 class="card-text" id="totalAccidents">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card card-summary bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-thermometer-half"></i> Média Diária</h5>
                    <h2 class="card-text" id="dailyAverage">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card card-summary bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> Rua Mais Afetada</h5>
                    <h2 class="card-text" id="mostAffectedStreet">-</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4 border-0 shadow">
        <div class="card-body">
            <h4 class="card-title mb-4"><i class="fas fa-filter"></i> Filtros</h4>
            <form id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="start_date" class="filter-label">Data Inicial:</label>
                        <input type="date" class="form-control" id="start_date" name="start_date">
                    </div>
                    <div class="col-md-3">
                        <label for="end_date" class="filter-label">Data Final:</label>
                        <input type="date" class="form-control" id="end_date" name="end_date">
                    </div>
                    <div class="col-md-3">
                        <label for="group_by" class="filter-label">Agrupar por:</label>
                        <select class="form-control" id="group_by" name="group_by">
                            <option value="date">Data</option>
                            <option value="hour">Hora</option>
                            <option value="street">Rua</option>
                            <option value="severity">Gravidade</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                    </div>
                </div>
                <input type="hidden" id="id_parceiro" value="{{id_parceiro}}">
            </form>
        </div>
    </div>

    <!-- Gráfico -->
    <div class="chart-container">
        <canvas id="alertsChart" height="400"></canvas>
    </div>

    <!-- Tabela -->
    <div class="card border-0 shadow">
        <div class="card-body">
            <h4 class="card-title mb-4"><i class="fas fa-table"></i> Dados Detalhados</h4>
            <table id="alertsTable" class="display table table-hover" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>Categoria</th>
                        <th>Quantidade</th>
                        <th>% do Total</th>
                        <th>Variação</th>
                        <th>Severidade</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script>
    (function($) {

        async function fetchAccidentAlerts(startDate, endDate, groupBy) {
            try {
                let id_parceiro = $('#id_parceiro').val();
                const response = await fetch(`../api.php?action=get_alerts&start_date=${startDate}&end_date=${endDate}&group_by=${groupBy}&id_parceiro=${id_parceiro}`);
                const data = await response.json();
    
                if (data.error) {
                    console.error(data.error);
                    $('#alertsTable').html(`<p>${data.error}</p>`);
                    return;
                }
    
                updateTable(data.alerts, groupBy);
                if (data.alerts.length > 0) {
                    $('#alertsChartContainer').show();
                    updateChart(data.labels, data.data_counts, groupBy);
                } else {
                    $('#alertsChartContainer').hide();
                }
            } catch (error) {
                console.error('Erro ao buscar dados:', error);
                $('#alertsTable').html(`<p>Erro ao carregar os dados.</p>`);
            }
        }
    
        function updateChart(labels, dataCounts, groupBy) {
            const dataValues = dataCounts.map(count => parseInt(count, 10));
    
            const ctx = document.getElementById('alertsChart').getContext('2d');
            if (window.alertsChartInstance) window.alertsChartInstance.destroy();
    
            const chartType = groupBy === 'date' ? 'line' : groupBy === 'street' ? 'pie' : 'bar';
            const chartData = {
                labels,
                datasets: [{
                    label: 'Número de Alertas',
                    backgroundColor: chartType === 'pie' ?
                        labels.map(() => `rgba(${Math.random() * 255}, ${Math.random() * 255}, ${Math.random() * 255}, 0.6)`) :
                        'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    data: dataValues
                }]
            };
    
            const config = {
                type: chartType,
                data: chartData,
                plugins: [ChartDataLabels],
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        title: {
                            display: true,
                            text: `Histórico de Acidentes (${groupBy})`
                        },
                        datalabels: {
                            color: 'black',
                            formatter: value => value > 0 ? value : ''
                        }
                    },
                    scales: chartType !== 'pie' ? {
                        x: {
                            title: {
                                display: true,
                                text: 'Categorias'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Quantidade'
                            },
                            beginAtZero: true
                        }
                    } : {}
                }
            };
    
            window.alertsChartInstance = new Chart(ctx, config);
        }
    
        function updateTable(alerts, groupBy) {
            let data = alerts.map(alert => {
                let label = groupBy === 'date' ? alert.alert_date :
                    groupBy === 'hour' ? `${String(alert.alert_hour).padStart(2, '0')}:00` :
                    alert.street || 'Rua não disponível';
                return [label, alert.count];
            });
        
            // Destruir a DataTable existente se já foi inicializada
            if ($.fn.DataTable.isDataTable('#alertsTable')) {
                $('#alertsTable').DataTable().destroy();
            }
        
            // Limpar o corpo da tabela manualmente
            $('#alertsTable tbody').empty();
        
            // Inicializar a DataTable com os novos dados
            let table = $('#alertsTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf'],
                data: data,
                columns: [
                    { title: "Categoria" },
                    { title: "Quantidade" }
                ],
                autoWidth: false,
                destroy: true // Garantir que qualquer instância anterior seja limpa
            });
        }
    
        $('#filterForm').on('submit', function(event) {
            event.preventDefault();
            const startDate = $('#start_date').val();
            const endDate = $('#end_date').val();
            const groupBy = $('#group_by').val();
            fetchAccidentAlerts(startDate, endDate, groupBy);
        });
    
        $(document).ready(function() {
            const now = new Date();
            const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
            const endOfDay = new Date(now.getFullYear(), now.getMonth(), now.getDate() + 1);
    
            const startDate = startOfMonth.toISOString().split('T')[0];
            const endDate = endOfDay.toISOString().split('T')[0];
    
            $('#start_date').val(startDate);
            $('#end_date').val(endDate);
    
            const groupBy = 'date';
            fetchAccidentAlerts(startDate, endDate, groupBy);
        });
    
    })(jQuery);

</script>
