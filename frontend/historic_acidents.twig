<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --background-color: #f8f9fa;
    }

    body {
        background-color: var(--background-color);
        min-height: 100vh;
    }

    .dashboard-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
    }

    .real-time-badge {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
</style>

<div class="container-fluid py-4">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 rounded-3">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-traffic-light me-2"></i>
                Monitor de Acidentes
            </a>
            <span class="navbar-text" id="connectionStatus">
                <i class="fas fa-circle text-danger"></i> Offline
            </span>
        </div>
    </nav>

    <div class="container">
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="dashboard-card p-4">
                    <h2 class="h4 mb-4"><i class="fas fa-filter me-2"></i>Filtros</h2>
                    <form id="filterForm">
                        <div class="row g-3">
                            <!-- Campos do formulário mantidos iguais -->
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-sync me-2"></i>Atualizar Dados
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="dashboard-card p-4">
                    <h2 class="h4 mb-4"><i class="fas fa-chart-line me-2"></i>Gráfico Analítico</h2>
                    <div class="chart-container position-relative">
                        <canvas id="alertsChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="dashboard-card p-4">
                    <h2 class="h4 mb-4"><i class="fas fa-table me-2"></i>Dados Tabulados</h2>
                    <table id="alertsTable" class="table table-hover w-100"></table>
                </div>
            </div>
        </div>
    </div>

    <div class="real-time-badge">
        <span class="badge bg-success p-3">
            <i class="fas fa-bolt me-2"></i>
            Dados em Tempo Real
        </span>
    </div>
</div>

<script>
    (function($) {

        async function fetchAccidentAlerts(startDate, endDate, groupBy) {
            try {
                let id_parceiro = $('#id_parceiro').val();
                const response = await fetch(`../api.php?action=get_alerts&start_date=${startDate}&end_date=${endDate}&group_by=${groupBy}&id_parceiro=${id_parceiro}`);
                const data = await response.json();
    
                if (data.error) {
                    console.error(data.error);
                    $('#alertsTable').html(`<p>${data.error}</p>`);
                    return;
                }
    
                updateTable(data.alerts, groupBy);
                if (data.alerts.length > 0) {
                    $('#alertsChartContainer').show();
                    updateChart(data.labels, data.data_counts, groupBy);
                } else {
                    $('#alertsChartContainer').hide();
                }
            } catch (error) {
                console.error('Erro ao buscar dados:', error);
                $('#alertsTable').html(`<p>Erro ao carregar os dados.</p>`);
            }
        }
    
        function updateChart(labels, dataCounts, groupBy) {
            const dataValues = dataCounts.map(count => parseInt(count, 10));
    
            const ctx = document.getElementById('alertsChart').getContext('2d');
            if (window.alertsChartInstance) window.alertsChartInstance.destroy();
    
            const chartType = groupBy === 'date' ? 'line' : groupBy === 'street' ? 'pie' : 'bar';
            const chartData = {
                labels,
                datasets: [{
                    label: 'Número de Alertas',
                    backgroundColor: chartType === 'pie' ?
                        labels.map(() => `rgba(${Math.random() * 255}, ${Math.random() * 255}, ${Math.random() * 255}, 0.6)`) :
                        'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    data: dataValues
                }]
            };
    
            const config = {
                type: chartType,
                data: chartData,
                plugins: [ChartDataLabels],
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        title: {
                            display: true,
                            text: `Histórico de Acidentes (${groupBy})`
                        },
                        datalabels: {
                            color: 'black',
                            formatter: value => value > 0 ? value : ''
                        }
                    },
                    scales: chartType !== 'pie' ? {
                        x: {
                            title: {
                                display: true,
                                text: 'Categorias'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Quantidade'
                            },
                            beginAtZero: true
                        }
                    } : {}
                }
            };
    
            window.alertsChartInstance = new Chart(ctx, config);
        }
    
        function updateTable(alerts, groupBy) {
            let data = alerts.map(alert => {
                let label = groupBy === 'date' ? alert.alert_date :
                    groupBy === 'hour' ? `${String(alert.alert_hour).padStart(2, '0')}:00` :
                    alert.street || 'Rua não disponível';
                return [label, alert.count];
            });
        
            // Destruir a DataTable existente se já foi inicializada
            if ($.fn.DataTable.isDataTable('#alertsTable')) {
                $('#alertsTable').DataTable().destroy();
            }
        
            // Limpar o corpo da tabela manualmente
            $('#alertsTable tbody').empty();
        
            // Inicializar a DataTable com os novos dados
            let table = $('#alertsTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf'],
                data: data,
                columns: [
                    { title: "Categoria" },
                    { title: "Quantidade" }
                ],
                autoWidth: false,
                destroy: true // Garantir que qualquer instância anterior seja limpa
            });
        }
    
        $('#filterForm').on('submit', function(event) {
            event.preventDefault();
            const startDate = $('#start_date').val();
            const endDate = $('#end_date').val();
            const groupBy = $('#group_by').val();
            fetchAccidentAlerts(startDate, endDate, groupBy);
        });
    
        $(document).ready(function() {
            const now = new Date();
            const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
            const endOfDay = new Date(now.getFullYear(), now.getMonth(), now.getDate() + 1);
    
            const startDate = startOfMonth.toISOString().split('T')[0];
            const endDate = endOfDay.toISOString().split('T')[0];
    
            $('#start_date').val(startDate);
            $('#end_date').val(endDate);
    
            const groupBy = 'date';
            fetchAccidentAlerts(startDate, endDate, groupBy);
        });
    
    })(jQuery);

</script>
