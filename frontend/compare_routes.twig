<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

<style>
    .comparison-card {
        border-left: 4px solid;
        transition: transform 0.3s;
    }
    .comparison-card:hover {
        transform: translateY(-5px);
    }
    .route1-color { border-color: #3c8dbc; }
    .route2-color { border-color: #d33724; }
    @media (max-width: 767px) {
        .chart-container { padding: 0 5px; }
        canvas { max-height: 300px; }
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">Comparação de Rotas</h2>
    <form method="GET" class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Rota 1:</label>
            <select name="route1_id" class="form-select" required>
                <option value="">Selecione a primeira rota</option>
                {% for route in routes %}
                    <option value="{{ route.id }}" {% if route.id == route1 %}selected{% endif %}>
                        {{ route.name }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Rota 2:</label>
            <select name="route2_id" class="form-select" required>
                <option value="">Selecione a segunda rota</option>
                {% for route in routes %}
                    <option value="{{ route.id }}" {% if route.id == route2 %}selected{% endif %}>
                        {{ route.name }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Data Inicial:</label>
            <input type="date" name="start_date" class="form-control" value="{{ start_date }}" required>
        </div>

        <div class="col-md-2">
            <label class="form-label">Data Final:</label>
            <input type="date" name="end_date" class="form-control" value="{{ end_date }}" required>
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100">Comparar</button>
        </div>
    </form>

    {% if dados %}
        <div class="row mt-4">
            <!-- Cards de Resumo -->
            <div class="col-md-6 mb-3">
                <div class="card comparison-card route1-color">
                    <div class="card-body">
                        <h5 class="card-title">{{ route1_name }}</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="h4 text-primary">{{ dados.media1.velocidade|round(1) }} km/h</div>
                                <small>Velocidade Média</small>
                            </div>
                            <div class="col-6">
                                <div class="h4 text-secondary">{{ dados.media1.tempo|round(1) }} s</div>
                                <small>Tempo Médio</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="card comparison-card route2-color">
                    <div class="card-body">
                        <h5 class="card-title">{{ route2_name }}</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="h4 text-primary">{{ dados.media2.velocidade|round(1) }} km/h</div>
                                <small>Velocidade Média</small>
                            </div>
                            <div class="col-6">
                                <div class="h4 text-secondary">{{ dados.media2.tempo|round(1) }} s</div>
                                <small>Tempo Médio</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráficos Comparativos -->
        <div class="chart-container">
            <canvas id="comparisonChartVelocidade" class="mt-4"></canvas>
            <canvas id="comparisonChartTempo" class="mt-4"></canvas>
        </div>

        <!-- Tabelas Comparativas -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h4 class="text-center">{{ route1_name }}</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Velocidade</th>
                            <th>Tempo</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in dados.rota1 %}
                            <tr>
                                <td>{{ item.data }}</td>
                                <td>{{ item.velocidade }}</td>
                                <td>{{ item.tempo }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <h4 class="text-center">{{ route2_name }}</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Velocidade</th>
                            <th>Tempo</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in dados.rota2 %}
                            <tr>
                                <td>{{ item.data }}</td>
                                <td>{{ item.velocidade }}</td>
                                <td>{{ item.tempo }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Botões de Exportação -->
        <div class="mt-4 d-flex justify-content-center gap-3 flex-wrap">
            <button class="btn btn-success" onclick="exportData()">Exportar Dados</button>
            <button class="btn btn-info" onclick="exportChart('comparisonChartVelocidade')">Exportar Gráfico Velocidade</button>
            <button class="btn btn-info" onclick="exportChart('comparisonChartTempo')">Exportar Gráfico Tempo</button>
        </div>
    {% endif %}
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        {% if dados %}
            // Verificar se existem dados válidos
            const isValidComparison = {{ dados.rota1_values is defined and dados.rota2_values is defined ? 'true' : 'false' }};
            
            if(isValidComparison) {
                // Configuração comum dos gráficos
                const chartConfig = {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { 
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 20
                            }
                        },
                        tooltip: { 
                            mode: 'index', 
                            intersect: false,
                            backgroundColor: 'rgba(0,0,0,0.7)',
                            bodySpacing: 5
                        }
                    },
                    scales: {
                        x: { 
                            display: true, 
                            title: { 
                                display: true, 
                                text: 'Data',
                                color: '#666',
                                font: { weight: 'bold' }
                            } 
                        },
                        y: { 
                            display: true, 
                            title: { 
                                display: true, 
                                text: 'Valor',
                                color: '#666',
                                font: { weight: 'bold' }
                            },
                            grid: { color: '#f3f3f3' }
                        }
                    },
                    elements: { 
                        line: { 
                            tension: 0.4,
                            borderWidth: 2 
                        },
                        point: {
                            radius: 4,
                            hoverRadius: 6
                        }
                    }
                };

                try {
                    // Dados para os gráficos
                    const labels = {{ dados.labels|json_encode|default([])|raw }};
                    const data1 = {{ dados.rota1_values|json_encode|default({})|raw }};
                    const data2 = {{ dados.rota2_values|json_encode|default({})|raw }};

                    // Verificar dados mínimos
                    if(labels.length && data1.velocidade && data2.velocidade) {
                        // Gráfico de Velocidade
                        new Chart(document.getElementById('comparisonChartVelocidade'), {
                            // ... mantido igual ...
                        });

                        // Gráfico de Tempo
                        new Chart(document.getElementById('comparisonChartTempo'), {
                            // ... mantido igual ...
                        });
                    }

                    // Inicializar DataTables apenas se existirem tabelas
                    const tables = document.querySelectorAll('table');
                    if(tables.length > 0) {
                        $('table').DataTable({
                            paging: false,
                            searching: false,
                            info: false,
                            order: [[0, 'desc']],
                            language: {
                                emptyTable: "Nenhum dado disponível para comparação"
                            }
                        });
                    }
                } catch (error) {
                    console.error('Erro na inicialização:', error);
                    alert('Ocorreu um erro ao carregar os gráficos. Verifique os dados.');
                }
            }
        {% endif %}
    });

    function exportData() {
        {% if dados and dados.merged_data %}
            try {
                const data = [
                    ['Data', 'Rota 1 Velocidade', 'Rota 1 Tempo', 'Rota 2 Velocidade', 'Rota 2 Tempo'],
                    ...{{ dados.merged_data|json_encode|default([])|raw }}.map(row => [
                        row.data,
                        row.velocidade1 ?? 'N/A',
                        row.tempo1 ?? 'N/A',
                        row.velocidade2 ?? 'N/A',
                        row.tempo2 ?? 'N/A'
                    ])
                ];

                const ws = XLSX.utils.aoa_to_sheet(data);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Comparação");
                XLSX.writeFile(wb, 'comparacao_rotas.xlsx');
            } catch (error) {
                console.error('Erro na exportação:', error);
                alert('Erro ao exportar dados. Tente novamente.');
            }
        {% else %}
            alert('Selecione ambas as rotas e período antes de exportar.');
        {% endif %}
    }

    function exportChart(chartId) {
        const canvas = document.getElementById(chartId);
        if(canvas) {
            const link = document.createElement('a');
            link.href = canvas.toDataURL('image/png');
            link.download = `${chartId}_${new Date().toISOString().slice(0,10)}.png`;
            link.click();
        } else {
            alert('Gere os gráficos primeiro selecionando as rotas.');
        }
    }
</script>