<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Painel de Congestionamentos</title>
  <!-- CSS do Bootstrap e DataTables -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">
  <style>
    /* Estilos customizados, se necessário */
    .card-header { background-color: #f8f9fa; }
    .chart-container { position: relative; height: 500px; }
  </style>
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Painel de Congestionamentos</h1>

    <!-- Filtros -->
    <form id="filterForm" class="my-4">
      <div class="row g-3 align-items-end">
        <div class="col-md-4">
          <label for="start_date" class="form-label">Data Inicial:</label>
          <input type="date" class="form-control" id="start_date" name="start_date">
        </div>
        <div class="col-md-4">
          <label for="end_date" class="form-label">Data Final:</label>
          <input type="date" class="form-control" id="end_date" name="end_date">
        </div>
        <div class="col-md-3">
          <label for="group_by" class="form-label">Agrupar Por:</label>
          <select id="group_by" class="form-select">
            <option value="date">Data</option>
            <option value="street">Rua</option>
            <option value="hour">Hora</option>
          </select>
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
      </div>
    </form>
    
    <!-- Gráfico -->
    <div class="card my-4">
      <div class="card-header">
        <h3>Gráfico de Congestionamentos</h3>
      </div>
      <div class="card-body">
        <div class="chart-container">
          <canvas id="alertsChart"></canvas>
        </div>
      </div>
    </div>
    
    <!-- Tabela -->
    <div class="card my-4">
      <div class="card-header">
        <h3>Tabela de Congestionamentos</h3>
      </div>
      <div class="card-body" id="alertsTable">
        <!-- A tabela será carregada via AJAX -->
      </div>
    </div>
  </div>
  
  <!-- Scripts: Chart.js, ChartDataLabels, jQuery, DataTables e Buttons -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.0/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
  
  <script>
    // Função debounce para evitar múltiplos disparos de eventos
    function debounce(func, wait) {
      let timeout;
      return function(...args) {
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(this, args), wait);
      };
    }
    
    // Inicializa o DataTables para a tabela especificada
    function initializeDataTable(selector) {
      if (typeof $.fn.DataTable === 'undefined') {
        console.error("DataTables não está carregado.");
        return;
      }
      if ($(selector).length === 0) {
        console.error(`Elemento '${selector}' não encontrado.`);
        return;
      }
      if ($.fn.DataTable.isDataTable(selector)) {
        $(selector).DataTable().destroy();
        $(selector).empty();
      }
      $(selector).DataTable({
        paging: true,
        searching: true,
        ordering: true,
        responsive: true,
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
        },
        dom: 'Bfrtip',
        buttons: ['copy', 'excel', 'csv', 'pdf', 'print'],
        initComplete: function() {
          $('[data-bs-toggle="tooltip"]').tooltip();
        }
      });
    }
    
    // Atualiza o gráfico e a tabela com os dados filtrados
    function updateData(startDate, endDate, groupBy) {
      fetch(`api.php?action=get_jams&start_date=${startDate}&end_date=${endDate}`)
        .then(response => response.json())
        .then(data => {
          console.log("Dados da API:", data);
          // Agrupa os dados usando reduce
          let groupingKey;
          if (groupBy === 'date') {
            groupingKey = jam => jam.date_received.substring(0, 10);
          } else if (groupBy === 'street') {
            groupingKey = jam => jam.street || 'Desconhecida';
          } else if (groupBy === 'hour') {
            groupingKey = jam => jam.date_received.substring(11, 13);
          }
          const groupedData = data.jams.reduce((acc, jam) => {
            const key = groupingKey(jam);
            acc[key] = (acc[key] || 0) + 1;
            return acc;
          }, {});
          const labels = Object.keys(groupedData);
          const dataCounts = Object.values(groupedData);
          
          console.log("Labels: ", labels);
          console.log("Data Counts: ", dataCounts);
          
          const ctx = document.getElementById('alertsChart').getContext('2d');
          if (window.myChart) {
            window.myChart.destroy();
          }
          
          // Paleta fixa para as cores
          const palette = [
            'rgba(75, 192, 192, 0.6)',
            'rgba(255, 99, 132, 0.6)',
            'rgba(255, 205, 86, 0.6)',
            'rgba(54, 162, 235, 0.6)',
            'rgba(153, 102, 255, 0.6)',
            'rgba(201, 203, 207, 0.6)'
          ];
          const backgroundColors = dataCounts.map((_, index) => palette[index % palette.length]);
          
          const config = {
            type: 'bar',
            data: {
              labels: labels,
              datasets: [{
                label: 'Número de Congestionamentos',
                data: dataCounts,
                backgroundColor: backgroundColors,
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
              }]
            },
            options: {
              responsive: true,
              animation: {
                duration: 800,
                easing: 'easeOutQuart'
              },
              onClick: function(evt, elements) {
                if (elements.length > 0) {
                  const index = elements[0].index;
                  const selectedLabel = labels[index];
                  console.log(`Etiqueta selecionada: ${selectedLabel}`);
                  
                  const filteredJams = data.jams.filter(jam => {
                    if (groupBy === 'date') {
                      return jam.date_received.substring(0, 10) === selectedLabel;
                    } else if (groupBy === 'street') {
                      return jam.street === selectedLabel;
                    } else if (groupBy === 'hour') {
                      return jam.date_received.substring(11, 13) === selectedLabel;
                    }
                    return false;
                  });
                  
                  console.log("Congestionamentos filtrados:", filteredJams);
                  updateTable(filteredJams);
                }
              },
              plugins: {
                datalabels: {
                  anchor: 'end',
                  align: 'end',
                  formatter: function(value, context) {
                    const total = dataCounts.reduce((sum, current) => sum + current, 0);
                    const percentage = ((value / total) * 100).toFixed(1);
                    return `${value} (${percentage}%)`;
                  },
                  font: { weight: 'bold' }
                },
                tooltip: {
                  callbacks: {
                    label: function(tooltipItem) {
                      const value = tooltipItem.raw;
                      const total = dataCounts.reduce((sum, current) => sum + current, 0);
                      const percentage = ((value / total) * 100).toFixed(1);
                      return `${tooltipItem.label}: ${value} congestionamentos (${percentage}%)`;
                    }
                  }
                }
              },
              scales: {
                x: {
                  title: { display: true, text: groupBy === 'date' ? 'Data' : groupBy === 'hour' ? 'Hora' : 'Rua' }
                },
                y: {
                  title: { display: true, text: 'Número de Congestionamentos' },
                  beginAtZero: true
                }
              }
            },
            plugins: [ChartDataLabels]
          };
          
          window.myChart = new Chart(ctx, config);
          updateTable(data.jams); // Exibe todos os dados na tabela
        })
        .catch(error => console.error('Erro na requisição:', error));
    }
    
    // Atualiza a tabela com os dados recebidos
    function updateTable(data) {
      const alertsTable = document.getElementById('alertsTable');
      alertsTable.innerHTML = ''; // Limpa o conteúdo anterior
      
      if (data.length === 0) {
        alertsTable.innerHTML = '<p class="text-center text-muted">Nenhum congestionamento encontrado para as datas selecionadas.</p>';
      } else {
        let tableContent = '<table id="jamsTable" class="table table-bordered table-striped"><thead><tr>';
        tableContent += '<th>Cidade</th><th>Rua</th><th>Confiança</th><th>Data Recebida</th><th>Status</th></tr></thead><tbody>';
        
        data.forEach(jam => {
          tableContent += `<tr>
            <td title="Cidade: ${jam.city}">${jam.city}</td>
            <td title="Rua: ${jam.street}">${jam.street}</td>
            <td title="Confiança: ${jam.confidence}">${jam.confidence}</td>
            <td title="Data Recebida: ${jam.date_received}">${jam.date_received}</td>
            <td title="Status: ${jam.status == 1 ? "Ativo" : "Inativo"}">${jam.status == 1 ? "Ativo" : "Inativo"}</td>
          </tr>`;
        });
        
        tableContent += '</tbody></table>';
        alertsTable.innerHTML = tableContent;
        
        // Aguarda um breve momento para garantir que a tabela foi renderizada no DOM
        setTimeout(() => {
          initializeDataTable('#jamsTable');
        }, 100);
      }
    }
    
    // Define as datas padrão e carrega os dados iniciais
    window.onload = function() {
      const today = new Date();
      const startDate = new Date(today.getFullYear(), today.getMonth(), 1);
      today.setDate(today.getDate() + 1);
      const startDateFormatted = startDate.toISOString().split('T')[0];
      const endDateFormatted = today.toISOString().split('T')[0];
      document.getElementById('start_date').value = startDateFormatted;
      document.getElementById('end_date').value = endDateFormatted;
      const groupBy = document.getElementById('group_by').value;
      updateData(startDateFormatted, endDateFormatted, groupBy);
    };
    
    // Adiciona listener para o formulário de filtro com debounce
    $(function () {
      $('#filterForm').on('submit', debounce(function (event) {
        event.preventDefault();
        const startDate = $('#start_date').val();
        const endDate = $('#end_date').val();
        const groupBy = $('#group_by').val();
        updateData(startDate, endDate, groupBy);
      }, 300));
    });
  </script>
</body>
</html>
