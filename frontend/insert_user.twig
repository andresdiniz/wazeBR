<!-- Script para busca AJAX -->
<script>
    // Função genérica para busca
    function performSearch(inputId, resultId, functionName) {
        const inputField = document.getElementById(inputId);
        const resultList = document.getElementById(resultId);

        inputField.addEventListener('input', () => {
            const query = inputField.value;

            if (query.length >= 3) {
                fetch(`api.php?function=${functionName}&query=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        // Limpar resultados anteriores
                        resultList.innerHTML = '';

                        // Adicionar resultados
                        data.forEach(item => {
                            const li = document.createElement('li');
                            li.className = 'list-group-item';
                            li.textContent = `${item.name} (${item.email})`;
                            resultList.appendChild(li);
                        });
                    })
                    .catch(error => {
                        console.error('Erro ao buscar:', error);
                        resultList.innerHTML = '<li class="list-group-item text-danger">Erro ao buscar resultados.</li>';
                    });
            } else {
                resultList.innerHTML = ''; // Limpar resultados se o texto for muito curto
            }
        });
    }

    // Inicializar as buscas para cada modal
    document.addEventListener('DOMContentLoaded', () => {
        performSearch('searchAlterar', 'resultAlterar', 'alterar');
        performSearch('searchResetSenha', 'resultResetSenha', 'reset_senha');
        performSearch('searchApagar', 'resultApagar', 'apagar');
    });

    document.addEventListener('DOMContentLoaded', () => {
    // Função para carregar os parceiros no select
    function loadParceiros() {
        fetch('api.php?function=get_parceiros') // API PHP para buscar os parceiros
            .then(response => response.json())
            .then(data => {
                const parceiroSelect = document.getElementById('parceiro');
                parceiroSelect.innerHTML = ''; // Limpa opções anteriores

                // Adiciona uma opção padrão
                parceiroSelect.appendChild(new Option('Selecione um parceiro', '', true, true));

                // Preenche o select com as opções
                data.forEach(parceiro => {
                    const option = new Option(parceiro.nome, parceiro.id);
                    parceiroSelect.appendChild(option);
                });
            })
            .catch(error => console.error('Erro ao carregar parceiros:', error));
    }

    // Carregar parceiros ao abrir o modal
    const modalCadastrar = document.getElementById('modalCadastrar');
    modalCadastrar.addEventListener('show.bs.modal', loadParceiros);

    // Submeter o formulário de cadastro
    document.getElementById('salvarUsuario').addEventListener('click', () => {
        const form = document.getElementById('formCadastrar');
        const formData = new FormData(form);

        fetch('api.php?function=cadastrar_usuario', {
            method: 'POST',
            body: formData,
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Usuário cadastrado com sucesso!');
                    form.reset(); // Limpa o formulário
                    const modalInstance = bootstrap.Modal.getInstance(modalCadastrar);
                    modalInstance.hide(); // Fecha o modal
                } else {
                    alert('Erro ao cadastrar usuário: ' + data.message);
                }
            })
            .catch(error => console.error('Erro ao cadastrar usuário:', error));
    });
});

</script>
