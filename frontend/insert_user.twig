<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Administração de Usuários</h1>
        <button class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#helpModal">
            <i class="fas fa-question-circle"></i> Ajuda
        </button>
    </div>

    <!-- Cards Section -->
    <div class="row justify-content-center">
        {% if users.type == 1 or users.type == 2 %}
        <!-- Cadastrar -->
        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-primary shadow h-100">
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                    </div>
                    <h5 class="card-title text-primary">Novo Usuário</h5>
                    <button class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#modalCadastrar">
                        Cadastrar
                    </button>
                </div>
            </div>
        </div>

        <!-- Alterar -->
        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-warning shadow h-100">
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-edit fa-3x text-warning mb-3"></i>
                    </div>
                    <h5 class="card-title text-warning">Editar Usuário</h5>
                    <button class="btn btn-outline-warning w-100" data-bs-toggle="modal" data-bs-target="#modalAlterar">
                        Alterar
                    </button>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Reset Senha -->
        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-info shadow h-100">
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-key fa-3x text-info mb-3"></i>
                    </div>
                    <h5 class="card-title text-info">Resetar Senha</h5>
                    <button class="btn btn-outline-info w-100" data-bs-toggle="modal" data-bs-target="#modalResetSenha">
                        Resetar
                    </button>
                </div>
            </div>
        </div>

        {% if users.type == 1 or users.type == 2 %}
        <!-- Excluir -->
        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-danger shadow h-100">
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-user-times fa-3x text-danger mb-3"></i>
                    </div>
                    <h5 class="card-title text-danger">Excluir Usuário</h5>
                    <button class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#modalApagar">
                        Excluir
                    </button>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Modals -->
<!-- Modal Cadastrar -->
<div class="modal fade" id="modalCadastrar" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Novo Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formCadastrar" novalidate>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nome Completo <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="nome" required>
                        <div class="invalid-feedback">Por favor insira o nome completo</div>
                    </div>
                    
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nome de Usuário <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="usuario" required>
                                <div class="invalid-feedback">Escolha um nome de usuário</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Tipo de Usuário <span class="text-danger">*</span></label>
                                <select name="type" class="form-select" required>
                                    <option value="">Selecione...</option>
                                    {% if session.type == 1 %}
                                    <option value="1">Super Usuário</option>
                                    {% endif %}
                                    <option value="2">Administrador</option>
                                    <option value="3">Usuário de Teste</option>
                                    <option value="4">Usuário Geral</option>
                                </select>
                                <div class="invalid-feedback">Selecione um tipo</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-mail <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="email" required>
                        <div class="invalid-feedback">Insira um e-mail válido</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Senha Temporária <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="password" class="form-control" name="senha" required 
                                   pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$">
                            <button class="btn btn-outline-secondary" type="button" id="generatePassword">
                                <i class="fas fa-dice"></i>
                            </button>
                            <div class="invalid-feedback">Mínimo 8 caracteres com letras e números</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Parceiro Associado <span class="text-danger">*</span></label>
                        <select name="id_parceiro" class="form-select" required>
                            <option value="">Selecione um parceiro...</option>
                            {% for parceiro in parceiros %}
                            <option value="{{ parceiro.id }}">{{ parceiro.Nome }}</option>
                            {% endfor %}
                        </select>
                        <div class="invalid-feedback">Selecione um parceiro</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Alterar -->
<div class="modal fade" id="modalAlterar" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchAlterar" class="form-control" 
                           placeholder="Buscar usuário por nome, e-mail ou nome de usuário">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Usuário</th>
                                <th>E-mail</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="resultAlterar">
                            <!-- Results will be populated here -->
                        </tbody>
                    </table>
                </div>
                
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center" id="paginationAlterar"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Modal ResetSenha -->
<div class="modal fade" id="modalResetSenha" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resetar Senha</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchResetSenha" class="form-control" 
                           placeholder="Buscar usuário para resetar senha">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="list-group" id="resultResetSenha"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Apagar -->
<div class="modal fade" id="modalApagar" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchApagar" class="form-control" 
                           placeholder="Buscar usuário para excluir">
                    <button class="btn btn-outline-danger" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="list-group" id="resultApagar"></div>
                
                <div class="alert alert-danger mt-3 d-none" id="deleteWarning">
                    <i class="fas fa-exclamation-triangle"></i> Esta ação é irreversível! 
                    Todos os dados associados serão permanentemente removidos.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Confirmar Exclusão
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Help Modal -->
<div class="modal fade" id="helpModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-question-circle"></i> Ajuda</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>Guia Rápido:</h6>
                <ul>
                    <li><span class="badge bg-primary">Cadastrar:</span> Cria novos usuários com diferentes níveis de acesso</li>
                    <li><span class="badge bg-warning">Alterar:</span> Edita informações de usuários existentes</li>
                    <li><span class="badge bg-info">Resetar Senha:</span> Define uma nova senha temporária</li>
                    <li><span class="badge bg-danger">Excluir:</span> Remove permanentemente usuários do sistema</li>
                </ul>
                <p class="text-muted small">Permissões necessárias podem variar conforme seu nível de acesso</p>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Configurações globais
    const config = {
        debounceTime: 300,
        itemsPerPage: 10,
        csrfToken: '{{ csrf_token() }}' // Implementar CSRF
    };

    // Gerador de senha
    document.getElementById('generatePassword').addEventListener('click', () => {
        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
        let password = '';
        for (let i = 0; i < 10; i++) {
            password += chars.charAt(Math.floor(Math.random() * chars.length));
        }
        document.querySelector('input[name="senha"]').value = password;
    });

    // Validação de formulário
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()

    // Função de busca genérica
    const createSearchHandler = (inputId, resultId, endpoint) => {
        let timeout;
        document.getElementById(inputId).addEventListener('input', (e) => {
            clearTimeout(timeout);
            timeout = setTimeout(async () => {
                if (e.target.value.length >= 3) {
                    try {
                        const response = await fetch(`${endpoint}?q=${encodeURIComponent(e.target.value)}`);
                        const data = await response.json();
                        updateResults(resultId, data);
                    } catch (error) {
                        console.error('Search error:', error);
                    }
                }
            }, config.debounceTime);
        });
    };

    // Atualização de resultados
    const updateResults = (containerId, data) => {
        const container = document.getElementById(containerId);
        if (data.success && data.users.length > 0) {
            container.innerHTML = data.users.map(user => `
                <tr>
                    <td>${user.nome}</td>
                    <td>${user.username}</td>
                    <td>${user.email}</td>
                    <td>
                        <button class="btn btn-sm btn-warning edit-btn" data-id="${user.id}">
                            <i class="fas fa-edit"></i>
                        </button>
                    </td>
                </tr>
            `).join('');
        } else {
            container.innerHTML = '<tr><td colspan="4" class="text-center">Nenhum resultado encontrado</td></tr>';
        }
    };

    // Inicializar buscas
    createSearchHandler('searchAlterar', 'resultAlterar', '/api/users/search');
    createSearchHandler('searchResetSenha', 'resultResetSenha', '/api/users/search');
    createSearchHandler('searchApagar', 'resultApagar', '/api/users/search');

    // Gerenciamento de estado dos modals
    const modals = ['Cadastrar', 'Alterar', 'ResetSenha', 'Apagar'];
    modals.forEach(modal => {
        const modalElement = document.getElementById(`modal${modal}`);
        modalElement.addEventListener('shown.bs.modal', () => {
            document.getElementById(`search${modal}`).focus();
        });
    });

    // Confirmação de exclusão
    document.getElementById('confirmDelete').addEventListener('click', async () => {
        const selectedUser = document.querySelector('#resultApagar .active');
        if (selectedUser) {
            const userId = selectedUser.dataset.id;
            try {
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'X-CSRF-TOKEN': config.csrfToken
                    }
                });
                const result = await response.json();
                if (result.success) {
                    showToast('success', 'Usuário excluído com sucesso');
                    $('#modalApagar').modal('hide');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showToast('error', 'Erro ao excluir usuário');
            }
        }
    });

    // Feedback visual
    const showToast = (type, message) => {
        const toastContainer = document.createElement('div');
        toastContainer.innerHTML = `
            <div class="toast align-items-center text-white bg-${type} border-0">
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        `;
        document.body.appendChild(toastContainer);
        new bootstrap.Toast(toastContainer.querySelector('.toast')).show();
        setTimeout(() => toastContainer.remove(), 5000);
    };
});
</script>

