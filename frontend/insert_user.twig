<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-users-cog me-2"></i>ADMINISTRAR USUÁRIOS</h1>
    </div>

    <!-- Cards Grid -->
    <div class="row justify-content-center g-4">
        {% if users.type == 1 or users.type == 2 %}
        <!-- Card Cadastrar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-primary text-white mb-3">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                    <h5 class="card-title text-primary mb-1">Cadastrar</h5>
                    <p class="card-text text-muted small">Novos usuários no sistema</p>
                    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalCadastrar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>

        <!-- Card Alterar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning text-white mb-3">
                        <i class="fas fa-edit fa-2x"></i>
                    </div>
                    <h5 class="card-title text-warning mb-1">Alterar</h5>
                    <p class="card-text text-muted small">Editar informações</p>
                    <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalAlterar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Card Reset Senha -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-info text-white mb-3">
                        <i class="fas fa-key fa-2x"></i>
                    </div>
                    <h5 class="card-title text-info mb-1">Reset de Senha</h5>
                    <p class="card-text text-muted small">Redefinição de acesso</p>
                    <button class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalResetSenha">
                        Acessar
                    </button>
                </div>
            </div>
        </div>

        {% if users.type == 1 or users.type == 2 %}
        <!-- Card Apagar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-danger text-white mb-3">
                        <i class="fas fa-user-times fa-2x"></i>
                    </div>
                    <h5 class="card-title text-danger mb-1">Apagar</h5>
                    <p class="card-text text-muted small">Remover usuários</p>
                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalApagar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Modal Cadastrar (Atualizado) -->
<div class="modal fade" id="modalCadastrar" tabindex="-1" aria-labelledby="modalCadastrarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Novo Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formCadastrar" class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="nomeUsuario" class="form-label">Nome Completo</label>
                            <input type="text" class="form-control" id="nomeUsuario" name="nome" required>
                            <div class="invalid-feedback">Por favor insira o nome completo</div>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="nomeDeUsuario" class="form-label">Nome de Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-at"></i></span>
                                <input type="text" class="form-control" id="nomeDeUsuario" name="usuario" required>
                            </div>
                            <div class="invalid-feedback">Escolha um nome de usuário</div>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="typeSelect" class="form-label">Nível de Acesso</label>
                            <select id="typeSelect" name="type" class="form-select" required>
                                <option value="" disabled selected>Selecione...</option>
                                {% if session.type == 1 %}
                                <option value="1">Super User / Dev</option>
                                {% endif %}
                                <option value="2">Administrador</option>
                                <option value="3">Teste/Treinamento</option>
                                <option value="4">Usuário Geral</option>
                            </select>
                            <div class="invalid-feedback">Selecione um nível de acesso</div>
                        </div>
                        
                        <div class="col-12">
                            <label for="emailUsuario" class="form-label">E-mail</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" id="emailUsuario" name="email" required>
                            </div>
                            <div class="invalid-feedback">Insira um e-mail válido</div>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="senhaUsuario" class="form-label">Senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="senhaUsuario" name="senha" 
                                       pattern="^(?=.*[A-Za-z])(?=.*\d).{8,}$" required>
                                <button type="button" class="btn btn-outline-secondary" id="generatePass">
                                    <i class="fas fa-dice"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">Mínimo 8 caracteres alfanuméricos</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="parceirosSelect" class="form-label">Parceiro</label>
                            <select id="parceirosSelect" name="id_parceiro" class="form-select" required>
                                <option value="" disabled selected>Selecione...</option>
                                {% for parceiro in parceiros %}
                                    <option value="{{ parceiro.id }}">{{ parceiro.Nome }}</option>
                                {% else %}
                                    <option disabled>Nenhum parceiro encontrado</option>
                                {% endfor %}
                            </select>
                            <div class="invalid-feedback">Selecione um parceiro</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="spinner-border spinner-border-sm d-none" aria-hidden="true"></span>
                        Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Alterar (Corrigido) -->
<div class="modal fade" id="modalAlterar" tabindex="-1" aria-labelledby="modalAlterarLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Editar Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchAlterar" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Usuário</th>
                                <th>E-mail</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="resultAlterar">
                            <!-- Resultados aqui -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal ResetSenha (Corrigido) -->
<div class="modal fade" id="modalResetSenha" tabindex="-1" aria-labelledby="modalResetSenhaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fas fa-key me-2"></i>Resetar Senha</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchResetSenha" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="list-group" id="resultResetSenha">
                    <!-- Resultados aqui -->
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Apagar (Corrigido) -->
<div class="modal fade" id="modalApagar" tabindex="-1" aria-labelledby="modalApagarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchApagar" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-danger" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="list-group" id="resultApagar">
                    <!-- Resultados aqui -->
                </div>
                
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    Esta ação é irreversível! Todos os dados serão permanentemente removidos.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Confirmar Exclusão</button>
            </div>
        </div>
    </div>
</div>

<!-- Estilos Adicionais -->
<style>
.hover-scale {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
}
.hover-scale:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}
.icon-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
</style>

<script>
// Gerador de Senha
document.getElementById('generatePass').addEventListener('click', function() {
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%&';
    let password = '';
    for (let i = 0; i < 12; i++) {
        password += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    document.getElementById('senhaUsuario').value = password;
});

// Validação de Formulário
(() => {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
        }
        form.classList.add('was-validated')
        }, false)
    })
})()
</script>