<!-- Modal Apagar (Corrigido) -->
<div class="modal fade" id="modalApagar" tabindex="-1" aria-labelledby="modalApagarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchApagar" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-danger" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="list-group" id="resultApagar">
                    <!-- Resultados aqui -->
                </div>
                
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    Esta ação é irreversível! Todos os dados serão permanentemente removidos.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Confirmar Exclusão</button>
            </div>
        </div>
    </div>
</div>

<!-- Estilos Adicionais -->
<style>
.hover-scale {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
}
.hover-scale:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}
.icon-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Configurações globais
    const config = {
        apiBase: '../api.php',
        csrfToken: document.querySelector('meta[name="csrf-token"]')?.content,
        endpoints: {
            users: '/users',
            resetPassword: '/reset-password',
            parceiros: '/parceiros'
        }
    };

    // Elementos dos modais
    const modals = {
        cadastrar: new bootstrap.Modal('#modalCadastrar'),
        alterar: new bootstrap.Modal('#modalAlterar'),
        resetSenha: new bootstrap.Modal('#modalResetSenha'),
        apagar: new bootstrap.Modal('#modalApagar')
    };

    // Toast Notifications
    const showToast = (type, message) => {
        const toastContainer = document.getElementById('toastContainer') || (() => {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.style.position = 'fixed';
            container.style.top = '20px';
            container.style.right = '20px';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
            return container;
        })();

        const toast = document.createElement('div');
        toast.innerHTML = `
            <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        `;

        toastContainer.appendChild(toast);
        new bootstrap.Toast(toast, { autohide: true, delay: 3000 }).show();
    };

    // Função genérica para requisições
    const apiRequest = async (endpoint, method, body = null) => {
        try {
            const response = await fetch(`${config.apiBase}${endpoint}`, {
                method,
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': config.csrfToken
                },
                body: body ? JSON.stringify(body) : null
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.message || 'Erro na requisição');
            }

            return await response.json();
        } catch (error) {
            console.error('Erro:', error);
            throw error;
        }
    };

    // 1. Modal Cadastrar
    const initCadastrarModal = () => {
        const form = document.getElementById('formCadastrar');
        const btnSubmit = form.querySelector('button[type="submit"]');
        const spinner = btnSubmit.querySelector('.spinner-border');

        // Gerador de Senha
        document.getElementById('generatePass').addEventListener('click', () => {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%&';
            document.getElementById('senhaUsuario').value = Array.from({length: 12}, () => 
                chars[Math.floor(Math.random() * chars.length)]).join('');
        });

        // Validação em tempo real
        form.querySelectorAll('input, select').forEach(field => {
            field.addEventListener('input', () => {
                if (field.hasAttribute('required')) {
                    field.classList.toggle('is-invalid', !field.value.trim());
                }
                if (field.id === 'emailUsuario') {
                    const isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(field.value);
                    field.classList.toggle('is-invalid', !isValid);
                }
            });
        });

        // Submit do formulário
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            btnSubmit.disabled = true;
            spinner.classList.remove('d-none');

            try {
                const formData = {
                    nome: document.getElementById('nomeUsuario').value.trim(),
                    usuario: document.getElementById('nomeDeUsuario').value.trim(),
                    email: document.getElementById('emailUsuario').value.trim().toLowerCase(),
                    senha: document.getElementById('senhaUsuario').value,
                    type: document.getElementById('typeSelect').value,
                    id_parceiro: document.getElementById('parceirosSelect').value
                };

                await apiRequest(config.endpoints.users, 'POST', formData);
                
                showToast('success', 'Usuário cadastrado com sucesso!');
                form.reset();
                modals.cadastrar.hide();
                setTimeout(window.location.reload, 2000);

            } catch (error) {
                showToast('danger', error.message);
            } finally {
                btnSubmit.disabled = false;
                spinner.classList.add('d-none');
                form.classList.remove('was-validated');
            }
        });
    };

    // 2. Modal Alterar
    const initAlterarModal = () => {
        const searchInput = document.getElementById('searchAlterar');
        const resultsContainer = document.getElementById('resultAlterar');
        let timeout = null;

        // Busca de usuários
        const searchUsers = async (query) => {
            try {
                const data = await apiRequest(`${config.endpoints.users}?q=${encodeURIComponent(query)}`, 'GET');
                renderResults(data.users);
            } catch (error) {
                showToast('danger', error.message);
            }
        };

        // Renderização dos resultados
        const renderResults = (users) => {
            resultsContainer.innerHTML = users.map(user => `
                <tr>
                    <td>${user.nome}</td>
                    <td>${user.usuario}</td>
                    <td>${user.email}</td>
                    <td>
                        <button class="btn btn-sm btn-warning btn-edit" data-id="${user.id}">
                            <i class="fas fa-edit"></i>
                        </button>
                    </td>
                </tr>
            `).join('');
        };

        // Evento de busca
        searchInput.addEventListener('input', () => {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                if (searchInput.value.length >= 3) searchUsers(searchInput.value);
            }, 300);
        });

        // Edição de usuário
        resultsContainer.addEventListener('click', async (e) => {
            if (e.target.closest('.btn-edit')) {
                const userId = e.target.closest('.btn-edit').dataset.id;
                try {
                    const user = await apiRequest(`${config.endpoints.users}/${userId}`, 'GET');
                    openEditModal(user);
                } catch (error) {
                    showToast('danger', error.message);
                }
            }
        });
    };

    // 3. Modal ResetSenha
    const initResetSenhaModal = () => {
        const searchInput = document.getElementById('searchResetSenha');
        const resultsContainer = document.getElementById('resultResetSenha');
        const btnConfirm = document.querySelector('#modalResetSenha .btn-primary');

        // Busca e renderização
        const searchUsers = async (query) => {
            try {
                const data = await apiRequest(`${config.endpoints.users}?q=${encodeURIComponent(query)}`, 'GET');
                resultsContainer.innerHTML = data.users.map(user => `
                    <button type="button" class="list-group-item list-group-item-action" data-id="${user.id}">
                        ${user.nome} (${user.email})
                    </button>
                `).join('');
            } catch (error) {
                showToast('danger', error.message);
            }
        };

        // Evento de busca
        searchInput.addEventListener('input', () => {
            if (searchInput.value.length >= 3) searchUsers(searchInput.value);
        });

        // Confirmação de reset
        btnConfirm.addEventListener('click', async () => {
            const selected = resultsContainer.querySelector('.active');
            if (!selected) return;

            try {
                await apiRequest(config.endpoints.resetPassword, 'POST', { userId: selected.dataset.id });
                showToast('success', 'Senha resetada com sucesso!');
                modals.resetSenha.hide();
            } catch (error) {
                showToast('danger', error.message);
            }
        });
    };

    // 4. Modal Apagar
    const initApagarModal = () => {
        const searchInput = document.getElementById('searchApagar');
        const resultsContainer = document.getElementById('resultApagar');
        const btnConfirm = document.querySelector('#modalApagar .btn-danger');

        // Busca e renderização
        const searchUsers = async (query) => {
            try {
                const data = await apiRequest(`${config.endpoints.users}?q=${encodeURIComponent(query)}`, 'GET');
                resultsContainer.innerHTML = data.users.map(user => `
                    <button type="button" class="list-group-item list-group-item-action" data-id="${user.id}">
                        ${user.nome} (${user.email})
                    </button>
                `).join('');
            } catch (error) {
                showToast('danger', error.message);
            }
        };

        // Evento de busca
        searchInput.addEventListener('input', () => {
            if (searchInput.value.length >= 3) searchUsers(searchInput.value);
        });

        // Confirmação de exclusão
        btnConfirm.addEventListener('click', async () => {
            const selected = resultsContainer.querySelector('.active');
            if (!selected) return;

            try {
                await apiRequest(`${config.endpoints.users}/${selected.dataset.id}`, 'DELETE');
                showToast('success', 'Usuário excluído com sucesso!');
                modals.apagar.hide();
                setTimeout(window.location.reload, 1500);
            } catch (error) {
                showToast('danger', error.message);
            }
        });
    };

    // Inicialização dos modais
    initCadastrarModal();
    initAlterarModal();
    initResetSenhaModal();
    initApagarModal();

    // Carregar parceiros
    const loadParceiros = async () => {
        try {
            const data = await apiRequest(config.endpoints.parceiros, 'GET');
            const select = document.getElementById('parceirosSelect');
            select.innerHTML = data.map(p => `<option value="${p.id}">${p.Nome}</option>`).join('');
        } catch (error) {
            showToast('danger', error.message);
        }
    };

    loadParceiros();
});
</script>