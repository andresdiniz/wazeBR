<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-users-cog me-2"></i>ADMINISTRAR USUÁRIOS</h1>
    </div>

    <!-- Cards Grid -->
    <div class="row justify-content-center g-4">
        {% if users.type == 1 or users.type == 2 %}
        <!-- Card Cadastrar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-primary text-white mb-3">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                    <h5 class="card-title text-primary mb-1">Cadastrar</h5>
                    <p class="card-text text-muted small">Novos usuários no sistema</p>
                    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal"
                        data-bs-target="#modalCadastrar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>

        <!-- Card Alterar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-warning text-white mb-3">
                        <i class="fas fa-edit fa-2x"></i>
                    </div>
                    <h5 class="card-title text-warning mb-1">Alterar</h5>
                    <p class="card-text text-muted small">Editar informações</p>
                    <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal"
                        data-bs-target="#modalAlterar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Card Reset Senha -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-info text-white mb-3">
                        <i class="fas fa-key fa-2x"></i>
                    </div>
                    <h5 class="card-title text-info mb-1">Reset de Senha</h5>
                    <p class="card-text text-muted small">Redefinição de acesso</p>
                    <button class="btn btn-outline-info btn-sm" data-bs-toggle="modal"
                        data-bs-target="#modalResetSenha">
                        Acessar
                    </button>
                </div>
            </div>
        </div>

        {% if users.type == 1 or users.type == 2 %}
        <!-- Card Apagar -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card shadow-sm h-100 hover-scale">
                <div class="card-body text-center">
                    <div class="icon-circle bg-danger text-white mb-3">
                        <i class="fas fa-user-times fa-2x"></i>
                    </div>
                    <h5 class="card-title text-danger mb-1">Apagar</h5>
                    <p class="card-text text-muted small">Remover usuários</p>
                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalApagar">
                        Acessar
                    </button>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
<!-- Modals -->
{% include 'users_modals.twig' %}

<!--Modal Alterar -->

<div class="modal fade" id="modalAlterar" tabindex="-1" aria-labelledby="modalAlterarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAlterarLabel">Alterar Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAlterar" novalidate> <input type="hidden" id="editarIdUsuario" name="id">

                    <div class="mb-3">
                        <label for="editarNomeUsuario" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="editarNomeUsuario" name="nome" required>
                        <div class="invalid-feedback">
                            Por favor, insira o nome do usuário.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editarEmailUsuario" class="form-label">Email</label>
                        <input type="email" class="form-control" id="editarEmailUsuario" name="email" required>
                        <div class="invalid-feedback">
                            Por favor, insira um email válido.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editarUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="editarUsername" name="username" required>
                        <div class="invalid-feedback">
                            Por favor, insira o username.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editarType" class="form-label">Tipo</label>
                        <select class="form-select" id="editarType" name="type" required>
                            <option value="">Selecione o Tipo</option>
                            <option value="1">Administrador</option>
                            <option value="2">Editor</option>
                            <option value="3">Visualizador</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor, selecione o tipo de usuário.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editarParceiro" class="form-label">ID Parceiro</label>
                        <input type="number" class="form-control" id="editarParceiro" name="id_parceiro" required>
                        <div class="invalid-feedback">
                            Por favor, insira o ID do parceiro.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        Salvar Alterações
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Estilos Adicionais -->
<style>
    .hover-scale {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }

    .hover-scale:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    @media (max-width: 768px) {
        .modal-lg {
            margin: 1rem;
        }

        .card {
            margin-bottom: 1rem;
        }
    }
</style>

