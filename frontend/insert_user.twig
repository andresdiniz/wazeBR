<script>
    // Configuração inicial
    const id_parceiro = {{ users.id_parceiro }};
    console.log("ID do Parceiro:", id_parceiro);

    document.addEventListener("DOMContentLoaded", function() {
        // Inicializar tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Adicionar listeners para os botões dos modais
        const modalButtons = document.querySelectorAll('[data-bs-toggle="modal"]');
        modalButtons.forEach(button => {
            button.addEventListener('click', function() {
                const targetModal = this.getAttribute('data-bs-target');
                console.log('Abrindo modal:', targetModal);
            });
        });

        // Carregar estatísticas (se disponível)
        {% if users.type == 1 or users.type == 2 %}
        loadUserStats();
        {% endif %}

        // Animação de entrada suave
        const cards = document.querySelectorAll('.action-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease';
                card.style.opacity = '1';
            }, index * 100);
        });

        console.log('Página de administração carregada com sucesso!');
    });

    // Função para carregar estatísticas (exemplo)
    function loadUserStats() {
        // Aqui você pode fazer uma chamada AJAX para carregar estatísticas reais
        // Por enquanto, vamos usar valores de exemplo
        setTimeout(() => {
            const stats = {
                totalUsers: Math.floor(Math.random() * 100) + 50,
                activeUsers: Math.floor(Math.random() * 80) + 40,
                adminUsers: Math.floor(Math.random() * 10) + 5,
                recentLogins: Math.floor(Math.random() * 30) + 10
            };

            animateValue('totalUsers', 0, stats.totalUsers, 1500);
            animateValue('activeUsers', 0, stats.activeUsers, 1500);
            animateValue('adminUsers', 0, stats.adminUsers, 1500);
            animateValue('recentLogins', 0, stats.recentLogins, 1500);
        }, 500);
    }

    // Função para animar números
    function animateValue(id, start, end, duration) {
        const element = document.getElementById(id);
        if (!element) return;

        const range = end - start;
        const increment = end > start ? 1 : -1;
        const stepTime = Math.abs(Math.floor(duration / range));
        let current = start;

        const timer = setInterval(() => {
            current += increment;
            element.textContent = current;
            if (current === end) {
                clearInterval(timer);
            }
        }, stepTime);
    }

    // Função para mostrar loading
    function showLoading() {
        document.getElementById('loadingOverlay').classList.add('active');
    }

    // Função para esconder loading
    function hideLoading() {
        document.getElementById('loadingOverlay').classList.remove('active');
    }

    // Event listeners para formulários
    document.addEventListener('submit', function(e) {
        if (e.target.tagName === 'FORM') {
            showLoading();
        }
    });

    // Feedback visual para ações
    function showSuccessMessage(message) {
        if (typeof $.notify !== 'undefined') {
            $.notify(message, {
                position: "top right",
                className: "success",
                autoHideDelay: 3000
            });
        } else {
            alert(message);
        }
    }

    function showErrorMessage(message) {
        if (typeof $.notify !== 'undefined') {
            $.notify(message, {
                position: "top right",
                className: "error",
                autoHideDelay: 4000
            });
        } else {
            alert(message);
        }
    }
</script>

