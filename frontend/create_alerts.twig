        const tipoSelect = document.getElementById('tipo');
        const subtipoSelect = document.getElementById('subtipo');

        // Dados de subtipos por tipo fornecidos pelo Twig
        const subtiposPorTipo = {{ subtiposPorTipo| json_encode | raw
    }};

