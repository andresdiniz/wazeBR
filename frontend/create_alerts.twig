    // ===== Consulta de Rua e Segmento (Core da L√≥gica) =====
    
    /**
    * Consulta um segmento de rua pr√≥ximo √†s coordenadas informadas (Overpass API).
    */
    async function getStreetSegment(map, lat, lon) {
        const radiusValues = [10, 20, 50, 100]; // Diminu√≠ o raio para ser mais preciso
        let streetName = 'Nome da Rua Desconhecido';
        
        // Limpa o seletor de rua
        const ruaSelect = document.getElementById('ruaSelect');
        ruaSelect.innerHTML = '<option value="">Buscando rua...</option>';
        document.getElementById('segmentSelectionContainer').style.display = 'none';

        for (let radius of radiusValues) {
            const query = `
            [out:json];
            (
                node(around:${radius}, ${lat}, ${lon});
                way(bn)["highway"];
                >;
            );
            out geom;
            `;
            const url = `https://overpass-api.de/api/interpreter?data=${encodeURIComponent(query)}`;

            try {
                const response = await fetch(url);
                const data = await response.json();

                if (data.elements && data.elements.length > 0) {
                    const ways = [];

                    data.elements.forEach(el => {
                        // Filtra apenas ways com tag 'highway' e que possuam um 'name'
                        if (el.type === 'way' && el.tags && el.tags.name) {
                            ways.push(el);
                        }
                    });
                    
                    let closestWay = null;
                    let minDistance = Infinity;

                    // Itera sobre as ways para encontrar a mais pr√≥xima usando Turf.js
                    ways.forEach(way => {
                        const wayCoords = way.geometry.map(g => [g.lon, g.lat]); // [lon, lat]
                        if (wayCoords.length < 2) return;
                        
                        // Calcula a dist√¢ncia do ponto de clique para a via (em metros)
                        const distance = turf.pointToLineDistance(turf.point([lon, lat]), turf.lineString(wayCoords), { units: 'meters' });
                        
                        if (distance < minDistance) {
                            minDistance = distance;
                            closestWay = way;
                        }
                    });
                    
                    if (closestWay) {
                        const fullWayGeometry = closestWay.geometry.map(g => [g.lon, g.lat]); // [lon, lat]
                        streetName = closestWay.tags.name || 'Nome da Rua Desconhecido';
                        
                        // 1. Tenta encontrar n√≥s de intersec√ß√£o (n√≥s que s√£o compartilhados por outras ways)
                        const intersections = closestWay.nodes.filter(nodeId => 
                            data.elements.some(el => el.type === 'way' && el.id !== closestWay.id && el.nodes && el.nodes.includes(nodeId))
                        );

                        if (intersections.length >= 2) {
                            // Mapeia os IDs dos n√≥s para os √≠ndices na lista de n√≥s da via.
                            const nodeIds = closestWay.nodes;
                            const intersectionIndices = intersections
                                .map(id => nodeIds.indexOf(id))
                                .filter(index => index !== -1);
                                
                            intersectionIndices.sort((a, b) => a - b);
                            
                            // Seleciona o segmento entre a primeira e a √∫ltima intersec√ß√£o.
                            const startNodeId = intersections[0];
                            const endNodeId = intersections[intersections.length-1];
                            
                            // Encontra a geometria (lon, lat) para o segmento entre os n√≥s de intersec√ß√£o.
                            // Isso √© complexo. Uma simplifica√ß√£o √© achar o √≠ndice dos n√≥s de intersec√ß√£o
                            // na geometria completa, mas n√£o √© garantido 1:1. 
                            
                            // Usamos um algoritmo mais robusto para encontrar o segmento que inclui o ponto clicado
                            // e que est√° delimitado por intersec√ß√µes, se poss√≠vel.

                            // Vamos usar a l√≥gica mais simples do seu snippet, baseada nos √≠ndices da lista de 'nodes' do Overpass:
                            const startIndexInGeometry = closestWay.geometry.findIndex(g => g.id === startNodeId);
                            const endIndexInGeometry = closestWay.geometry.findIndex(g => g.id === endNodeId);

                            let segmentNodes = [];
                            if (startIndexInGeometry !== -1 && endIndexInGeometry !== -1 && startIndexInGeometry < endIndexInGeometry) {
                                segmentNodes = fullWayGeometry.slice(startIndexInGeometry, endIndexInGeometry + 1);
                            }

                            if (segmentNodes.length > 1) {
                                console.log(`Segmento de intersec√ß√£o encontrado com raio de ${radius} metros.`);
                                
                                promptSegmentSelection(map, { 
                                    segment: segmentNodes, 
                                    fullWay: fullWayGeometry,
                                    type: 'intersection',
                                    streetName: streetName
                                }, lat, lon);
                                return;
                            }
                        }
                        
                        // Se n√£o houver interse√ß√µes suficientes ou a l√≥gica falhar, oferece a via completa
                        console.log(`Via completa oferecida com raio de ${radius} metros.`);
                        promptSegmentSelection(map, { 
                            segment: fullWayGeometry, // [lon, lat]
                            fullWay: fullWayGeometry, 
                            type: 'full',
                            streetName: streetName
                        }, lat, lon);
                        return;
                    }
                }
            } catch (error) {
                console.error(`Erro na consulta com raio ${radius}:`, error);
            }
        }
        
        // Se a busca falhar
        ruaSelect.innerHTML = '<option value="">Nenhuma rua encontrada</option>';
        showAlert('Nenhum segmento adequado foi encontrado. Tente clicar em outro local.', 'warning');
    }

    // ===== Fun√ß√µes de Desenho e Estado (Mantidas) =====

    function drawSegment(segmentNodes, direction = 'both') {
        try {
            if (currentSegmentLayer) {
                map.removeLayer(currentSegmentLayer);
            }

            // Converte coordenadas para [lat, lng] (assume que segmentNodes √© [lon, lat])
            let latLngs = segmentNodes.map(coord => [coord[1], coord[0]]);
            
            const color = direction === 'reversed' ? MAP_CONFIG.SEGMENT_COLORS.reversed :
                            direction === 'original' ? MAP_CONFIG.SEGMENT_COLORS.original :
                            MAP_CONFIG.SEGMENT_COLORS.both;
            
            const lineStyle = { 
                color: color, 
                weight: 5, 
                opacity: 0.8,
                lineCap: 'round',
                lineJoin: 'round'
            };

            // Cria a linha principal
            const segmentLine = L.polyline(latLngs, lineStyle).addTo(map);
            
            let arrowDecorator = null;
            if (direction !== 'both') {
                // Inverte a linha se a dire√ß√£o for 'reversed' para que as setas apontem corretamente
                if (direction === 'reversed') {
                    // Cuidado: segmentNodes √© o array original, s√≥ inverte a linha para o desenho
                    segmentLine.setLatLngs([...latLngs].reverse()); 
                }

                const arrowOptions = {
                    patterns: [
                        {
                            offset: '50%',
                            repeat: '100px',
                            symbol: L.Symbol.arrowHead({
                                pixelSize: MAP_CONFIG.ARROW_OPTIONS.pixelSize,
                                polygon: false,
                                pathOptions: {
                                    color: color,
                                    weight: MAP_CONFIG.ARROW_OPTIONS.weight,
                                    opacity: 0.8
                                }
                            })
                        }
                    ]
                };
                arrowDecorator = L.polylineDecorator(segmentLine, arrowOptions).addTo(map);
            }

            const layersToAdd = [segmentLine];
            if (arrowDecorator) {
                layersToAdd.push(arrowDecorator);
            }
            currentSegmentLayer = L.layerGroup(layersToAdd).addTo(map);
            
            map.fitBounds(segmentLine.getBounds(), { padding: [20, 20] });
            
            saveSegmentState(segmentNodes, direction);
            updateDirectionControls(direction);
            
            return currentSegmentLayer;
        } catch (error) {
            console.error('Erro ao desenhar segmento:', error);
            showAlert('Erro ao desenhar o segmento no mapa.', 'error');
        }
    }

    function updateDirectionControls(direction) {
        const directionSelect = document.getElementById('directionSelect');
        if (directionSelect) {
            atualizarDirecoes(directionSelect); 
            directionSelect.value = direction;
        }
        const reverseBtn = document.getElementById('reverseBtn');
        if (reverseBtn) {
            reverseBtn.style.display = (direction === 'original' || direction === 'reversed') ? 'block' : 'none';
        }
    }

    function saveSegmentState(segment, direction) {
        localStorage.setItem(MAP_CONFIG.LOCAL_STORAGE_KEYS.SEGMENT, JSON.stringify(segment));
        localStorage.setItem(MAP_CONFIG.LOCAL_STORAGE_KEYS.DIRECTION, direction);
    }
    
    function inverterCoordenadas(segmentNodes, map, currentDirection) {
        // Inverte os n√≥s reais (segmentNodes √© [lon, lat])
        const reversedSegment = [...segmentNodes].reverse(); 
        const newDirection = (currentDirection === 'reversed' ? 'original' : 'reversed');
        
        // Desenha o segmento invertido com a nova dire√ß√£o
        drawSegment(reversedSegment, newDirection); 
        
        // Atualiza o estado global e local storage
        currentSegmentNodes = reversedSegment; // Atualiza a vari√°vel global
        saveSegmentState(reversedSegment, newDirection); 
        document.getElementById('directionSelect').value = newDirection; 
        
        return reversedSegment;
    }

