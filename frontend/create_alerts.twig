<script>
    // Inicializando o mapa
    var map = L.map('map').setView([-23.550520, -46.633308], 13); // Posição inicial (São Paulo)

    // Adicionando camada do OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 18,
    }).addTo(map);

    // Variáveis globais
    var marcadorSelecionado = null;  // Para armazenar o marcador no mapa
    var polilinhaAtual = null;       // Para armazenar a polilinha desenhada no mapa

    // Função para pegar a localização atual do usuário
    function localizarUsuario() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (posicao) {
                var latitude = posicao.coords.latitude;
                var longitude = posicao.coords.longitude;
                map.setView([latitude, longitude], 13);
                L.marker([latitude, longitude]).addTo(map).bindPopup("Você está aqui").openPopup();
            }, function () {
                alert("Não foi possível obter sua localização.");
            });
        } else {
            alert("Geolocalização não é suportada neste navegador.");
        }
    }

    // Chama a função para localizar o usuário
    localizarUsuario();

    // Função para desenhar a polilinha entre interseções ao clicar no mapa
    function desenharPolilinha(e) {
        var coords = e.latlng;

        // Atualizar as coordenadas no campo
        document.getElementById('coordenadas').value = coords.lat.toFixed(6) + ", " + coords.lng.toFixed(6);

        // Remove marcador anterior, se existir
        if (marcadorSelecionado) {
            map.removeLayer(marcadorSelecionado);
        }

        // Adiciona um novo marcador no local clicado
        marcadorSelecionado = L.marker([coords.lat, coords.lng]).addTo(map);
        marcadorSelecionado.bindPopup("Você clicou aqui: " + coords.lat.toFixed(6) + ", " + coords.lng.toFixed(6)).openPopup();

        // Consultar interseções e desenhar polilinha
        consultarIntersecoes(coords.lat, coords.lng);
    }

    // Adiciona evento de clique no mapa para desenhar a polilinha
    map.on('click', desenharPolilinha);

    // Função para consultar as interseções próximas
    function consultarIntersecoes(lat, lon) {
    const raioBusca = 300; // Aumentado para garantir interseções
    const urlOverpass = `https://overpass-api.de/api/interpreter?data=[out:json];node(around:${raioBusca},${lat},${lon})[highway];out body;`;

    console.log("Consultando API Overpass:", urlOverpass);

    fetch(urlOverpass)
        .then(response => {
            if (!response.ok) {
                throw new Error(`Erro na API Overpass: ${response.statusText}`);
            }
            return response.json();
        })
        .then(data => {
            console.log("Resposta da API Overpass:", data);

            if (!data.elements || data.elements.length === 0) {
                console.warn("Nenhuma interseção encontrada.");
                marcadorSelecionado.bindPopup("Nenhuma interseção encontrada.").openPopup();
                return;
            }

            const intersecoes = data.elements.map(elemento => ({
                id: elemento.id,
                lat: elemento.lat,
                lon: elemento.lon,
            }));

            console.log("Interseções encontradas:", intersecoes);

            if (intersecoes.length < 2) {
                console.warn("Menos de duas interseções encontradas.");
                marcadorSelecionado.bindPopup("Menos de duas interseções encontradas.").openPopup();
                return;
            }

            // Ordenar nós por proximidade ao clique
            intersecoes.sort((a, b) =>
                calcularDistancia(lat, lon, a.lat, a.lon) - calcularDistancia(lat, lon, b.lat, b.lon)
            );

            const intersecoesMaisProximas = intersecoes.slice(0, 2);
            const coordenadas = intersecoesMaisProximas.map(intersecao => [intersecao.lat, intersecao.lon]);

            console.log("Coordenadas mais próximas:", coordenadas);

            // Desenhar polilinha entre as interseções mais próximas
            desenharPolilinhaEntreIntersecoes(coordenadas);
        })
        .catch(error => {
            console.error("Erro ao consultar a API Overpass:", error);
            marcadorSelecionado.bindPopup("Erro ao buscar dados.").openPopup();
        });
}

// Função de cálculo da distância
function calcularDistancia(lat1, lon1, lat2, lon2) {
    const rad = x => (x * Math.PI) / 180;
    const R = 6371e3; // Raio da Terra em metros
    const dLat = rad(lat2 - lat1);
    const dLon = rad(lon2 - lon1);
    const a =
        Math.sin(dLat / 2) * Math.sin(dLat / 2) +
        Math.cos(rad(lat1)) * Math.cos(rad(lat2)) * Math.sin(dLon / 2) * Math.sin(dLon / 2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
    return R * c;
}

// Função para desenhar polilinha
function desenharPolilinhaEntreIntersecoes(coordenadas) {
    if (coordenadas.length < 2) {
        console.warn("Coordenadas insuficientes para desenhar polilinha.");
        return;
    }
    const polilinha = L.polyline(coordenadas, { color: 'blue' }).addTo(map);
    map.fitBounds(polilinha.getBounds());
}
