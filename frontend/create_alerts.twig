    </div>
</form>



                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div id="map" class="mb-3" style="height: 400px;"></div>
            <!-- Exibição das vias próximas -->
            <div id="vias-proximas" class="alert alert-info">
                <!-- As vias próximas serão inseridas aqui -->
            </div>
            
            <!-- Controles de Sentido (Adicionado) -->
            <div id="controles" class="mt-3"></div> 
        </div>
    </div>
</div>

<script>
        const map = L.map('map').setView([-23.5505, -46.6333], 12);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        const geojsonData = {
            "type": "FeatureCollection",
            "features": [
                {
                    "type": "Feature",
                    "properties": { "id": 1, "name": "Rua Eugenio Feio" },
                    "geometry": {
                        "type": "MultiLineString",
                        "coordinates": [
                            [[-46.64, -23.54], [-46.63, -23.53]],
                            [[-46.63, -23.53], [-46.62, -23.52]],
                            [[-46.62, -23.52], [-46.61, -23.51]],
                            [[-46.61, -23.51], [-46.60, -23.50]]
                        ]
                    }
                }
            ]
        };

        let selectedLayer = null;

        const geojsonLayer = L.geoJSON(geojsonData, {
            style: {
                color: 'blue',
                weight: 3
            }
        }).addTo(map);

        map.on('click', function(e) {
            if (selectedLayer) {
                map.removeLayer(selectedLayer);
            }

            let closestSegment = null;
            let shortestDistance = Infinity;

            geojsonLayer.eachLayer(function(layer) {
                if (layer instanceof L.Polyline) { //verifica se é uma polilinha
                    const line = turf.lineString(layer.getLatLngs().map(latlng => [latlng.lng, latlng.lat]));
                    const clickedPoint = turf.point([e.latlng.lng, e.latlng.lat]);
                    const snapped = turf.nearestPointOnLine(line, clickedPoint);
                    const distance = turf.distance(clickedPoint, snapped);

                    if (distance < shortestDistance) {
                        shortestDistance = distance;
                        closestSegment = {
                            coordinates: layer.getLatLngs().map(latlng => [latlng.lng, latlng.lat]),
                            name: layer.feature ? layer.feature.properties.name : "Segmento"
                        };
                    }
                } else if (layer instanceof L.FeatureGroup) { //verifica se é um grupo de features(multilinestring)
                    layer.eachLayer(function(segmentLayer){
                        const line = turf.lineString(segmentLayer.getLatLngs().map(latlng => [latlng.lng, latlng.lat]));
                        const clickedPoint = turf.point([e.latlng.lng, e.latlng.lat]);
                        const snapped = turf.nearestPointOnLine(line, clickedPoint);
                        const distance = turf.distance(clickedPoint, snapped);

                        if (distance < shortestDistance) {
                            shortestDistance = distance;
                            closestSegment = {
                                coordinates: segmentLayer.getLatLngs().map(latlng => [latlng.lng, latlng.lat]),
                                name: segmentLayer.feature ? segmentLayer.feature.properties.name : "Segmento"
                            };
                        }
                    })
                }
            });

            if (closestSegment) {
                selectedLayer = L.polyline(closestSegment.coordinates.map(coords => L.latLng(coords[1], coords[0])), {
                    color: 'red',
                    weight: 5
                }).addTo(map);

                console.log("Segmento mais próximo:", closestSegment.coordinates);
                alert("Segmento mais próximo: " + closestSegment.name + "\nCoordenadas: " + JSON.stringify(closestSegment.coordinates));
            }
        });
    </script>
