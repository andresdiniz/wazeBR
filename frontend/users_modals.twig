    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title"><i class="fas fa-key me-2"></i>Resetar Senha</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchResetSenha" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <div class="list-group" id="resultResetSenha">
                    <!-- Resultados aqui -->
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Apagar (Corrigido) -->
<div class="modal fade" id="modalApagar" tabindex="-1" aria-labelledby="modalApagarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="searchApagar" class="form-control" placeholder="Buscar usuário...">
                    <button class="btn btn-outline-danger" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <div class="list-group" id="resultApagar">
                    <!-- Resultados aqui -->
                </div>

                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    Esta ação é irreversível! Todos os dados serão permanentemente removidos.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Confirmar Exclusão</button>
            </div>
        </div>
    </div>
</div>

<!-- Botão de confirmação para reset de senha -->
<button type="button" id="confirmResetSenha" class="btn btn-primary">Confirmar Reset</button>

<!-- Botão de confirmação para exclusão -->
<button type="button" id="confirmDelete" class="btn btn-danger">Confirmar Exclusão</button>