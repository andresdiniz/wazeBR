<script>
document.addEventListener("DOMContentLoaded", function () {
    let map = null;
    let currentMarker = null;

    $(".open-modal").on("click", async function() {
        const button = $(this);
        const alertData = {
            uuid: button.closest('tr').data('uuid'),
            city: button.closest('tr').find('td:eq(0)').text(),
            street: button.closest('tr').find('td:eq(1)').text(),
            lat: button.data('lat'),
            lon: button.data('lon'),
            type: button.data('type'),
            subtype: button.data('subtype'),
            date: button.data('date'),
            confidence: button.data('confidence'),
            status: button.data('status') || 1 // Default para ativo
        };

        // Preencher dados do modal
        $('#modal-uuid').text(alertData.uuid);
        $('#modal-city').text(alertData.city);
        $('#modal-street').text(alertData.street);
        $('#modal-location').text(`Lat: ${alertData.lat}, Lon: ${alertData.lon}`);
        $('#modal-date').text(alertData.date);
        $('#modal-type').text(alertData.type);
        $('#modal-subtype').text(alertData.subtype);
        
        // Atualizar confian√ßa
        const confidenceBadge = $('#modal-confidence');
        confidenceBadge.text(alertData.confidence);
        confidenceBadge.removeClass().addClass(`badge bg-${
            alertData.confidence > 4 ? 'success' : 
            alertData.confidence >= 3 ? 'warning' : 'danger'
        }`);

        // Atualizar status
        const statusBadge = $('#modal-status');
        statusBadge.text(alertData.status === 1 ? "Ativo" : "Inativo");
        statusBadge.removeClass().addClass('badge bg-' + (alertData.status === 1 ? 'success' : 'danger'));

        // Links
        $('#modal-link').attr('href', 
            `https://www.waze.com/partnerhub/map-tool/alerts?cardType=3&cardId=${alertData.uuid}`);
        $('#modal-waze-link').attr('href', 
            `https://www.waze.com/ul?ll=${alertData.lat},${alertData.lon}`);

        // Inicializar mapa
        if (map) map.remove();
        map = L.map('map-container').setView([alertData.lat, alertData.lon], 15);
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);
        
        if (currentMarker) map.removeLayer(currentMarker);
        currentMarker = L.marker([alertData.lat, alertData.lon])
            .addTo(map)
            .bindPopup("Localiza√ß√£o do Alerta")
            .openPopup();

        // Buscar KM
        $('#modal-km').html('<span class="spinner-border spinner-border-sm"></span> Calculando...');
        try {
            const km = await buscarKmDnit(alertData.lon, alertData.lat);
            $('#modal-km').text(km || "N√£o encontrado");
        } catch (error) {
            console.error('Erro ao buscar KM:', error);
            $('#modal-km').text("Erro ao buscar");
        }
    });

    $('#alertModal').on('hidden.bs.modal', function() {
        if (map) {
            map.remove();
            map = null;
            currentMarker = null;
        }
    });
});
