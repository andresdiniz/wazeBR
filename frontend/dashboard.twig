                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        let map = null;
                        let currentMarker = null;
                    
                        $(".open-modal").on("click", async function () {
                            // Obter dados do alerta
                            const lat = $(this).data("lat");
                            const lon = $(this).data("lon");
                            const alertData = {
                                type: $(this).data("type"),
                                subtype: $(this).data("subtype"),
                                date: $(this).data("date"),
                                confidence: $(this).data("confidence")
                            };
                    
                            // Atualizar conteúdo do modal
                            $('#alert-type').text(`${alertData.type} - ${alertData.subtype}`);
                            $('#alert-date').text(alertData.date);
                            $('#alert-confidence').text(alertData.confidence);
                    
                            // Gerenciar o mapa
                            if (map) {
                                map.remove();
                            }
                            
                            // Criar novo mapa
                            map = L.map('map-container').setView([lat, lon], 15);
                            L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                                attribution: "&copy; OpenStreetMap contributors"
                            }).addTo(map);
                    
                            if (currentMarker) {
                                map.removeLayer(currentMarker);
                            }
                            currentMarker = L.marker([lat, lon]).addTo(map)
                                .bindPopup("Localização do Alerta")
                                .openPopup();
                    
                            // Buscar KM assincronamente
                            try {
                                const km = await buscarKmDnit(lat, lon, 150);
                                $('#km-value').text(km || "Não encontrado");
                            } catch (error) {
                                console.error('Erro ao buscar KM:', error);
                                $('#km-value').text("Erro ao buscar");
                            }
                        });
                    
                        // Limpar mapa quando o modal for fechado
                        $('#alertModal').on('hidden.bs.modal', function () {
                            if (map) {
                                map.remove();
                                map = null;
                                currentMarker = null;
                            }
                        });
                    });
                </script>
                

