<div class="modal fade" id="alertModal{{ alert.uuid }}" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true"
     data-lat="{{ alert.location_y }}" data-lon="{{ alert.location_x }}">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-3 shadow-lg rounded">
            <!-- Cabe√ßalho -->
            <div class="modal-header bg-primary text-white rounded-top">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Detalhes do Evento
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- Corpo (Com rolagem interna) -->
            <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                <!-- Grid de Informa√ß√µes -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm p-3 mb-3">
                            <p><strong>üìå UUID:</strong> {{ alert.uuid }}</p>
                            <p><strong>üèôÔ∏è Cidade:</strong> {{ alert.city }}</p>
                            <p><strong>üìç Rua:</strong> {{ alert.street }}</p>
                            <p><strong>üì° Localiza√ß√£o:</strong> Lat: {{ alert.location_y }}, Lon: {{ alert.location_x }}</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm p-3 mb-3">
                            <p><strong>üìÖ Data:</strong> {{ (alert.pubMillis / 1000) | date("d/m/Y H:i:s") }}</p>
                            <p><strong>üõ£Ô∏è KM Estimado:</strong> 
                                <span id="km-value-{{ alert.uuid }}" class="badge badge-info">Buscando...</span>
                            </p>
                            <p>
                                <strong>üîç Confian√ßa:</strong> 
                                <span class="badge badge-{{ alert.confidence > 80 ? 'success' : (alert.confidence > 50 ? 'warning' : 'danger') }}">
                                    {{ alert.confidence }}%
                                </span>
                            </p>
                            <p>
                                <strong>‚ö†Ô∏è Status:</strong> 
                                <span class="badge badge-{{ alert.status == '1' ? 'success' : 'danger' }}">
                                    {{ alert.status == "1" ? "Ativo" : "Inativo" }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Tipo/Subtipo -->
                <div class="card border-0 shadow-sm p-3 mb-3">
                    <p><strong>üö® Tipo:</strong> {{ alert.type }}</p>
                    <p><strong>üìå Subtipo:</strong> {{ alert.subtype }}</p>
                </div>

                <!-- Mapa Responsivo -->
                <div class="card border-0 shadow-sm p-3">
                    <h6 class="text-center text-muted">üìç Localiza√ß√£o no Mapa</h6>
                    <div id="map-{{ alert.uuid }}" class="rounded shadow-sm border" style="height: 400px; width: 100%;"></div>
                </div>
            </div>

            <!-- Rodap√© -->
            <div class="modal-footer d-flex justify-content-between">
                <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}" class="btn btn-outline-primary" target="_blank">
                    <i class="fab fa-waze"></i> Ver no Waze
                </a>
                
                <!-- Bot√£o Vis√≠vel apenas em dispositivos m√≥veis e tablets -->
                <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}" class="btn btn-outline-success d-none d-sm-block d-md-none" target="_blank">
                    <i class="fab fa-waze"></i> Criar Rota no Waze
                </a>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Fechar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {

    function inicializarMapa(uuid, latitude, longitude) {
        const map = L.map(`map-${uuid}`).setView([latitude, longitude], 14);

        // Configura√ß√£o do mapa com OpenStreetMap
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Marca o local no mapa
        L.marker([latitude, longitude]).addTo(map)
            .bindPopup("Localiza√ß√£o do Evento")
            .openPopup();

        // Centraliza o mapa no ponto
        map.setView([latitude, longitude], 14);
    }

    // Evento para abrir o modal
    document.querySelectorAll("[id^=alertModal]").forEach(modal => {
        modal.addEventListener("show.bs.modal", async function () {
            const uuid = modal.id.replace("alertModal", "");
            const latitude = parseFloat(modal.getAttribute("data-lat"));
            const longitude = parseFloat(modal.getAttribute("data-lon"));

            if (!isNaN(latitude) && !isNaN(longitude)) {
                // Chama a fun√ß√£o para buscar o KM do DNIT
                const km = buscarKmDnit(longitude, latitude);
                console.log(km);
                document.getElementById(`km-value-${uuid}`).textContent = km;
                
                // Inicializa o mapa
                inicializarMapa(uuid, latitude, longitude);
            }
        });
    });
});
</script>

<script src="./js/scripts.js"></script>