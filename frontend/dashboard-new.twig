<div class="container-fluid px-3 px-lg-4 mt-4">
    
    <!-- Header da Página -->
    <div class="page-header fade-in">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1><i class="fas fa-chart-line me-2 subtitle"></i>Dashboard Completo</h1>
                <p class="subtitle mb-0">
                    Análise detalhada de todos os alertas e métricas do sistema
                </p>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-download me-2"></i>Exportar
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-file-excel me-2"></i>Excel</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-file-pdf me-2"></i>PDF</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-file-csv me-2"></i>CSV</a></li>
                    </ul>
                </div>
                <button class="btn btn-primary">
                    <i class="fas fa-sync-alt me-2"></i>Atualizar
                </button>
            </div>
        </div>
    </div>

    <!-- Cards de Estatísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in">
            <div class="stats-card danger">
                <div class="stats-card-icon">
                    <i class="fas fa-car-crash"></i>
                </div>
                <div class="stats-card-value">{{ accidentAlerts|length }}</div>
                <div class="stats-card-label">Acidentes Ativos</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in" style="animation-delay: 0.1s;">
            <div class="stats-card warning">
                <div class="stats-card-icon">
                    <i class="fas fa-traffic-light"></i>
                </div>
                <div class="stats-card-value">{{ jamAlerts|length }}</div>
                <div class="stats-card-label">Congestionamentos</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-md-0 fade-in" style="animation-delay: 0.2s;">
            <div class="stats-card info">
                <div class="stats-card-icon">
                    <i class="fas fa-road"></i>
                </div>
                <div class="stats-card-value">{{ hazardAlerts|length }}</div>
                <div class="stats-card-label">Buracos Reportados</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="stats-card success">
                <div class="stats-card-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stats-card-value">{{ otherAlerts|length }}</div>
                <div class="stats-card-label">Outros Alertas</div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filter-section fade-in" style="animation-delay: 0.4s;">
        <div class="row g-3">
            <div class="col-lg-3 col-md-6">
                <label for="dateFilter" class="form-label">Data</label>
                <input type="date" class="form-control" id="dateFilter">
            </div>
            <div class="col-lg-3 col-md-6">
                <label for="cityFilter" class="form-label">Cidade</label>
                <select class="form-select" id="cityFilter">
                    <option value="">Todas as cidades</option>
                    <option value="São Paulo">São Paulo</option>
                    <option value="Rio de Janeiro">Rio de Janeiro</option>
                    <option value="Belo Horizonte">Belo Horizonte</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label for="typeFilter" class="form-label">Tipo de Alerta</label>
                <select class="form-select" id="typeFilter">
                    <option value="">Todos os tipos</option>
                    <option value="ACCIDENT">Acidente</option>
                    <option value="JAM">Congestionamento</option>
                    <option value="HAZARD">Buraco</option>
                    <option value="OTHER">Outro</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6 d-flex align-items-end">
                <button class="btn btn-primary w-100">
                    <i class="fas fa-filter me-2"></i>Filtrar
                </button>
            </div>
        </div>
    </div>

    <!-- Linha de Cards Principais -->
    <div class="row">
        
        <!-- Card de Acidentes -->
        <div class="col-xl-6 col-lg-12 mb-4 fade-in" style="animation-delay: 0.5s;">
            <div class="card modern-card h-100">
                <div class="modern-card-header bg-danger-gradient">
                    <span>
                        <i class="fas fa-car-crash me-2"></i>
                        Acidentes Registrados
                    </span>
                    {% if accidentAlerts is not empty %}
                        <span class="badge-counter">{{ accidentAlerts|length }}</span>
                    {% endif %}
                </div>
                <div class="card-body p-0 position-relative">
                    {% if accidentAlerts is not empty %}
                        <div class="table-responsive">
                            <table class="table modern-table" id="accidentsTable">
                                <thead>
                                    <tr>
                                        <th>Local</th>
                                        <th class="d-none d-lg-table-cell">Rua</th>
                                        <th class="d-none d-md-table-cell">Data/Hora</th>
                                        <th class="text-center">Confiança</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for alert in accidentAlerts %}
                                    <tr>
                                        <td>
                                            <div class="fw-bold text-danger">{{ alert.city }}</div>
                                            <small class="text-muted d-lg-none">{{ alert.street }}</small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                                {{ alert.street }}
                                            </span>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <div class="text-nowrap">{{ (alert.pubMillis / 1000) | date("d/m/Y") }}</div>
                                            <small class="text-muted">{{ (alert.pubMillis / 1000) | date("H:i") }}</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="modern-badge badge-{{ alert.confidence > 80 ? 'success' : (alert.confidence > 50 ? 'warning' : 'danger') }}">
                                                {{ alert.confidence }}%
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-info action-btn open-modal" 
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#alertModal{{ alert.uuid }}"
                                                    data-lat="{{ alert.location_y }}" 
                                                    data-lon="{{ alert.location_x }}"
                                                    title="Ver Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}"
                                               target="_blank" 
                                               class="btn btn-primary action-btn"
                                               title="Abrir no Waze">
                                                <i class="fab fa-waze"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% include 'modal.twig' with {'alert': alert} %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-car-crash"></i>
                            <h5>Nenhum acidente</h5>
                            <p>Não há acidentes registrados no momento.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Card de Congestionamentos -->
        <div class="col-xl-6 col-lg-12 mb-4 fade-in" style="animation-delay: 0.6s;">
            <div class="card modern-card h-100">
                <div class="modern-card-header bg-warning-gradient">
                    <span>
                        <i class="fas fa-traffic-light me-2"></i>
                        Congestionamentos Ativos
                    </span>
                    {% if jamAlerts is not empty %}
                        <span class="badge-counter">{{ jamAlerts|length }}</span>
                    {% endif %}
                </div>
                <div class="card-body p-0 position-relative">
                    {% if jamAlerts is not empty %}
                        <div class="table-responsive">
                            <table class="table modern-table" id="jamsTable">
                                <thead>
                                    <tr>
                                        <th>Local</th>
                                        <th class="d-none d-lg-table-cell">Rua</th>
                                        <th class="d-none d-md-table-cell">Data/Hora</th>
                                        <th class="text-center">Confiança</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for alert in jamAlerts %}
                                    <tr>
                                        <td>
                                            <div class="fw-bold text-warning">{{ alert.city }}</div>
                                            <small class="text-muted d-lg-none">{{ alert.street }}</small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                                {{ alert.street }}
                                            </span>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <div class="text-nowrap">{{ (alert.pubMillis / 1000) | date("d/m/Y") }}</div>
                                            <small class="text-muted">{{ (alert.pubMillis / 1000) | date("H:i") }}</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="modern-badge badge-{{ alert.confidence > 80 ? 'success' : (alert.confidence > 50 ? 'warning' : 'danger') }}">
                                                {{ alert.confidence }}%
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-info action-btn open-modal" 
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#alertModal{{ alert.uuid }}"
                                                    data-lat="{{ alert.location_y }}" 
                                                    data-lon="{{ alert.location_x }}"
                                                    title="Ver Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <a href="https://www.waze.com/ul?ll={{ alert.location_y }},{{ alert.location_x }}"
                                               target="_blank" 
                                               class="btn btn-primary action-btn"
                                               title="Abrir no Waze">
                                                <i class="fab fa-waze"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% include 'modal.twig' with {'alert': alert} %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-traffic-light"></i>
                            <h5>Trânsito fluindo</h5>
                            <p>Não há congestionamentos reportados ativos no momento.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda Linha de Cards -->
