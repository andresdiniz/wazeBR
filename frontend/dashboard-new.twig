<script>
document.addEventListener("DOMContentLoaded", function () {
    
    // Configuração do modal
    const alertModal = document.getElementById('alertModal');
    if (alertModal) {
        alertModal.addEventListener('show.bs.modal', async function (event) {
            const button = event.relatedTarget;
            
            try {
                // Corrigir o parse dos dados
                const rawData = button.getAttribute('data-alert');
                let alertData;
                
                if (typeof rawData === 'string') {
                    alertData = JSON.parse(rawData.replace(/&quot;/g, '"'));
                } else {
                    alertData = rawData;
                }
                
                console.log('Dados do alerta:', alertData);
                
                // Preencher dados básicos
                document.getElementById('modalUuid').textContent = alertData.uuid;
                document.getElementById('modalCity').textContent = alertData.city;
                document.getElementById('modalStreet').textContent = alertData.street;
                document.getElementById('modalLat').textContent = alertData.location[1].toFixed(6);
                document.getElementById('modalLon').textContent = alertData.location[0].toFixed(6);
                document.getElementById('modalDate').textContent = new Date(alertData.timestamp).toLocaleString('pt-BR');
                document.getElementById('modalType').textContent = alertData.type;
                document.getElementById('modalSubtype').textContent = alertData.subtype || 'N/A';
                
                // Atualizar iframes
                const wazeSrc = `https://embed.waze.com/iframe?zoom=16&lat=${alertData.location[1]}&lon=${alertData.location[0]}&pin=1`;
                document.getElementById('modalMap').setAttribute('src', wazeSrc);
                
                const streetViewSrc = `https://www.google.com/maps/embed/v1/streetview?key=SUA_CHAVE&location=${alertData.location[1]},${alertData.location[0]}`;
                document.getElementById('modalStreetView').setAttribute('src', streetViewSrc);
                
                // Atualizar links
                document.getElementById('modalPartnerLink').setAttribute('href', `https://www.waze.com/partnerhub/map-tool/alerts?cardType=3&cardId=${alertData.uuid}`);
                document.getElementById('modalWazeLink').setAttribute('href', `https://www.waze.com/ul?ll=${alertData.location[1]},${alertData.location[0]}`);
                
                // Atualizar status e confiança
                const statusElement = document.getElementById('modalStatus');
                statusElement.textContent = alertData.status === 1 ? "Ativo" : "Inativo";
                statusElement.className = `modern-badge badge-${alertData.status === 1 ? 'success' : 'danger'}`;
                
                const confidenceElement = document.getElementById('modalConfidence');
                confidenceElement.textContent = alertData.confidence;
                confidenceElement.className = `modern-badge badge-${alertData.confidence > 4 ? 'success' : alertData.confidence >= 3 ? 'warning' : 'danger'}`;
                
                // Buscar KM
                const kmElement = document.getElementById('modalKm');
                kmElement.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Calculando...';
                
                try {
                    const km = await buscarKmDnit(alertData.location[1], alertData.location[0]);
                    console.log("Resultado da busca KM:", km);
                    const kmNumero = parseFloat(km);
                    
                    if (!isNaN(kmNumero)) {
                        kmElement.textContent = `KM ${kmNumero.toFixed(2)}`;
                        kmElement.className = 'modern-badge badge-info';
                    } else {
                        kmElement.textContent = 'KM não encontrado';
                        kmElement.className = 'modern-badge badge-warning';
                    }
                } catch (error) {
                    console.error("Erro ao buscar KM:", error);
                    kmElement.textContent = 'Erro na busca';
                    kmElement.className = 'modern-badge badge-danger';
                }
                
            } catch (error) {
                console.error('Erro ao carregar dados do alerta:', error);
                alert('Erro ao carregar detalhes do alerta');
            }
        });
    }
    
    // Configuração do DataTable
    const dataTableConfig = {
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json'
        },
        scrollX: true,
        responsive: true,
        pageLength: 10,
        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
        order: [[2, 'desc']],
        columnDefs: [
            { orderable: false, targets: [4] },
            { width: "15%", targets: [0] },
            { width: "10%", targets: [4] }
        ],
        dom: '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
             '<"row"<"col-sm-12"tr>>' +
             '<"row mt-3"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
        initComplete: function() {
            console.log('Tabela carregada com sucesso');
        }
    };
    
    // Inicializar DataTables
    const tables = ['accidentsTable', 'jamsTable', 'hazardsTable', 'othersTable'];
    tables.forEach(tableId => {
        if (document.getElementById(tableId)) {
            $('#' + tableId).DataTable(dataTableConfig);
        }
    });
    
    // Notificação de boas-vindas
    setTimeout(() => {
        if (typeof $.notify !== 'undefined') {
            $.notify("Dashboard carregado com sucesso!", {
                position: "top right",
                className: "success",
                autoHideDelay: 3000
            });
        }
    }, 1000);
    
    console.log('Dashboard Completo inicializado com sucesso!');
});
</script>
