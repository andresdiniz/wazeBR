        }
        
        /* Ajustar conteúdo das células */
        .modern-table .fw-bold {
            font-size: 0.9rem;
        }
        
        .modern-table small.text-muted {
            font-size: 0.75rem;
        }
        
        /* Badge de atraso */
        .modern-badge {
            min-width: 50px;
