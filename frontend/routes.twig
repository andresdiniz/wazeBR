        }

        $.ajax({
            url: 'api.php', 
            type: 'POST',
            data: {
                action: 'get_route_details', 
                route_id: routeId
            },
            dataType: 'json',
            success: function (response) {
                if (loadingIndicator) loadingIndicator.style.display = 'none'; 

                if (response.status === 'success' && response.data) {
