<!-- Seção de Notificações do Sistema -->
<div class="card shadow mb-4 border-warning">
    <div class="card-header bg-warning text-dark py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0">
            <i class="fas fa-bell me-2"></i>Sistemas de Notificação
        </h5>
        <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#notificationModal">
            <i class="fas fa-sliders-h me-2"></i>Configurar Notificações
        </button>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center" style="width: 80px;">ID</th>
                        <th>Canal</th>
                        <th>Descrição</th>
                        <th class="text-center" style="width: 150px;">Status</th>
                        <th class="text-center" style="width: 100px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for notif in notification_settings %}
                    <tr class="align-middle">
                        <td class="text-center fw-bold text-warning">{{ notif.id }}</td>
                        <td>
                            <i class="fab fa-{{ notif.type == 'whatsapp' ? 'whatsapp' : 'envelope' }} me-2"></i>
                            {{ notif.type|capitalize }}
                        </td>
                        <td>{{ notif.description }}</td>
                        <td class="text-center">
                            <span class="badge bg-{{ notif.enabled ? 'success' : 'secondary' }}">
                                {{ notif.enabled ? 'Ativado' : 'Desativado' }}
                            </span>
                        </td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-warning btn-configure-notification"
                                data-bs-toggle="modal"
                                data-bs-target="#notificationModal"
                                data-all='{{ notif|json_encode }}'>
                                <i class="fas fa-cog"></i>
                            </button>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="fas fa-exclamation-circle me-2"></i>Nenhuma configuração de notificação encontrada
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de Configuração de Notificações -->
<div class="modal fade" id="notificationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-bell me-2"></i>Configuração de Notificações
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="POST">
                <input type="hidden" name="form_type" value="configure_notification">
                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="notif_id">
                    <div class="mb-3">
                        <label class="form-label">Canal</label>
                        <select class="form-select" name="type" id="notif_type" disabled>
                            <option value="email">E-mail</option>
                            <option value="whatsapp">WhatsApp</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descrição</label>
                        <input type="text" class="form-control" name="description" id="notif_description" maxlength="100">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Destino</label>
                        <input type="text" class="form-control" name="destination" id="notif_destination" placeholder="Ex: email@email.com ou +5511999999999">
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="notif_enabled" name="enabled">
                        <label class="form-check-label" for="notif_enabled">Ativar Notificações</label>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save me-2"></i>Salvar Configuração
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function () {
    $('#notificationModal').on('show.bs.modal', function (e) {
        const button = $(e.relatedTarget);
        const data = button.data('all');
        const modal = $(this);

        if (data) {
            modal.find('#notif_id').val(data.id);
            modal.find('#notif_type').val(data.type);
            modal.find('#notif_description').val(data.description);
            modal.find('#notif_destination').val(data.destination);
            modal.find('#notif_enabled').prop('checked', data.enabled == 1);
        } else {
            modal.find('form')[0].reset();
        }
    });
});
</script>
