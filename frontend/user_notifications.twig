{# user_notifications.twig #}

{% extends 'base.twig' %}

{% block title %}Configurações de Notificações{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="page-header fade-in">
        <h1 class="mb-1"><i class="fas fa-bell me-2"></i> Notificações</h1>
        <p class="subtitle">Gerencie como e quando você deseja receber alertas e atualizações do sistema.</p>
    </div>

    <form action="{{ path('user_notifications_save') }}" method="POST">
        
        <div class="row">
            
            {# Coluna Principal de Configurações #}
            <div class="col-lg-8">
                
                {# Card de Configurações Gerais #}
                <div class="modern-card fade-in" style="animation-delay: 0.1s;">
                    <div class="modern-card-header bg-info-gradient">
                        Preferências de Notificação
                    </div>
                    <div class="modern-card-body">
                        
                        {# Exemplo de Tipo de Notificação: Alertas de Sistema #}
                        <div class="notification-group">
                            <div class="notification-header">
                                <h5>Alertas Críticos de Sistema</h5>
                                <p class="text-secondary mb-0">Receba avisos imediatos sobre problemas de segurança ou manutenção.</p>
                            </div>
                            
                            <div class="channel-check-group mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="system_email" name="prefs[system][email]" value="1" checked disabled>
                                    <label class="form-check-label" for="system_email">
                                        Email (Obrigatório)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="system_push" name="prefs[system][push]" value="1" {% if preferences.system.push %}checked{% endif %}>
                                    <label class="form-check-label" for="system_push">
                                        Notificação Push
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        {# Exemplo de Tipo de Notificação: Atividade da Conta #}
                        <div class="notification-group">
                            <div class="notification-header">
                                <h5>Atividade da Conta</h5>
                                <p class="text-secondary mb-0">Alertas de login em novo dispositivo, alteração de senha, etc.</p>
                            </div>
                            
                            <div class="channel-check-group mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="activity_email" name="prefs[activity][email]" value="1" {% if preferences.activity.email %}checked{% endif %}>
                                    <label class="form-check-label" for="activity_email">
                                        Email
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="activity_sms" name="prefs[activity][sms]" value="1" {% if preferences.activity.sms %}checked{% endif %}>
                                    <label class="form-check-label" for="activity_sms">
                                        SMS
                                    </label>
                                </div>
                            </div>
                        </div>

                        {# Exemplo de Tipo de Notificação: Novas Funcionalidades #}
                        <div class="notification-group">
                            <div class="notification-header">
                                <h5>Atualizações de Produtos</h5>
                                <p class="text-secondary mb-0">Notícias sobre novas funcionalidades e melhorias na plataforma.</p>
                            </div>
                            
                            <div class="channel-check-group mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="updates_email" name="prefs[updates][email]" value="1" {% if preferences.updates.email %}checked{% endif %}>
                                    <label class="form-check-label" for="updates_email">
                                        Email
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="updates_inapp" name="prefs[updates][inapp]" value="1" {% if preferences.updates.inapp %}checked{% endif %}>
                                    <label class="form-check-label" for="updates_inapp">
                                        No Aplicativo (In-app)
                                    </label>
                                </div>
                            </div>

                            <h6 class="mt-4 mb-2 text-secondary">Frequência</h6>
                            <select class="form-select form-select-sm w-50" id="updates_frequency" name="prefs[updates][frequency]">
                                <option value="instant" {% if preferences.updates.frequency == 'instant' %}selected{% endif %}>Instantâneo (Assim que ocorrer)</option>
                                <option value="daily" {% if preferences.updates.frequency == 'daily' %}selected{% endif %}>Resumo Diário</option>
                                <option value="weekly" {% if preferences.updates.frequency == 'weekly' %}selected{% endif %}>Resumo Semanal</option>
                                <option value="never" {% if preferences.updates.frequency == 'never' %}selected{% endif %}>Nunca</option>
                            </select>
                        </div>
                        
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success mt-3 fade-in" style="animation-delay: 0.3s;"><i class="fas fa-save me-2"></i> Salvar Alterações</button>

            </div>
            
            {# Coluna Lateral de Resumo/Informação #}
            <div class="col-lg-4">
                <div class="modern-card fade-in" style="animation-delay: 0.2s;">
                    <div class="modern-card-header bg-success-gradient">
                        <i class="fas fa-info-circle me-2"></i> Sua Preferência Atual
                    </div>
                    <div class="modern-card-body">
                        <p class="text-secondary">Você atualmente está inscrito em **8 de 12** categorias de notificação.</p>
                        
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i> Notificações por Email: <span class="fw-bold">5 ativas</span></li>
                            <li class="mb-2"><i class="fas fa-mobile-alt me-2 text-primary"></i> Notificações Push: <span class="fw-bold">2 ativas</span></li>
                            <li class="mb-2"><i class="fas fa-sms me-2 text-primary"></i> Notificações por SMS: <span class="fw-bold">1 ativa</span></li>
                        </ul>
                        
                        <hr>
                        <p class="small text-secondary m-0">
                            **Nota:** Você sempre receberá notificações críticas (como redefinição de senha ou problemas de serviço) no seu email primário, independentemente das configurações acima.
                        </p>
                    </div>
                </div>
            </div>
            
        </div>
    </form>
</div>

{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Aplica a animação fade-in em todos os elementos
        document.querySelectorAll('.fade-in').forEach(element => {
            void element.offsetWidth; // Força o re-flow
        });
        
        console.log('Página de Notificações carregada.');

        // Exemplo de lógica para desabilitar opções se a frequência for "Nunca"
        const updateFrequencySelect = document.getElementById('updates_frequency');
        const updateChannels = document.querySelector('.notification-group:nth-child(3) .channel-check-group');

        if (updateFrequencySelect) {
            updateFrequencySelect.addEventListener('change', function() {
                const isDisabled = this.value === 'never';
                const checkboxes = updateChannels.querySelectorAll('input[type="checkbox"]');
                
                checkboxes.forEach(checkbox => {
                    checkbox.disabled = isDisabled;
                    if (isDisabled) {
                        checkbox.checked = false;
                    }
                });
            });
            // Executa na carga inicial
            updateFrequencySelect.dispatchEvent(new Event('change'));
        }
    });
</script>
{% endblock %}