<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="filter-date" class="form-label">Filtrar por Data</label>
            <input type="date" id="filter-date" class="form-control">
        </div>
        <div class="col-md-3">
            <label for="filter-city" class="form-label">Filtrar por Cidade</label>
            <input type="text" id="filter-city" class="form-control" placeholder="Digite a cidade">
        </div>
        <div class="col-md-3">
            <label for="filter-street" class="form-label">Filtrar por Rua</label>
            <input type="text" id="filter-street" class="form-control" placeholder="Digite a rua">
        </div>
        <div class="col-md-3">
            <label for="filter-period" class="form-label">Período</label>
            <select id="filter-period" class="form-select">
                <option value="">Todos</option>
                <option value="7">Última semana</option>
                <option value="15">Últimos 15 dias</option>
                <option value="30">Último mês</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <strong>Total Ativos:</strong> <span id="count-active">0</span>
        </div>
        <div class="col-md-4">
            <strong>Total Inativos:</strong> <span id="count-inactive">0</span>
        </div>
        <div class="col-md-4">
            <strong>Total no Filtro:</strong> <span id="count-filtered">0</span>
        </div>
    </div>

    <table id="buracos-table" class="table table-striped table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Cidade</th>
                <th>Rua</th>
                <th>Confiança</th>
                <th>Data</th>
                <th>Coordenadas</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for buraco in buracos %}
                <tr data-uuid="{{ buraco.uuid }}">
                    <td>{{ loop.index }}</td>
                    <td>{{ buraco.city }}</td>
                    <td>{{ buraco.street }}</td>
                    <td>{{ buraco.confidence }}</td>
                    <td data-date="{{ buraco.pubMillis }}">
                        {{ buraco.pubMillis | date('Y-m-d') }}
                    </td>
                    <td>
                        <a href="https://www.waze.com/ul?ll={{ buraco.location_x }},{{ buraco.location_y }}&navigate=yes" target="_blank" class="text-decoration-none">
                            {{ buraco.location_x }}, {{ buraco.location_y }}
                        </a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm open-edit-modal">Editar</button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Nenhum buraco encontrado.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Atualizar Buraco</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateForm" method="POST" action="/atualizar_buraco.php">
                    <input type="hidden" name="uuid" id="modal-uuid">
                    <div class="d-grid gap-2">
                        <button type="submit" name="status" value="resolvido" class="btn btn-success">Resolvido</button>
                        <button type="submit" name="status" value="nao_existe" class="btn btn-danger">Não Existe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const table = new DataTable('#buracos-table', {
            dom: 'Bfrtip',
            buttons: ['copy', 'excel', 'csv'],
            order: [[4, 'desc']],
        });

        function updateCounters() {
            const totalAtivos = table.data().count();
            const totalFiltrados = table.rows({ search: 'applied' }).data().count();
            document.getElementById('count-active').textContent = totalAtivos;
            document.getElementById('count-filtered').textContent = totalFiltrados;
            document.getElementById('count-inactive').textContent = totalAtivos - totalFiltrados;
        }

        table.on('draw', updateCounters);
        updateCounters();

        document.getElementById('filter-date').addEventListener('change', function() {
            table.column(4).search(this.value).draw();
        });

        document.getElementById('filter-city').addEventListener('input', function() {
            table.column(1).search(this.value).draw();
        });

        document.getElementById('filter-street').addEventListener('input', function() {
            table.column(2).search(this.value).draw();
        });

        document.getElementById('filter-period').addEventListener('change', function() {
            const days = parseInt(this.value);
            if (!isNaN(days)) {
                const cutoffDate = new Date();
                cutoffDate.setDate(cutoffDate.getDate() - days);
                const formattedDate = cutoffDate.toISOString().split('T')[0];
                table.column(4).search(formattedDate + '~', true, false).draw();
            } else {
                table.column(4).search('').draw();
            }
        });

        const editModal = new bootstrap.Modal(document.getElementById('editModal'));
        document.querySelector('#buracos-table').addEventListener('click', function(e) {
            if (e.target.classList.contains('open-edit-modal')) {
                const uuid = e.target.closest('tr').dataset.uuid;
                document.getElementById('modal-uuid').value = uuid;
                editModal.show();
            }
        });

        document.getElementById('updateForm').addEventListener('submit', function() {
            editModal.hide();
        });
    });
</script>
