<!DOCTYPE html>
<html>
<head>
    <title>Histórico de Buracos</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="filter-date" class="form-label">Filtrar por Data</label>
                <input type="date" id="filter-date" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="filter-city" class="form-label">Filtrar por Cidade</label>
                <input type="text" id="filter-city" class="form-control" placeholder="Digite a cidade">
            </div>
            <div class="col-md-3">
                <label for="filter-street" class="form-label">Filtrar por Rua</label>
                <input type="text" id="filter-street" class="form-control" placeholder="Digite a rua">
            </div>
            <div class="col-md-3">
                <label for="filter-period" class="form-label">Período</label>
                <select id="filter-period" class="form-control">
                    <option value="">Todos</option>
                    <option value="7">Última semana</option>
                    <option value="15">Últimos 15 dias</option>
                    <option value="30">Último mês</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Total Ativos:</strong> <span id="count-active">0</span>
            </div>
            <div class="col-md-4">
                <strong>Total Inativos:</strong> <span id="count-inactive">0</span>
            </div>
            <div class="col-md-4">
                <strong>Total no Filtro:</strong> <span id="count-filtered">0</span>
            </div>
        </div>

        <table id="buracos-table" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cidade</th>
                    <th>Rua</th>
                    <th>Confiança</th>
                    <th>Data</th>
                    <th>Coordenadas</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for buraco in buracos %}
                    <tr data-uuid="{{ buraco.uuid }}">
                        <td>{{ loop.index }}</td>
                        <td>{{ buraco.city }}</td>
                        <td>{{ buraco.street }}</td>
                        <td>{{ buraco.confidence }}</td>
                        <td data-date="{{ buraco.pubMillis }}">{{ buraco.pubMillis|date("Y-m-d") }}</td>
                        <td>
                            <a href="https://www.waze.com/ul?ll={{ buraco.location_x }},{{ buraco.location_y }}&navigate=yes" target="_blank">{{ buraco.location_x }}, {{ buraco.location_y }}</a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-primary open-edit-modal">Editar</button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Nenhum buraco encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Atualizar Buraco</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="updateForm" method="POST" action="/atualizar_buraco.php">
                        <input type="hidden" name="uuid" id="modal-uuid">
                        <div class="d-flex justify-content-around">
                            <button type="submit" name="status" value="resolvido" class="btn btn-success">Resolvido</button>
                            <button type="submit" name="status" value="nao_existe" class="btn btn-danger">Não Existe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>

    <script>
        $(document).ready(function() {
            var table = $('#buracos-table').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'csv'],
                paging: true,
                searching: true
            });

            function updateCounters() {
                let totalAtivos = $('#buracos-table tbody tr').length;
                let totalFiltrados = table.rows({ search: 'applied' }).count();
                let totalInativos = totalAtivos - totalFiltrados;

                $('#count-active').text(totalAtivos);
                $('#count-filtered').text(totalFiltrados);
                $('#count-inactive').text(totalInativos);
            }

            $('#filter-date, #filter-city, #filter-street, #filter-period').on('input change', function() {
                table.draw();
                updateCounters();
            });

            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                let filterDate = $('#filter-date').val();
                let filterCity = $('#filter-city').val().toLowerCase();
                let filterStreet = $('#filter-street').val().toLowerCase();
                let filterPeriod = $('#filter-period').val();
                let rowDate = data[4];

                if (filterCity && !data[1].toLowerCase().includes(filterCity)) return false;
                if (filterStreet && !data[2].toLowerCase().includes(filterStreet)) return false;
                if (filterDate && rowDate !== filterDate) return false;

                if (filterPeriod) {
                    let daysAgo = parseInt(filterPeriod);
                    let rowTimestamp = new Date(rowDate).getTime();
                    let cutoff = new Date().getTime() - (daysAgo * 86400000);
                    if (rowTimestamp < cutoff) return false;
                }

                return true;
            });

            $('#buracos-table').on('click', '.open-edit-modal', function() {
                var uuid = $(this).closest('tr').data('uuid');
                $('#modal-uuid').val(uuid);
                $('#editModal').modal('show');
            });

            updateCounters();
        });
    </script>

</body>
</html>