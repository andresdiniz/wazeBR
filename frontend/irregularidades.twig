<div class="container">
    <h2>Irregularidades</h2>
    {% if irregularities is not empty %}
        <!-- Tabela para telas grandes -->
        <div class="d-none d-lg-block">
            <div class="table-responsive">
                <table id="irregularitiesTable" class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th class="col-id">ID</th>
                            <th class="col-name">Nome</th>
                            {% if irregularities[0].from_name %}<th class="col-origin">Origem</th>{% endif %}
                            {% if irregularities[0].to_name %}<th class="col-destination">Destino</th>{% endif %}
                            {% if irregularities[0].avg_speed %}<th class="col-avg-speed">Velocidade Média</th>{% endif %}
                            {% if irregularities[0].avg_time %}<th class="col-avg-time">Tempo Médio</th>{% endif %}
                            {% if irregularities[0].historic_speed %}<th class="col-historic-speed">Velocidade Histórica</th>{% endif %}
                            {% if irregularities[0].historic_time %}<th class="col-historic-time">Tempo Histórico</th>{% endif %}
                            {% if irregularities[0].jam_level %}<th class="col-jam-level">Nível de Congestionamento</th>{% endif %}
                            <th class="col-actions">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for irregularity in irregularities %}
                            <tr>
                                <td>{{ irregularity.id }}</td>
                                <td>{{ irregularity.name }}</td>
                                <td>{{ irregularity.from_name|default('') }}</td>
                                <td>{{ irregularity.to_name|default('') }}</td>
                                <td>{{ irregularity.avg_speed|default('')|number_format(2, '.', ',') }} Km/h</td>
                                <td>{{ (irregularity.avg_time / 60)|default('')|number_format(2, '.', ',') }} min</td>
                                <td>{{ irregularity.historic_speed|default('')|number_format(2, '.', ',') }} Km/h</td>
                                <td>{{ (irregularity.historic_time / 60)|default('')|number_format(2, '.', ',') }} min</td>
                                <td>{{ irregularity.jam_level|default('') }}</td>
                                <td>
                                    <button class="btn btn-primary btn-sm view-map" 
                                            data-route-id="{{ irregularity.id }}" 
                                            data-bs-toggle="modal" data-bs-target="#mapModal"
                                            aria-label="Ver irregularidade no mapa">
                                        Ver no Mapa
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Cartões para telas pequenas -->
        <div class="d-lg-none">
            {% for irregularity in irregularities %}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ irregularity.name }}</h5>
                        <p class="card-text">
                            <strong>Origem:</strong> {{ irregularity.from_name|default('') }}<br>
                            <strong>Destino:</strong> {{ irregularity.to_name|default('') }}<br>
                            <strong>Velocidade Média:</strong> {{ irregularity.avg_speed|default('')|number_format(2) }} km/h<br>
                            <strong>Tempo Médio:</strong> {{ (irregularity.avg_time / 60)|default('')|number_format(2) }} min<br>
                            <strong>Velocidade Histórica:</strong> {{ irregularity.historic_speed|default('')|number_format(2) }} km/h<br>
                            <strong>Tempo Histórico:</strong> {{ (irregularity.historic_time / 60)|default('')|number_format(2) }} min<br>
                            <strong>Nível de Congestionamento:</strong> {{ irregularity.jam_level|default('') }}
                        </p>
                        <button class="btn btn-primary btn-sm view-map" 
                                data-route-id="{{ irregularity.id }}" 
                                data-bs-toggle="modal" data-bs-target="#mapModal"
                                aria-label="Ver irregularidade no mapa">
                            Ver no Mapa
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Não há irregularidades registradas no momento.</p>
    {% endif %}
</div>

<!-- Modal para o Mapa -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mapModalLabel">Mapa da Irregularidade</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <!-- Placeholder para spinner -->
                <div id="mapLoader" class="text-center my-3" style="display: none;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                </div>
                <div id="mapContainer" style="width: 100%; height: 500px;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
// Use a notação moderna para evitar conflitos com jQuery
(function($){
    let map = null; // Escopo local para o mapa

    $(document).ready(function() {
        // Função para inicializar e exibir o mapa
        async function loadMap(routeId) {
            const baseUrl = '../wazeportal/api.php';
            const action = 'get_route_lines_irre';
            const $mapContainer = $('#mapContainer');
            const $mapLoader = $('#mapLoader');

            // Exibe o spinner enquanto carrega
            $mapLoader.show();
            $mapContainer.empty();

            // Remove instância anterior do mapa, se existir
            if (map) {
                map.remove();
                map = null;
            }

            try {
                const response = await fetch(`${baseUrl}?action=${action}&route_id_irre=${routeId}`);
                if (!response.ok) {
                    throw new Error('Erro ao obter coordenadas.');
                }

                const data = await response.json();

                if (data.length > 0) {
                    const coordinates = data.map(coord => [parseFloat(coord.y), parseFloat(coord.x)]);
                    map = L.map('mapContainer').setView(coordinates[0], 13);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                    }).addTo(map);

                    L.polyline(coordinates, { color: 'red' }).addTo(map);
                } else {
                    $mapContainer.html('<p>Não foi possível carregar as coordenadas.</p>');
                }
            } catch (error) {
                console.error('Erro ao buscar coordenadas:', error);
                $mapContainer.html('<p>Erro ao buscar as coordenadas. Tente novamente mais tarde.</p>');
            } finally {
                // Oculta o spinner quando finalizado
                $mapLoader.hide();
            }
        }

        // Evento para abrir o mapa ao clicar no botão "Ver no Mapa"
        $('.view-map').on('click', function () {
            const routeId = this.dataset.routeId;
            loadMap(routeId);
        });

        // Limpa o mapa ao fechar o modal
        $('#mapModal').on('hidden.bs.modal', function () {
            if (map) {
                map.remove();
                map = null;
            }
        });
    });
})(jQuery);
</script>
