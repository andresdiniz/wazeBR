{% set show_origin = irregularities|reduce((carry, irr) => carry or (irr.from_name is defined and irr.from_name is not empty), false) %}
{% set show_destination = irregularities|reduce((carry, irr) => carry or (irr.to_name is defined and irr.to_name is not empty), false) %}
{% set show_avg_speed = irregularities|reduce((carry, irr) => carry or (irr.avg_speed is defined and irr.avg_speed is not empty), false) %}
{% set show_avg_time = irregularities|reduce((carry, irr) => carry or (irr.avg_time is defined and irr.avg_time is not empty), false) %}
{% set show_historic_speed = irregularities|reduce((carry, irr) => carry or (irr.historic_speed is defined and irr.historic_speed is not empty), false) %}
{% set show_historic_time = irregularities|reduce((carry, irr) => carry or (irr.historic_time is defined and irr.historic_time is not empty), false) %}
{% set show_jam_level = irregularities|reduce((carry, irr) => carry or (irr.jam_level is defined and irr.jam_level is not empty), false) %}

<div class="container">
    <h2>Irregularidades</h2>
    {% if irregularities is not empty %}
        <div class="d-none d-lg-block">
            <div class="table-responsive">
                <table id="irregularitiesTable" class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            {% if show_origin %}<th>Origem</th>{% endif %}
                            {% if show_destination %}<th>Destino</th>{% endif %}
                            {% if show_avg_speed %}<th>Velocidade Média</th>{% endif %}
                            {% if show_avg_time %}<th>Tempo Médio</th>{% endif %}
                            {% if show_historic_speed %}<th>Velocidade Histórica</th>{% endif %}
                            {% if show_historic_time %}<th>Tempo Histórico</th>{% endif %}
                            {% if show_jam_level %}<th>Nível de Congestionamento</th>{% endif %}
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for irregularity in irregularities %}
                            <tr>
                                <td>{{ irregularity.id }}</td>
                                <td>{{ irregularity.name }}</td>
                                {% if show_origin %}<td>{{ irregularity.from_name|default('') }}</td>{% endif %}
                                {% if show_destination %}<td>{{ irregularity.to_name|default('') }}</td>{% endif %}
                                {% if show_avg_speed %}<td>{{ irregularity.avg_speed|default(0)|number_format(2, '.', ',') }} Km/h</td>{% endif %}
                                {% if show_avg_time %}<td>{{ (irregularity.avg_time|default(0) / 60)|number_format(2, '.', ',') }} min</td>{% endif %}
                                {% if show_historic_speed %}<td>{{ irregularity.historic_speed|default(0)|number_format(2, '.', ',') }} Km/h</td>{% endif %}
                                {% if show_historic_time %}<td>{{ (irregularity.historic_time|default(0) / 60)|number_format(2, '.', ',') }} min</td>{% endif %}
                                {% if show_jam_level %}<td>{{ irregularity.jam_level|default('') }}</td>{% endif %}
                                <td>
                                    <button class="btn btn-primary btn-sm view-map" data-route-id="{{ irregularity.id }}" data-route-name="{{ irregularity.name }}" data-bs-toggle="modal" data-bs-target="#mapModal">Ver no Mapa</button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-lg-none">
            {% for irregularity in irregularities %}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ irregularity.name }}</h5>
                        <p class="card-text">
                            {% if show_origin %}<strong>Origem:</strong> {{ irregularity.from_name|default('') }}<br>{% endif %}
                            {% if show_destination %}<strong>Destino:</strong> {{ irregularity.to_name|default('') }}<br>{% endif %}
                            {% if show_avg_speed %}<strong>Velocidade Média:</strong> {{ irregularity.avg_speed|default(0)|number_format(2) }} km/h<br>{% endif %}
                            {% if show_avg_time %}<strong>Tempo Médio:</strong> {{ (irregularity.avg_time|default(0) / 60)|number_format(2) }} min<br>{% endif %}
                            {% if show_historic_speed %}<strong>Velocidade Histórica:</strong> {{ irregularity.historic_speed|default(0)|number_format(2) }} km/h<br>{% endif %}
                            {% if show_historic_time %}<strong>Tempo Histórico:</strong> {{ (irregularity.historic_time|default(0) / 60)|number_format(2) }} min<br>{% endif %}
                            {% if show_jam_level %}<strong>Nível de Congestionamento:</strong> {{ irregularity.jam_level|default('') }}{% endif %}
                        </p>
                        <button class="btn btn-primary btn-sm view-map" data-route-id="{{ irregularity.id }}" data-route-name="{{ irregularity.name }}" data-bs-toggle="modal" data-bs-target="#mapModal">Ver no Mapa</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Não há irregularidades registradas no momento.</p>
    {% endif %}
</div>

<!-- Modal para o Mapa -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mapModalLabel">Mapa da Irregularidade</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <iframe id="wazeMapIframe" src="" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.view-map').forEach(button => {
        button.addEventListener('click', function() {
            const routeId = this.dataset.routeId;
            const routeName = this.dataset.routeName;
    
            // Aqui você precisaria ter as coordenadas armazenadas junto das irregularidades
            const lat = this.dataset.routeLat; // precisa vir do backend
            const lon = this.dataset.routeLon; // precisa vir do backend
    
            const iframe = document.getElementById('wazeMapIframe');
            iframe.src = `https://embed.waze.com/iframe?zoom=15&lat=${lat}&lon=${lon}&pin=1`;
        });
    });

    // Adiciona o evento de fechar o modal para limpar o iframe quando o modal é fechado    
    document.getElementById('mapModal').addEventListener('hidden.bs.modal', function() {
        const iframe = document.getElementById('wazeMapIframe');
        iframe.src = '';
    });
</script>
