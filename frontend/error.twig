{% set code = errorCode|default('500') %}
{% set defaultTitle = 'Erro inesperado' %}
{% set defaultMessage = 'Algo deu errado ao processar sua requisição.' %}

{# Lógica para definir títulos e mensagens específicas #}
{% if code == 400 %}
    {% set defaultTitle = 'Requisição Inválida' %}
    {% set defaultMessage = 'O servidor não conseguiu processar sua requisição devido a dados incorretos.' %}
    {% set errorIcon = 'fa-exclamation-triangle' %}
    {% set errorColor = '#f39c12' %}
{% elseif code == 401 %}
    {% set defaultTitle = 'Não Autorizado' %}
    {% set defaultMessage = 'Você precisa fazer login para acessar este recurso.' %}
    {% set errorIcon = 'fa-lock' %}
    {% set errorColor = '#e67e22' %}
{% elseif code == 403 %}
    {% set defaultTitle = 'Acesso Negado' %}
    {% set defaultMessage = 'Você não tem permissão para acessar este recurso.' %}
    {% set errorIcon = 'fa-ban' %}
    {% set errorColor = '#c0392b' %}
{% elseif code == 404 %}
    {% set defaultTitle = 'Página Não Encontrada' %}
    {% set defaultMessage = 'O recurso solicitado não pôde ser encontrado no servidor.' %}
    {% set errorIcon = 'fa-search' %}
    {% set errorColor = '#3498db' %}
{% elseif code == 500 %}
    {% set defaultTitle = 'Erro Interno do Servidor' %}
    {% set defaultMessage = 'Ocorreu um erro inesperado. Tente novamente mais tarde.' %}
    {% set errorIcon = 'fa-server' %}
    {% set errorColor = '#e74c3c' %}
{% elseif code == 503 %}
    {% set defaultTitle = 'Serviço Indisponível' %}
    {% set defaultMessage = 'O servidor está temporariamente indisponível. Tente novamente em breve.' %}
    {% set errorIcon = 'fa-tools' %}
    {% set errorColor = '#95a5a6' %}
{% else %}
    {% set errorIcon = 'fa-exclamation-circle' %}
    {% set errorColor = '#e74c3c' %}
{% endif %}

{% set finalTitle = errorTitle|default(defaultTitle) %}
{% set finalMessage = errorMessage|default(defaultMessage) %}
{% set finalPageTitle = titulo|default(finalTitle) %}
{% set trace = errorTrace|default(false) %}
{% set errorId = error_id|default('N/A') %}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erro {{ code }} - {{ finalPageTitle }}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-gradient: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
            --warning-gradient: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
            --danger-gradient: linear-gradient(135deg, #e74a3b 0%, #be2617 100%);
            --info-gradient: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --card-shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            
            /* Variáveis para modo claro */
            --bg-color: #f8f9fc;
            --card-bg: #ffffff;
            --text-primary: #2c3e50;
            --text-secondary: #858796;
            --text-muted: #858796;
            --border-color: #e3e6f0;
            --table-hover: #f8f9fc;
            --header-border: #e3e6f0;
            --legend-bg: #ffffff;
            --empty-icon-color: #d1d3e2;
            --error-color: {{ errorColor }};
        }

        /* Modo Escuro */
        body.dark-mode {
            --bg-color: #1a1d29;
            --card-bg: #252836;
            --text-primary: #e4e6eb;
            --text-secondary: #b0b3b8;
            --text-muted: #8a8d93;
            --border-color: #3a3d4a;
            --table-hover: #2d3142;
            --header-border: #3a3d4a;
            --legend-bg: #252836;
            --empty-icon-color: #3a3d4a;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            --card-shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--primary-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
            transition: background 0.3s ease;
        }

        /* Animação de fundo */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            opacity: 0.1;
        }

        .bg-animation span {
            position: absolute;
            display: block;
            width: 20px;
            height: 20px;
            background: rgba(255, 255, 255, 0.5);
            animation: float 25s linear infinite;
            bottom: -150px;
            border-radius: 50%;
        }

        .bg-animation span:nth-child(1) { left: 25%; width: 80px; height: 80px; animation-delay: 0s; }
        .bg-animation span:nth-child(2) { left: 10%; width: 20px; height: 20px; animation-delay: 2s; animation-duration: 12s; }
        .bg-animation span:nth-child(3) { left: 70%; width: 20px; height: 20px; animation-delay: 4s; }
        .bg-animation span:nth-child(4) { left: 40%; width: 60px; height: 60px; animation-delay: 0s; animation-duration: 18s; }
        .bg-animation span:nth-child(5) { left: 65%; width: 20px; height: 20px; animation-delay: 0s; }
        .bg-animation span:nth-child(6) { left: 75%; width: 110px; height: 110px; animation-delay: 3s; }
        .bg-animation span:nth-child(7) { left: 35%; width: 150px; height: 150px; animation-delay: 7s; }
        .bg-animation span:nth-child(8) { left: 50%; width: 25px; height: 25px; animation-delay: 15s; animation-duration: 45s; }
        .bg-animation span:nth-child(9) { left: 20%; width: 15px; height: 15px; animation-delay: 2s; animation-duration: 35s; }
        .bg-animation span:nth-child(10) { left: 85%; width: 150px; height: 150px; animation-delay: 0s; animation-duration: 11s; }

        @keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
            }
            100% {
                transform: translateY(-1000px) rotate(720deg);
                opacity: 0;
            }
        }

        .error-container {
            position: relative;
            z-index: 1;
            background: var(--card-bg);
            border-radius: 1rem;
            padding: 3rem 2.5rem;
            max-width: 700px;
            width: 100%;
            box-shadow: var(--card-shadow);
            animation: slideUp 0.6s ease-out;
            text-align: center;
            transition: all 0.3s ease;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 2rem;
            background: linear-gradient(135deg, var(--error-color), #c0392b);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: pulse 2s ease-in-out infinite;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .error-icon i {
            font-size: 3.5rem;
            color: white;
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            }
            50% {
                transform: scale(1.05);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            }
        }

        .error-code {
            font-size: 5rem;
            font-weight: 900;
            color: var(--error-color);
            margin-bottom: 0.5rem;
            line-height: 1;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .error-title {
            font-size: 2rem;
            color: var(--text-primary);
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .error-message {
            font-size: 1.125rem;
            color: var(--text-secondary);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .error-id {
            font-size: 0.875rem;
            color: var(--text-muted);
            margin-bottom: 2rem;
            padding: 0.75rem 1.5rem;
            background: var(--table-hover);
            border-radius: 0.5rem;
            display: inline-block;
            border: 1px solid var(--border-color);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .error-id:hover {
            background: var(--border-color);
            transform: translateY(-2px);
        }

        .error-id strong {
            color: var(--text-primary);
        }

        .error-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 1.5rem;
        }

        .btn {
            padding: 0.875rem 1.75rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
            box-shadow: var(--card-shadow);
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: var(--card-shadow-hover);
        }

        .btn-secondary {
            background: var(--card-bg);
            color: var(--text-primary);
            border: 2px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: var(--border-color);
            transform: translateY(-3px);
            box-shadow: var(--card-shadow-hover);
        }

        .suggestions {
            text-align: left;
            margin-top: 2rem;
            padding: 1.5rem;
            background: rgba(28, 200, 138, 0.1);
            border-radius: 0.75rem;
            border-left: 4px solid #1cc88a;
        }

        .suggestions h3 {
            font-size: 1.125rem;
            color: #13855c;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .suggestions ul {
            list-style: none;
            padding: 0;
        }

        .suggestions li {
            padding: 0.5rem 0;
            color: #13855c;
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .suggestions li i {
            color: #1cc88a;
            margin-top: 0.25rem;
        }

        .error-details {
            text-align: left;
            margin-top: 2rem;
            padding: 1.5rem;
            background: var(--table-hover);
            border-radius: 0.75rem;
            border-left: 4px solid var(--error-color);
        }

        .error-details-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
            user-select: none;
            margin-bottom: 1rem;
        }

        .error-details-header h3 {
            font-size: 1.125rem;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .error-details-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .error-details-content.show {
            max-height: 500px;
            overflow-y: auto;
        }

        .error-details pre {
            background: var(--card-bg);
            padding: 1rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            line-height: 1.6;
            color: var(--text-primary);
            white-space: pre-wrap;
            word-wrap: break-word;
            border: 1px solid var(--border-color);
        }

        .toggle-icon {
            transition: transform 0.3s ease;
        }

        .toggle-icon.rotated {
            transform: rotate(180deg);
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .error-container {
                padding: 2rem 1.5rem;
            }

            .error-code {
                font-size: 4rem;
            }

            .error-title {
                font-size: 1.75rem;
            }

            .error-message {
                font-size: 1rem;
            }

            .error-icon {
                width: 100px;
                height: 100px;
            }

            .error-icon i {
                font-size: 2.5rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .error-actions {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .error-container {
                padding: 1.5rem 1rem;
            }

            .error-code {
                font-size: 3rem;
            }

            .error-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body class="{% if app.request.cookies.get('darkMode') == 'true' %}dark-mode{% endif %}">
    <!-- Animação de fundo -->
    <div class="bg-animation">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

    <!-- Container principal -->
    <div class="error-container">
        <!-- Ícone animado -->
        <div class="error-icon">
            <i class="fas {{ errorIcon }}"></i>
        </div>

        <!-- Código do erro -->
        <div class="error-code">{{ code }}</div>

        <!-- Título -->
        <h1 class="error-title">{{ finalTitle }}</h1>

        <!-- Mensagem -->
        <p class="error-message">{{ finalMessage }}</p>

        <!-- ID do erro -->
        {% if errorId != 'N/A' %}
        <div class="error-id" id="errorId">
            <strong>ID do Erro:</strong> {{ errorId }}
            <br>
            <small>Clique para copiar • Use este ID ao contatar o suporte</small>
        </div>
        {% endif %}

        <!-- Ações -->
        <div class="error-actions">
            <a href="{{ pagina_retorno|default('/') }}" class="btn btn-primary">
                <i class="fas fa-home"></i>
                Página Inicial
            </a>
            <button onclick="history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Voltar
            </button>
            {% if code == 500 or code == 503 %}
            <button onclick="location.reload()" class="btn btn-secondary">
                <i class="fas fa-redo"></i>
                Recarregar
            </button>
            {% endif %}
        </div>

        <!-- Sugestões contextuais -->
        {% if code == 404 %}
        <div class="suggestions">
            <h3><i class="fas fa-lightbulb"></i> Sugestões:</h3>
            <ul>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Verifique se o endereço foi digitado corretamente</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Navegue pelo menu principal para encontrar o conteúdo</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Use a busca do sistema se disponível</span>
                </li>
            </ul>
        </div>
        {% elseif code == 500 or code == 503 %}
        <div class="suggestions">
            <h3><i class="fas fa-lightbulb"></i> Sugestões:</h3>
            <ul>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Tente recarregar a página</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Aguarde alguns minutos e tente novamente</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Se o problema persistir, entre em contato com o suporte</span>
                </li>
            </ul>
        </div>
        {% elseif code == 403 %}
        <div class="suggestions">
            <h3><i class="fas fa-lightbulb"></i> Sugestões:</h3>
            <ul>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Verifique se você está logado com a conta correta</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Solicite permissões de acesso ao administrador</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Entre em contato com o suporte para mais informações</span>
                </li>
            </ul>
        </div>
        {% endif %}

        <!-- Detalhes técnicos (apenas se houver e em ambiente de desenvolvimento) -->
        {% if (errorDescription is defined or trace) and app.environment == 'dev' %}
        <div class="error-details">
            <div class="error-details-header" onclick="toggleDetails()">
                <h3>
                    <i class="fas fa-code"></i>
                    Detalhes Técnicos
                </h3>
                <i class="fas fa-chevron-down toggle-icon" id="toggleIcon"></i>
            </div>
            <div class="error-details-content" id="detailsContent">
                {% if errorDescription is defined %}
                <h4 style="margin-bottom: 0.5rem; color: var(--text-secondary);">Descrição:</h4>
                <pre>{{ errorDescription }}</pre>
                {% endif %}
                
                {% if trace %}
                <h4 style="margin: 1rem 0 0.5rem; color: var(--text-secondary);">Stack Trace:</h4>
                <pre>{{ trace }}</pre>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>

    <script>
        // Toggle detalhes técnicos
        function toggleDetails() {
            const content = document.getElementById('detailsContent');
            const icon = document.getElementById('toggleIcon');
            
            if (content && icon) {
                content.classList.toggle('show');
                icon.classList.toggle('rotated');
            }
        }

        // Copiar ID do erro ao clicar
        const errorIdElement = document.getElementById('errorId');
        if (errorIdElement) {
            errorIdElement.addEventListener('click', function() {
                const errorId = '{{ errorId }}';
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(errorId).then(() => {
                        const original = this.innerHTML;
                        this.innerHTML = '<strong><i class="fas fa-check"></i> ID copiado!</strong><br><small>Cole para o suporte técnico</small>';
                        this.style.background = 'rgba(28, 200, 138, 0.2)';
                        this.style.borderColor = '#1cc88a';
                        
                        setTimeout(() => {
                            this.innerHTML = original;
                            this.style.background = '';
                            this.style.borderColor = '';
                        }, 3000);
                    }).catch(err => {
                        console.error('Falha ao copiar: ', err);
                        fallbackCopyTextToClipboard(errorId);
                    });
                } else {
                    fallbackCopyTextToClipboard(errorId);
                }
            });
        }

        // Fallback para copiar texto
        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.opacity = '0';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                const successful = document.execCommand('copy');
                const msg = successful ? 'sucesso' : 'falha';
                console.log('Cópia fallback: ' + msg);
                
                if (errorIdElement) {
                    const original = errorIdElement.innerHTML;
                    errorIdElement.innerHTML = '<strong><i class="fas fa-check"></i> ID copiado!</strong><br><small>Cole para o suporte técnico</small>';
                    errorIdElement.style.background = 'rgba(28, 200, 138, 0.2)';
                    errorIdElement.style.borderColor = '#1cc88a';
                    
                    setTimeout(() => {
                        errorIdElement.innerHTML = original;
                        errorIdElement.style.background = '';
                        errorIdElement.style.borderColor = '';
                    }, 3000);
                }
            } catch (err) {
                console.error('Fallback: Oops, não foi possível copiar: ', err);
            }
            
            document.body.removeChild(textArea);
        }

        // Log do erro no console (para debug)
        console.error('Erro {{ code }}: {{ finalTitle }}', {
            errorId: '{{ errorId }}',
            message: '{{ finalMessage }}',
            url: window.location.href,
            timestamp: new Date().toISOString()
        });

        // Detectar modo escuro do sistema
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.body.classList.add('dark-mode');
        }

        // Alternar modo escuro/claro (opcional - pode ser removido)
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            // Salvar preferência em cookie
            document.cookie = `darkMode=${document.body.classList.contains('dark-mode')}; path=/; max-age=31536000`;
        }
    </script>
</body>
</html>