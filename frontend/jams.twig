<!-- Leaflet CSS + JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Highcharts -->
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/heatmap.js"></script>

<!-- Highcharts Heatmap CSS -->
<link rel="stylesheet" href="https://code.highcharts.com/css/highcharts.css" />

<script src="https://omnipotent.net/jquery.sparkline/2.1.2/jquery.sparkline.js"></script>


<style>
    .leaflet-container {
        height: 400px;
        width: 100%;
    }
    .leaflet-control-attribution {
        display: none;
    }   

    .leaflet-control-zoom {
        background: rgba(255, 255, 255, 0.8);
        border-radius: 4px;
        padding: 5px;
    }
    .leaflet-control-zoom a {
        color: #000;
    }
    .leaflet-control-zoom a:hover {
        color: #007bff;
    }
    .leaflet-control-zoom a:active {
        color: #0056b3;
    }
    .leaflet-control-zoom a:focus {
        outline: none;
    }
    
    .leaflet-control-zoom a.leaflet-control-zoom-in {
        background: url('https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png') no-repeat center center;
        width: 20px;
        height: 20px;
    }
    .leaflet-control-zoom a.leaflet-control-zoom-out {
        background: url('https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png') no-repeat center center;
        width: 20px;
        height: 20px;
    }
    .leaflet-control-zoom a.leaflet-control-zoom-in:hover,
    .leaflet-control-zoom a.leaflet-control-zoom-out:hover {
        background-color: rgba(255, 255, 255, 0.8);
    }
    #mapModal {
        font-family: 'Roboto', sans-serif;
    }
    
    #mapModal .card {
        border-radius: 10px;
        transition: transform 0.3s ease;
    }
    
    #mapModal .card:hover {
        transform: translateY(-2px);
    }
    
    #mapModal .modal-header {
        border-radius: 0;
        border-bottom: 3px solid rgba(255,255,255,0.2);
    }
    
    #mapModal .close {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }
    
    #mapModal .close:hover {
        opacity: 1;
    }

    </style>
<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h2 class="h3 mb-0 text-gray-800">ROTAS Monitoradas</h2>
    </div>

    {# DEBUG temporário: remova em produção 
    <pre>{{ dump(routes) }}</pre>
    #}

    <div class="row">
        <div class="col-12">
            {% if jams is not empty %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Detalhes das Rotas</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered" id="routesTable" width="100%" cellspacing="0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Cidade</th>
                                        <th>Início</th>
                                        <th>Fim</th>
                                        <th class="text-center">Vel. Normal (km/h)</th>
                                        <th class="text-center">Vel. Atual (km/h)</th>
                                        <th class="text-center">Atraso (min)</th>
                                        <th class="text-center">Comprimento (m)</th>
                                        <th class="text-center">Publicado em</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for jam in jams %}
                                        {% set speedKMH = jam.speedKMH|default(0) %}
                                        {% set speed = jam.speed|default(0) %}
                                        {% set delay_minutes = jam.delay / 60 %}
                                        {% set pub_date = jam.pubMillis / 1000 %}
                                        {% set length = jam.length|default(0) %}
                                        <tr data-uuid="{{ jam.uuid }}" class="
                                            {% if delay_minutes > 5 %}
                                                table-danger
                                            {% elseif delay_minutes > 1 %}
                                                table-warning
                                            {% else %}
                                                table-light
                                            {% endif %}
                                        ">
                                            <td title="{{ jam.city }}">{{ jam.city }}</td>
                                            <td title="{{ jam.street }}">{{ jam.street }}</td>
                                            <td title="{{ jam.endNode }}">{{ jam.endNode }}</td>
                                            <td class="text-center">{{ speedKMH|number_format(2) }}</td>
                                            <td class="text-center">{{ (speed)|number_format(1) }}</td>
                                            <td class="text-center">{{ delay_minutes|number_format(1) }}</td>
                                            <td class="text-center">{{ length|number_format(0) }}</td>
                                            <td class="text-center">{{ pub_date|round(0, 'floor')|date("d/m/Y H:i") }}</td>
                                            <td class="text-center">
                                                {% if jam.status == 1 %}
                                                    <span class="badge badge-success">Ativo</span>
                                                {% else %}
                                                    <span class="badge badge-secondary">Inativo</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-primary btn-sm view-route"
                                                    data-toggle="modal"
                                                    data-target="#mapModal"
                                                    data-route-id="{{ jam.uuid }}"
                                                    title="Ver detalhes da rota">
                                                    <i class="fas fa-map-marker-alt"></i> VER MAPA
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>                                
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info text-center" role="alert">
                    <h4 class="alert-heading">Sem Rotas Monitoradas!</h4>
                    <p>Não há rotas configuradas ou dados disponíveis no momento.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div id="loadingIndicator" style="display: none; text-align: center; padding: 20px;">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Carregando...</span>
        </div>
        <p class="mt-2 text-muted">Carregando detalhes da rota...</p>
    </div>
</div>

<!-- Modal para exibir detalhes da rota -->
<!-- Modal HTML -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Detalhes da Rota: <span id="modalRouteName"></span></h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <!-- Loading Indicator Simplificado -->
                <div id="loadingIndicator" class="text-center" style="display: none;">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>

                <!-- Layout Principal -->
                <div class="container-fluid">
                    <div class="row">
                        <!-- Mapa -->
                        <div class="col-12 mb-4">
                            <div class="card border-0 shadow">
                                <div class="card-body p-2">
                                    <div id="mapContainer" style="height: 400px; border-radius: 8px;"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Dados Técnicos -->
                        <div class="col-12">
                            <div class="card border-0 shadow">
                                <div class="card-body">
                                    <h6 class="text-primary mb-4">
                                        <i class="fas fa-info-circle mr-2"></i>Informações da Via
                                    </h6>
                                    <div id="insightsContainer" class="row">
                                        <!-- Conteúdo dinâmico -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-2"></i>Fechar
                </button>
            </div>
        </div>
    </div>
</div>

<script src="../js/scripts-jams.js"></script>
