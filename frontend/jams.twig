<script>
document.addEventListener("DOMContentLoaded", function () {
    // Calcular estatísticas totais
    function calculateStats() {
        let totalDelay = 0;
        let totalLength = 0;
        let totalSpeed = 0;
        
        {% for jam in jams %}
            totalDelay += {{ jam.delay / 60 }};
            totalLength += {{ jam.length }};
            totalSpeed += {{ jam.speed }};
        {% endfor %}
        
        const avgSpeed = {{ jams|length > 0 ? 'totalSpeed / ' ~ jams|length : '0' }};
        
        // Atualizar os cards
        document.getElementById('totalDelay').textContent = totalDelay.toFixed(1);
        document.getElementById('totalLength').textContent = (totalLength / 1000).toFixed(2);
        document.getElementById('avgSpeed').textContent = avgSpeed.toFixed(1);
    }
    
    // Inicializar estatísticas
    calculateStats();
    
    // Inicializar DataTable
    if ($('#routesTable').length) {
        $('#routesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json'
            },
            responsive: true,
            pageLength: 10,
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
            order: [[7, 'desc']],
            columnDefs: [
                { orderable: false, targets: [8] },
                { responsivePriority: 1, targets: [0, 1, 8] },
                { responsivePriority: 2, targets: [2, 3, 4] },
                { responsivePriority: 3, targets: [5, 6, 7] }
            ],
            dom: '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                 '<"row"<"col-sm-12"tr>>' +
                 '<"row mt-3"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            initComplete: function() {
                console.log('Tabela de congestionamentos carregada com sucesso');
            }
        });
    }
    
    // Inicializar tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl, {
            customClass: 'custom-tooltip'
        });
    });
    
    // Configurar o evento do modal
    const mapModal = document.getElementById('mapModal');
    let currentMap = null;

    mapModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const routeId = button.getAttribute('data-route-id');
        
        // Mostrar loading
        const modalLoading = document.getElementById('modalLoading');
        const mapContainer = document.getElementById('mapContainer');
        const insightsContent = document.getElementById('insightsContent');
        
        if (modalLoading) modalLoading.classList.remove('d-none');
        if (mapContainer) mapContainer.innerHTML = ''; // Limpar mapa anterior
        if (insightsContent) insightsContent.innerHTML = ''; // Limpar insights
        
        // Simular carregamento (substituir por chamada AJAX real)
        setTimeout(() => {
            // Carregar mapa
            if (currentMap) {
                currentMap.remove();
            }
            
            // Criar novo mapa
            currentMap = L.map('modalMapContainer').setView([-20.66, -43.79], 13);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(currentMap);
            
            // Adicionar marcador
            L.marker([-20.66, -43.79]).addTo(currentMap)
                .bindPopup('Local do Congestionamento')
                .openPopup();
            
            // Atualizar insights
            if (insightsContent) {
                insightsContent.innerHTML = `
                    <div class="col-md-3">
                        <div class="insight-card">
                            <h6><i class="fas fa-tachometer-alt me-2"></i>Velocidade Atual</h6>
                            <p>15.2 km/h</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="insight-card" style="border-left-color: #ffc107;">
                            <h6><i class="fas fa-clock me-2"></i>Atraso Atual</h6>
                            <p>8.5 min</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="insight-card" style="border-left-color: #1cc88a;">
                            <h6><i class="fas fa-road me-2"></i>Extensão</h6>
                            <p>1.2 km</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="insight-card" style="border-left-color: #36b9cc;">
                            <h6><i class="fas fa-car me-2"></i>Nível</h6>
                            <p>Alto</p>
                        </div>
                    </div>
                `;
            }
            
            // Esconder loading
            if (modalLoading) modalLoading.classList.add('d-none');
            
            // Ajustar tamanho do mapa
            setTimeout(() => {
                if (currentMap) {
                    currentMap.invalidateSize();
                }
            }, 100);
        }, 1000);
    });

    mapModal.addEventListener('hidden.bs.modal', function () {
        // Limpar mapa quando o modal é fechado
        if (currentMap) {
            currentMap.remove();
            currentMap = null;
        }
    });
    
    // Atualizar estatísticas periodicamente (a cada 30 segundos)
    setInterval(() => {
        // Em produção, você faria uma requisição AJAX para atualizar os dados
        // Por enquanto, apenas recalculamos as estatísticas
        calculateStats();
        
        // Mostrar notificação de atualização
        if (typeof $.notify !== 'undefined') {
            $.notify("Estatísticas atualizadas", {
                position: "top right",
                className: "info",
                autoHideDelay: 2000
            });
        }
    }, 30000);
    
    // Configurar animação do indicador "ao vivo"
    const pulseDot = document.querySelector('.pulse-dot');
    if (pulseDot) {
        setInterval(() => {
            pulseDot.style.animation = 'none';
            setTimeout(() => {
                pulseDot.style.animation = 'pulse-animation 2s ease-in-out infinite';
            }, 10);
        }, 10000);
    }
    
    console.log('Dashboard de congestionamentos inicializado com sucesso!');
});
</script>
