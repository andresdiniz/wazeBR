<style>
    /* Estilos específicos para a página de congestionamentos */
    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--header-border);
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .page-header .subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .live-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(220, 53, 69, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        color: #dc3545;
    }

    .live-indicator .pulse-dot {
        width: 10px;
        height: 10px;
        background: #dc3545;
        border-radius: 50%;
        animation: pulse-animation 2s ease-in-out infinite;
    }

    @keyframes pulse-animation {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.7;
        }
    }

    .stats-card {
        background: var(--card-bg);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
        height: 100%;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--card-shadow-hover);
    }

    .stats-card.primary {
        border-left-color: #4e73df;
    }

    .stats-card.success {
        border-left-color: #1cc88a;
    }

    .stats-card.warning {
        border-left-color: #f6c23e;
    }

    .stats-card.danger {
        border-left-color: #e74a3b;
    }

    .stats-card.info {
        border-left-color: #36b9cc;
    }

    .stats-card-icon {
        width: 60px;
        height: 60px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .stats-card.primary .stats-card-icon {
        background: linear-gradient(135deg, rgba(78, 115, 223, 0.1), rgba(54, 101, 223, 0.1));
        color: #4e73df;
    }

    .stats-card.success .stats-card-icon {
        background: linear-gradient(135deg, rgba(28, 200, 138, 0.1), rgba(19, 133, 92, 0.1));
        color: #1cc88a;
    }

    .stats-card.warning .stats-card-icon {
        background: linear-gradient(135deg, rgba(246, 194, 62, 0.1), rgba(221, 162, 10, 0.1));
        color: #f6c23e;
    }

    .stats-card.danger .stats-card-icon {
        background: linear-gradient(135deg, rgba(231, 74, 59, 0.1), rgba(190, 38, 23, 0.1));
        color: #e74a3b;
    }

    .stats-card.info .stats-card-icon {
        background: linear-gradient(135deg, rgba(54, 185, 204, 0.1), rgba(37, 131, 145, 0.1));
        color: #36b9cc;
    }

    .stats-card-value {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .stats-card-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modern-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: var(--card-shadow);
        background: var(--card-bg);
        margin-bottom: 1.5rem;
    }

    .modern-card:hover {
        box-shadow: var(--card-shadow-hover);
    }

    .modern-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 1.05rem;
    }

    .modern-card-header i {
        font-size: 1.2rem;
    }

    .modern-card-header.bg-warning-gradient {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
    }

    .modern-card-header.bg-danger-gradient {
        background: linear-gradient(135deg, #e74a3b 0%, #be2617 100%);
    }

    .modern-card-header.bg-success-gradient {
        background: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
    }

    .modern-card-header.bg-info-gradient {
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
    }

    .badge-counter {
        background: rgba(255, 255, 255, 0.25);
        padding: 0.4rem 0.75rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.95rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .modern-table {
        margin-bottom: 0;
        font-size: 0.9rem;
    }

    .modern-table thead th {
        background: var(--table-hover);
        border: none;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: var(--text-secondary);
        padding: 1rem 0.5rem;
        letter-spacing: 0.5px;
        text-align: center;
        white-space: nowrap;
    }

    .modern-table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid var(--border-color);
    }

    .modern-table tbody tr:hover {
        background-color: var(--table-hover);
        transform: translateX(3px);
    }

    .modern-table tbody tr:last-child {
        border-bottom: none;
    }

    .modern-table tbody td {
        padding: 0.75rem 0.5rem;
        vertical-align: middle;
        color: var(--text-primary);
        text-align: center;
    }

    .modern-table .city-cell {
        text-align: left;
    }

    .modern-table .text-truncate-cell {
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        display: inline-block;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        border: none;
        margin: 0 3px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .action-btn:hover {
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .action-btn i {
        font-size: 0.9rem;
    }

    .speed-badge {
        padding: 0.3rem 0.5rem;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
        min-width: 60px;
        white-space: nowrap;
    }

    .speed-low {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

    .speed-medium {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

    .speed-high {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
        border: 1px solid rgba(40, 167, 69, 0.2);
    }

    .delay-badge {
        padding: 0.3rem 0.5rem;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.8rem;
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
        border: 1px solid rgba(108, 117, 125, 0.2);
        white-space: nowrap;
        min-width: 50px;
    }

    .length-badge {
        padding: 0.3rem 0.5rem;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.8rem;
        background: rgba(23, 162, 184, 0.1);
        color: #17a2b8;
        border: 1px solid rgba(23, 162, 184, 0.2);
        white-space: nowrap;
        min-width: 50px;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 1rem;
    }

    .empty-state i {
        font-size: 5rem;
        color: var(--empty-icon-color);
        margin-bottom: 1.5rem;
        opacity: 0.4;
    }

    .empty-state h5 {
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 0;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--card-bg);
        opacity: 0.95;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        border-radius: 1rem;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid var(--border-color);
        border-top: 4px solid #4e73df;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-text {
        margin-top: 1rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Modal styles */
    .modal-content {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--card-shadow-hover);
    }

    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        border-bottom: none;
    }

    .modal-header .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    .modal-header .btn-close:hover {
        opacity: 1;
    }

    .modal-title {
        font-weight: 700;
        font-size: 1.25rem;
    }

    .modal-body {
        padding: 0;
        position: relative;
    }

    .modal-map-container {
        height: 400px;
        width: 100%;
        border-radius: 0;
    }

    .insights-container {
        padding: 1rem;
        background: var(--card-bg);
    }

    .insight-card {
        background: var(--table-hover);
        border-radius: 0.75rem;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        border-left: 4px solid #4e73df;
    }

    .insight-card h6 {
        font-size: 0.8rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .insight-card p {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0;
    }

    /* Responsividade para tabelas */
    @media (max-width: 991.98px) {
        .modern-table {
            font-size: 0.85rem;
        }
        
        .modern-table thead th,
        .modern-table tbody td {
            padding: 0.5rem 0.25rem;
        }
        
        .speed-badge,
        .delay-badge,
        .length-badge {
            font-size: 0.75rem;
            padding: 0.2rem 0.3rem;
            min-width: 45px;
        }
        
        .text-truncate-cell {
            max-width: 120px;
        }
    }

    @media (max-width: 767.98px) {
        .page-header h1 {
            font-size: 1.5rem;
        }

        .stats-card-value {
            font-size: 2rem;
        }

        .stats-card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
        }
        
        /* Para telas muito pequenas, ocultamos algumas colunas */
        .modern-table .mobile-hide {
            display: none;
        }
        
        .modern-table .mobile-text-small {
            font-size: 0.8rem;
        }
        
        .action-btn {
            width: 30px;
            height: 30px;
            margin: 0 2px;
        }
        
        .action-btn i {
            font-size: 0.8rem;
        }

        .modal-map-container {
            height: 300px;
        }
        
        .speed-badge,
        .delay-badge,
        .length-badge {
            font-size: 0.7rem;
            padding: 0.15rem 0.25rem;
            min-width: 40px;
        }
        
        .insight-card {
            padding: 0.5rem;
            margin-bottom: 0.25rem;
        }
        
        .insight-card h6 {
            font-size: 0.7rem;
        }
        
        .insight-card p {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 575.98px) {
        /* Em telas muito pequenas, simplificamos ainda mais */
        .modern-table .mobile-hide-2 {
            display: none;
        }
        
        .text-truncate-cell {
            max-width: 80px;
        }
        
        .stats-card {
            padding: 1rem;
        }
        
        .stats-card-value {
            font-size: 1.75rem;
        }
    }

    /* Tooltip customizado */
    .custom-tooltip {
        background: var(--card-bg) !important;
        color: var(--text-primary) !important;
        padding: 0.5rem 0.75rem !important;
        border-radius: 0.5rem !important;
        font-size: 0.85rem !important;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3) !important;
        border: 1px solid var(--border-color) !important;
    }
    
    /* Melhorias para DataTable responsivo */
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
        font-size: 0.85rem;
    }
    
    @media (max-width: 767.98px) {
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            font-size: 0.8rem;
        }
        
        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }
    }
</style>

<!-- Leaflet CSS + JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div class="container-fluid px-3 px-lg-4 mt-4">
    
    <!-- Header da Página -->
    <div class="page-header fade-in">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1><i class="fas fa-traffic-light me-2"></i>Congestionamentos em Tempo Real</h1>
                <p class="subtitle mb-0">
                    Monitoramento de tráfego e congestionamentos ativos
                </p>
            </div>
            <div class="live-indicator">
                <span class="pulse-dot"></span>
                DADOS AO VIVO
            </div>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in">
            <div class="stats-card danger">
                <div class="stats-card-icon">
                    <i class="fas fa-car-crash"></i>
                </div>
                <div class="stats-card-value">{{ jams|length }}</div>
                <div class="stats-card-label">Congestionamentos Ativos</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in" style="animation-delay: 0.1s;">
            <div class="stats-card warning">
                <div class="stats-card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-card-value">
                    {% set total_delay = 0 %}
                    {% for jam in jams %}
                        {% set total_delay = total_delay + (jam.delay / 60) %}
                    {% endfor %}
                    {{ total_delay|number_format(0) }}
                </div>
                <div class="stats-card-label">Atraso Total (min)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-md-0 fade-in" style="animation-delay: 0.2s;">
            <div class="stats-card info">
                <div class="stats-card-icon">
                    <i class="fas fa-road"></i>
                </div>
                <div class="stats-card-value">
                    {% set total_length = 0 %}
                    {% for jam in jams %}
                        {% set total_length = total_length + jam.length %}
                    {% endfor %}
                    {{ (total_length / 1000)|number_format(1) }}
                </div>
                <div class="stats-card-label">Extensão Total (km)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="stats-card success">
                <div class="stats-card-icon">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div class="stats-card-value">
                    {% set total_speed = 0 %}
                    {% for jam in jams %}
                        {% set total_speed = total_speed + jam.speed %}
                    {% endfor %}
                    {% if jams|length > 0 %}
                        {{ (total_speed / jams|length)|number_format(0) }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-label">Velocidade Média (km/h)</div>
            </div>
        </div>
    </div>

    <!-- Tabela de Congestionamentos -->
    <div class="fade-in" style="animation-delay: 0.4s;">
        <div class="card modern-card">
            <div class="modern-card-header bg-danger-gradient">
                <span>
                    <i class="fas fa-list-alt me-2"></i>
                    Lista de Congestionamentos Ativos
                </span>
                {% if jams is not empty %}
                    <span class="badge-counter">{{ jams|length }} ativos</span>
                {% endif %}
            </div>
            
            <div class="card-body p-0 position-relative">
                {% if jams is not empty %}
                    <div class="table-responsive">
                        <table class="table modern-table" id="routesTable">
                            <thead>
                                <tr>
                                    <th class="mobile-text-small">Cidade</th>
                                    <th class="mobile-text-small">Início</th>
                                    <th class="mobile-text-small mobile-hide-2">Fim</th>
                                    <th class="mobile-text-small">Vel. Normal</th>
                                    <th class="mobile-text-small mobile-hide">Vel. Atual</th>
                                    <th class="mobile-text-small">Atraso</th>
                                    <th class="mobile-text-small mobile-hide-2">Comprimento</th>
                                    <th class="mobile-text-small d-none d-lg-table-cell">Publicado em</th>
                                    <th class="text-center mobile-text-small">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for jam in jams %}
                                {% set delay_minutes = jam.delay / 60 %}
                                {% set pub_date = null %}
                                
                                {# Corrigir o parsing da data #}
                                {% if jam.pubMillis is defined and jam.pubMillis is not empty %}
                                    {# Tentar diferentes formatos #}
                                    {% if jam.pubMillis matches '/^\\d+\\.\\d+$/' %}
                                        {# É um timestamp com ponto decimal #}
                                        {% set pub_timestamp = jam.pubMillis|split('.')|first %}
                                        {% set pub_date = pub_timestamp|date('d/m/Y H:i:s') %}
                                    {% elseif jam.pubMillis matches '/^\\d+$/' %}
                                        {# É um timestamp inteiro #}
                                        {% set pub_date = jam.pubMillis|date('d/m/Y H:i:s') %}
                                    {% else %}
                                        {# Tentar usar como string #}
                                        {% set pub_date = jam.pubMillis %}
                                    {% endif %}
                                {% endif %}
                                
                                <tr>
                                    <td class="city-cell">
                                        <div class="fw-bold text-primary">{{ jam.city[:15] }}{% if jam.city|length > 15 %}...{% endif %}</div>
                                        <small class="text-muted d-lg-none d-block mobile-text-small">
                                            {% if pub_date %}
                                                {{ pub_date|slice(0, 11) }}
                                            {% endif %}
                                        </small>
                                    </td>
                                    <td>
                                        <span class="text-truncate-cell d-block" title="{{ jam.street }}">
                                            {{ jam.street[:20] }}{% if jam.street|length > 20 %}...{% endif %}
                                        </span>
                                    </td>
                                    <td class="mobile-hide-2">
                                        <span class="text-truncate-cell d-block" title="{{ jam.endNode }}">
                                            {{ jam.endNode[:20] }}{% if jam.endNode|length > 20 %}...{% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% if jam.speedKMH < 20 %}
                                            <span class="speed-badge speed-low" title="Velocidade normal: {{ jam.speedKMH|number_format(1) }} km/h">
                                                {{ jam.speedKMH|number_format(0) }} km/h
                                            </span>
                                        {% elseif jam.speedKMH < 40 %}
                                            <span class="speed-badge speed-medium" title="Velocidade normal: {{ jam.speedKMH|number_format(1) }} km/h">
                                                {{ jam.speedKMH|number_format(0) }} km/h
                                            </span>
                                        {% else %}
                                            <span class="speed-badge speed-high" title="Velocidade normal: {{ jam.speedKMH|number_format(1) }} km/h">
                                                {{ jam.speedKMH|number_format(0) }} km/h
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="mobile-hide">
                                        {% if jam.speed < 10 %}
                                            <span class="speed-badge speed-low" title="Velocidade atual: {{ jam.speed|number_format(1) }} km/h">
                                                {{ jam.speed|number_format(0) }} km/h
                                            </span>
                                        {% elseif jam.speed < 20 %}
                                            <span class="speed-badge speed-medium" title="Velocidade atual: {{ jam.speed|number_format(1) }} km/h">
                                                {{ jam.speed|number_format(0) }} km/h
                                            </span>
                                        {% else %}
                                            <span class="speed-badge speed-high" title="Velocidade atual: {{ jam.speed|number_format(1) }} km/h">
                                                {{ jam.speed|number_format(0) }} km/h
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="delay-badge" title="Atraso: {{ delay_minutes|number_format(1) }} minutos">
                                            {{ delay_minutes|number_format(0) }} min
                                        </span>
                                    </td>
                                    <td class="mobile-hide-2">
                                        <span class="length-badge" title="Comprimento: {% if jam.length >= 1000 %}{{ (jam.length / 1000)|number_format(2) }} km{% else %}{{ jam.length|number_format(0) }} m{% endif %}">
                                            {% if jam.length >= 1000 %}
                                                {{ (jam.length / 1000)|number_format(1) }} km
                                            {% else %}
                                                {{ jam.length|number_format(0) }} m
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        {% if pub_date %}
                                        <div class="text-nowrap">{{ pub_date|slice(0, 10) }}</div>
                                        <small class="text-muted">{{ pub_date|slice(11, 5) }}</small>
                                        {% else %}
                                        <div class="text-nowrap">N/A</div>
                                        <small class="text-muted">--:--</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-primary action-btn view-route" 
                                                data-bs-toggle="modal"
                                                data-bs-target="#mapModal"
                                                data-route-id="{{ jam.uuid }}"
                                                data-city="{{ jam.city }}"
                                                data-street="{{ jam.street }}"
                                                data-end-node="{{ jam.endNode }}"
                                                data-speed-kmh="{{ jam.speedKMH }}"
                                                data-speed="{{ jam.speed }}"
                                                data-delay="{{ jam.delay }}"
                                                data-length="{{ jam.length }}"
                                                data-pub-millis="{{ jam.pubMillis }}"
                                                title="Ver detalhes no mapa">
                                            <i class="fas fa-map-marked-alt"></i>
                                        </button>
                                        {% if jam.location_y and jam.location_x %}
                                        <a href="https://www.waze.com/ul?ll={{ jam.location_y }},{{ jam.location_x }}" 
                                           target="_blank"
                                           class="btn btn-info action-btn"
                                           title="Abrir no Waze">
                                            <i class="fab fa-waze"></i>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-traffic-light"></i>
                        <h5>Trânsito fluindo</h5>
                        <p>Não há congestionamentos ativos no momento.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Modal para exibir detalhes da rota -->
<div class="modal fade" id="mapModal" tabindex="-1" aria-labelledby="modalRouteName" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalRouteName" class="modal-title">
                    <i class="fas fa-map-marked-alt me-2"></i>
                    Detalhes do Congestionamento
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body p-0 position-relative">
                <div id="modalMapContainer" class="modal-map-container"></div>
                <div id="insightsContainer" class="insights-container border-top">
                    <div class="row" id="insightsContent">
                        <!-- Insights serão carregados dinamicamente -->
                    </div>
                </div>
                <!-- Loading overlay para o modal -->
                <div class="loading-overlay d-none" id="modalLoading">
                    <div class="spinner"></div>
                    <div class="loading-text">Carregando mapa e dados...</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    // Função para formatar a data do pubMillis
    function formatPubMillis(pubMillis) {
        if (!pubMillis) return 'N/A';
        
        try {
            // Verificar se é um número com ponto decimal
            if (typeof pubMillis === 'string' || typeof pubMillis === 'number') {
                // Remover parte decimal se existir
                const timestamp = Math.floor(parseFloat(pubMillis));
                
                // Converter para Date
                const date = new Date(timestamp * 1000); // Converter de segundos para milissegundos
                
                // Formatar data
                const day = date.getDate().toString().padStart(2, '0');
                const month = (date.getMonth() + 1).toString().padStart(2, '0');
                const year = date.getFullYear();
                const hours = date.getHours().toString().padStart(2, '0');
                const minutes = date.getMinutes().toString().padStart(2, '0');
                const seconds = date.getSeconds().toString().padStart(2, '0');
                
                return {
                    date: `${day}/${month}/${year}`,
                    time: `${hours}:${minutes}`,
                    fullTime: `${hours}:${minutes}:${seconds}`
                };
            }
        } catch (e) {
            console.error('Erro ao formatar pubMillis:', e);
        }
        
        return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
    }

    // Remover qualquer listener anterior para evitar conflitos
    const viewRouteButtons = document.querySelectorAll('.view-route');
    viewRouteButtons.forEach(button => {
        button.replaceWith(button.cloneNode(true));
    });

    // Inicializar DataTable com configuração responsiva
    if (typeof $.fn.DataTable !== 'undefined' && $('#routesTable').length) {
        $('#routesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json'
            },
            responsive: true,
            pageLength: 10,
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
            order: [],
            columnDefs: [
                { 
                    orderable: false, 
                    targets: [8] 
                },
                { 
                    responsivePriority: 1, 
                    targets: [0, 1, 8] 
                },
                { 
                    responsivePriority: 2, 
                    targets: [2, 3, 5] 
                },
                { 
                    responsivePriority: 3, 
                    targets: [4, 6, 7] 
                }
            ],
            dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>><"row"<"col-sm-12"tr>><"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            initComplete: function() {
                console.log('Tabela de congestionamentos carregada com sucesso');
            }
        });
    }
    
    // Inicializar tooltips
    if (typeof bootstrap !== 'undefined') {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl, {
                customClass: 'custom-tooltip',
                trigger: 'hover'
            });
        });
    }
    
    // Configurar o evento do modal
    const mapModal = document.getElementById('mapModal');
    let currentMap = null;
    let modalInstance = null;
    
    // Função para carregar dados da rota
    function loadRouteData(button) {
        const routeId = button.getAttribute('data-route-id');
        const city = button.getAttribute('data-city');
        const street = button.getAttribute('data-street');
        const endNode = button.getAttribute('data-end-node');
        const speedKMH = parseFloat(button.getAttribute('data-speed-kmh'));
        const speed = parseFloat(button.getAttribute('data-speed'));
        const delay = parseInt(button.getAttribute('data-delay'));
        const length = parseInt(button.getAttribute('data-length'));
        const pubMillis = button.getAttribute('data-pub-millis');
        
        console.log('Carregando dados da rota:', routeId);
        
        // Formatando a data
        const formattedDate = formatPubMillis(pubMillis);
        
        // Atualizar título do modal
        const modalTitle = document.getElementById('modalRouteName');
        if (modalTitle) {
            modalTitle.textContent = `Congestionamento: ${street.substring(0, 30)}${street.length > 30 ? '...' : ''}`;
        }
        
        // Configurar dados para o modal
        if (!modalInstance) {
            modalInstance = new bootstrap.Modal(mapModal);
        }
        
        // Configurar evento quando o modal é mostrado
        const handleModalShow = function() {
            // Mostrar loading
            const modalLoading = document.getElementById('modalLoading');
            const modalMapContainer = document.getElementById('modalMapContainer');
            const insightsContent = document.getElementById('insightsContent');
            
            if (modalLoading) modalLoading.classList.remove('d-none');
            if (modalMapContainer) modalMapContainer.innerHTML = '';
            if (insightsContent) insightsContent.innerHTML = '';
            
            // Simular carregamento (substituir por chamada AJAX real)
            setTimeout(() => {
                // Carregar mapa
                if (currentMap) {
                    currentMap.remove();
                    currentMap = null;
                }
                
                // Criar novo mapa
                if (modalMapContainer) {
                    currentMap = L.map('modalMapContainer').setView([-20.66, -43.79], 13);
                    
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; OpenStreetMap contributors',
                        maxZoom: 19
                    }).addTo(currentMap);
                    
                    // Adicionar marcador
                    L.marker([-20.66, -43.79]).addTo(currentMap)
                        .bindPopup(`<strong>${street}</strong><br>${city}`)
                        .openPopup();
                }
                
                // Atualizar insights
                if (insightsContent) {
                    const delayMinutes = Math.floor(delay / 60);
                    const lengthKm = (length / 1000).toFixed(1);
                    
                    insightsContent.innerHTML = `
                        <div class="col-6 col-md-3 mb-2">
                            <div class="insight-card">
                                <h6><i class="fas fa-tachometer-alt me-1"></i>Vel. Normal</h6>
                                <p>${speedKMH.toFixed(0)} km/h</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-2">
                            <div class="insight-card" style="border-left-color: #ffc107;">
                                <h6><i class="fas fa-tachometer-alt me-1"></i>Vel. Atual</h6>
                                <p>${speed.toFixed(0)} km/h</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-2">
                            <div class="insight-card" style="border-left-color: #dc3545;">
                                <h6><i class="fas fa-clock me-1"></i>Atraso</h6>
                                <p>${delayMinutes} min</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-2">
                            <div class="insight-card" style="border-left-color: #1cc88a;">
                                <h6><i class="fas fa-road me-1"></i>Extensão</h6>
                                <p>${lengthKm} km</p>
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="insight-card" style="border-left-color: #6c757d;">
                                <h6><i class="fas fa-calendar me-1"></i>Publicado em</h6>
                                <p>${formattedDate.date} ${formattedDate.fullTime}</p>
                            </div>
                        </div>
                    `;
                }
                
                // Esconder loading
                if (modalLoading) modalLoading.classList.add('d-none');
                
                // Ajustar tamanho do mapa
                setTimeout(() => {
                    if (currentMap) {
                        currentMap.invalidateSize();
                    }
                }, 100);
            }, 500);
        };
        
        // Remover listeners anteriores e adicionar novo
        mapModal.removeEventListener('show.bs.modal', handleModalShow);
        mapModal.addEventListener('show.bs.modal', handleModalShow);
        
        // Configurar evento quando o modal é fechado
        const handleModalHidden = function() {
            // Limpar mapa quando o modal é fechado
            if (currentMap) {
                currentMap.remove();
                currentMap = null;
            }
        };
        
        mapModal.removeEventListener('hidden.bs.modal', handleModalHidden);
        mapModal.addEventListener('hidden.bs.modal', handleModalHidden);
        
        // Mostrar o modal
        modalInstance.show();
    }
    
    // Adicionar event listeners aos botões
    document.addEventListener('click', function(e) {
        if (e.target.closest('.view-route')) {
            e.preventDefault();
            const button = e.target.closest('.view-route');
            loadRouteData(button);
        }
    });
    
    // Atualizar estatísticas periodicamente (a cada 30 segundos)
    setInterval(() => {
        // Em produção, você faria uma requisição AJAX para atualizar os dados
        if (typeof $.notify !== 'undefined') {
            $.notify("Atualizando dados de congestionamentos...", {
                position: "top right",
                className: "info",
                autoHideDelay: 2000
            });
        }
    }, 30000);
    
    // Configurar animação do indicador "ao vivo"
    const pulseDot = document.querySelector('.pulse-dot');
    if (pulseDot) {
        setInterval(() => {
            pulseDot.style.animation = 'none';
            setTimeout(() => {
                pulseDot.style.animation = 'pulse-animation 2s ease-in-out infinite';
            }, 10);
        }, 10000);
    }
    
    console.log('Dashboard de congestionamentos inicializado com sucesso!');
});
</script>