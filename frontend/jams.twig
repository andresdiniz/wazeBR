<script>
document.addEventListener("DOMContentLoaded", function () {
    // Função para formatar a data do pubMillis
    function formatPubMillis(pubMillis) {
        if (!pubMillis) return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
        
        try {
            let timestamp;
            
            // Se for uma string, tentar extrair o timestamp
            if (typeof pubMillis === 'string') {
                // Remover caracteres não numéricos exceto ponto
                const cleaned = pubMillis.replace(/[^\d.]/g, '');
                if (cleaned) {
                    timestamp = parseFloat(cleaned);
                } else {
                    return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
                }
            } else if (typeof pubMillis === 'number') {
                timestamp = pubMillis;
            } else {
                return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
            }
            
            // Converter para Date - assumindo que o timestamp está em milissegundos
            let date;
            if (timestamp > 1000000000000) {
                // Já está em milissegundos
                date = new Date(timestamp);
            } else if (timestamp > 1000000000) {
                // Está em segundos
                date = new Date(timestamp * 1000);
            } else {
                // Timestamp muito pequeno, tratar como segundos
                date = new Date(timestamp * 1000);
            }
            
            // Verificar se a data é válida
            if (isNaN(date.getTime())) {
                console.warn('Data inválida do timestamp:', timestamp);
                return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
            }
            
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            const hours = date.getHours().toString().padStart(2, '0');
            const minutes = date.getMinutes().toString().padStart(2, '0');
            const seconds = date.getSeconds().toString().padStart(2, '0');
            
            return {
                date: `${day}/${month}/${year}`,
                time: `${hours}:${minutes}`,
                fullTime: `${hours}:${minutes}:${seconds}`,
                datetime: date
            };
        } catch (e) {
            console.error('Erro ao formatar pubMillis:', e, pubMillis);
            return { date: 'N/A', time: '--:--', fullTime: '--:--:--' };
        }
    }

    // Variáveis globais para o mapa
    let currentMap = null;
    let currentMarker = null;
    let modalInstance = null;
    
    // Inicializar DataTable com configuração responsiva
    if (typeof $.fn.DataTable !== 'undefined' && $('#jamsTable').length) {
        const table = $('#jamsTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json',
                search: "Pesquisar:",
                lengthMenu: "Mostrar _MENU_ registros",
                info: "Mostrando _START_ a _END_ de _TOTAL_ congestionamentos",
                infoEmpty: "Nenhum congestionamento encontrado",
                infoFiltered: "(filtrado de _MAX_ registros)",
                zeroRecords: "Nenhum congestionamento encontrado",
                paginate: {
                    first: "Primeira",
                    last: "Última",
                    next: "Próxima",
                    previous: "Anterior"
                }
            },
            responsive: true,
            pageLength: 10,
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
            order: [],
            columnDefs: [
                { 
                    orderable: false, 
                    targets: [8] 
                },
                { 
                    responsivePriority: 1, 
                    targets: [0, 1, 8] 
                },
                { 
                    responsivePriority: 2, 
                    targets: [2, 3, 5] 
                },
                { 
                    responsivePriority: 3, 
                    targets: [4, 6, 7] 
                }
            ],
            dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>><"row mt-2"<"col-sm-12"tr>><"row mt-2"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            initComplete: function() {
                console.log('Tabela de congestionamentos carregada com sucesso');
                
                // Adicionar classe à tabela após inicialização
                $('#jamsTable').addClass('table-striped');
                
                // Configurar tooltips após a tabela ser renderizada
                setTimeout(initializeTooltips, 100);
            }
        });
        
        // Configurar busca em tempo real
        $('#jamsTable_filter input').on('keyup', function() {
            const searchTerm = $(this).val();
            if (searchTerm.length >= 3 || searchTerm.length === 0) {
                table.search(searchTerm).draw();
            }
        });
    }
    
    // Inicializar tooltips do Bootstrap
    function initializeTooltips() {
        if (typeof bootstrap !== 'undefined') {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                try {
                    new bootstrap.Tooltip(tooltipTriggerEl, {
                        customClass: 'custom-tooltip',
                        trigger: 'hover focus',
                        placement: 'top'
                    });
                } catch (e) {
                    console.warn('Erro ao criar tooltip:', e);
                }
            });
        }
    }
    
    // Inicializar tooltips após o carregamento da página
    setTimeout(initializeTooltips, 500);
    
    // Configurar evento de clique para os botões de visualização
    document.addEventListener('click', function(e) {
        // Verificar se é um botão de visualização de congestionamento
        if (e.target.closest('.view-jam-btn')) {
            e.preventDefault();
            const button = e.target.closest('.view-jam-btn');
            loadJamDetails(button);
        }
        
        // Verificar se é um botão de compartilhamento
        if (e.target.closest('.share-jam-btn')) {
            e.preventDefault();
            const button = e.target.closest('.share-jam-btn');
            const jamId = button.getAttribute('data-jam-id');
            shareJamLocation(jamId);
        }
    });
    
    // Função para carregar detalhes do congestionamento no modal
    function loadJamDetails(button) {
        if (!button) return;
        
        const jamId = button.getAttribute('data-jam-id');
        const city = button.getAttribute('data-city');
        const street = button.getAttribute('data-street');
        const endNode = button.getAttribute('data-end-node');
        const speedKMH = parseFloat(button.getAttribute('data-speed-kmh'));
        const speed = parseFloat(button.getAttribute('data-speed'));
        const delay = parseInt(button.getAttribute('data-delay'));
        const length = parseInt(button.getAttribute('data-length'));
        const pubMillis = button.getAttribute('data-pub-millis');
        const locationY = button.getAttribute('data-location-y');
        const locationX = button.getAttribute('data-location-x');
        
        console.log('Carregando detalhes do congestionamento:', jamId, city, street);
        
        // Formatando a data
        const formattedDate = formatPubMillis(pubMillis);
        
        // Atualizar título do modal
        const modalTitle = document.getElementById('modalRouteName');
        if (modalTitle) {
            modalTitle.textContent = `Congestionamento: ${street}`;
        }
        
        // Mostrar loading
        const modalLoading = document.getElementById('modalLoading');
        const modalMapContainer = document.getElementById('modalMapContainer');
        const insightsContent = document.getElementById('insightsContent');
        const navigateBtn = document.getElementById('navigateBtn');
        
        if (modalLoading) modalLoading.classList.remove('d-none');
        if (modalMapContainer) modalMapContainer.innerHTML = '';
        if (insightsContent) insightsContent.innerHTML = '';
        
        // Configurar botão de navegação
        if (navigateBtn && locationY && locationX) {
            navigateBtn.style.display = 'inline-block';
            navigateBtn.onclick = function() {
                window.open(`https://www.google.com/maps/dir/?api=1&destination=${locationY},${locationX}`, '_blank');
            };
        } else if (navigateBtn) {
            navigateBtn.style.display = 'none';
        }
        
        // Inicializar ou reutilizar instância do modal
        if (!modalInstance) {
            modalInstance = new bootstrap.Modal(document.getElementById('mapModal'));
        }
        
        // Configurar evento quando o modal é mostrado
        const handleModalShow = function() {
            // Carregar mapa após um pequeno delay para garantir que o modal esteja visível
            setTimeout(() => {
                // Inicializar ou atualizar mapa
                let centerLat = -20.66;
                let centerLng = -43.79;
                
                // Usar coordenadas específicas se disponíveis
                if (locationY && locationX) {
                    centerLat = parseFloat(locationY);
                    centerLng = parseFloat(locationX);
                }
                
                // Se o mapa já existe, remover e criar um novo
                if (currentMap) {
                    currentMap.remove();
                    currentMap = null;
                    currentMarker = null;
                }
                
                // Criar novo mapa
                if (modalMapContainer) {
                    currentMap = L.map('modalMapContainer').setView([centerLat, centerLng], 13);
                    
                    // Adicionar camada do OpenStreetMap
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
                        maxZoom: 19
                    }).addTo(currentMap);
                    
                    // Adicionar marcador
                    currentMarker = L.marker([centerLat, centerLng]).addTo(currentMap)
                        .bindPopup(`
                            <div style="min-width: 200px;">
                                <h6 style="margin-bottom: 8px; color: #333;">${street}</h6>
                                <p style="margin-bottom: 5px; color: #666;"><strong>Cidade:</strong> ${city}</p>
                                <p style="margin-bottom: 5px; color: #666;"><strong>Destino:</strong> ${endNode || 'N/A'}</p>
                                <p style="margin-bottom: 5px; color: #666;"><strong>Velocidade:</strong> ${speed} km/h</p>
                                <p style="margin-bottom: 0; color: #666;"><strong>Atraso:</strong> ${Math.floor(delay / 60)} min</p>
                            </div>
                        `)
                        .openPopup();
                    
                    // Ajustar visualização para incluir o marcador
                    currentMap.fitBounds(currentMarker.getBounds());
                }
                
                // Atualizar insights
                if (insightsContent) {
                    const delayMinutes = Math.floor(delay / 60);
                    const lengthKm = (length / 1000).toFixed(1);
                    const speedReduction = ((1 - (speed / speedKMH)) * 100).toFixed(0);
                    
                    insightsContent.innerHTML = `
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card">
                                <h6><i class="fas fa-tachometer-alt me-1"></i>Vel. Normal</h6>
                                <p>${speedKMH.toFixed(0)} km/h</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card" style="border-left-color: #ffc107;">
                                <h6><i class="fas fa-tachometer-alt me-1"></i>Vel. Atual</h6>
                                <p>${speed.toFixed(0)} km/h</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card" style="border-left-color: #dc3545;">
                                <h6><i class="fas fa-clock me-1"></i>Atraso</h6>
                                <p>${delayMinutes} min</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card" style="border-left-color: #1cc88a;">
                                <h6><i class="fas fa-road me-1"></i>Extensão</h6>
                                <p>${lengthKm} km</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card" style="border-left-color: #6f42c1;">
                                <h6><i class="fas fa-chart-line me-1"></i>Redução</h6>
                                <p>${speedReduction}%</p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3 mb-2">
                            <div class="insight-card" style="border-left-color: #20c997;">
                                <h6><i class="fas fa-car me-1"></i>Status</h6>
                                <p>${speed < 10 ? 'Congestionado' : speed < 20 ? 'Lento' : 'Moderado'}</p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 mt-2">
                            <div class="insight-card" style="border-left-color: #6c757d;">
                                <h6><i class="fas fa-calendar me-1"></i>Detectado em</h6>
                                <p>${formattedDate.date} ${formattedDate.fullTime}</p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 mt-2">
                            <div class="insight-card" style="border-left-color: #fd7e14;">
                                <h6><i class="fas fa-map-marker-alt me-1"></i>Coordenadas</h6>
                                <p>${locationY ? locationY + ', ' + locationX : 'Não disponível'}</p>
                            </div>
                        </div>
                    `;
                }
                
                // Esconder loading
                if (modalLoading) modalLoading.classList.add('d-none');
                
                // Ajustar tamanho do mapa após o modal ser exibido
                if (currentMap) {
                    setTimeout(() => {
                        currentMap.invalidateSize();
                        if (currentMarker) {
                            currentMap.fitBounds(currentMarker.getBounds());
                        }
                    }, 100);
                }
            }, 100);
        };
        
        // Configurar evento uma única vez
        const mapModal = document.getElementById('mapModal');
        mapModal.removeEventListener('show.bs.modal', handleModalShow);
        mapModal.addEventListener('show.bs.modal', handleModalShow);
        
        // Configurar evento quando o modal é fechado
        const handleModalHidden = function() {
            // Limpar recursos do mapa
            if (currentMap) {
                currentMap.remove();
                currentMap = null;
                currentMarker = null;
            }
        };
        
        mapModal.removeEventListener('hidden.bs.modal', handleModalHidden);
        mapModal.addEventListener('hidden.bs.modal', handleModalHidden);
        
        // Mostrar o modal
        modalInstance.show();
    }
    
    // Função para compartilhar localização
    function shareJamLocation(jamId) {
        // Encontrar a linha da tabela correspondente
        const row = document.querySelector(`tr[data-jam-id="${jamId}"]`);
        if (!row) return;
        
        // Extrair dados da linha
        const city = row.querySelector('.city-cell .fw-bold')?.textContent.trim() || '';
        const street = row.querySelector('td:nth-child(2) .text-truncate-cell')?.textContent.trim() || '';
        const speed = row.querySelector('.speed-badge')?.textContent.trim() || '';
        const delay = row.querySelector('.delay-badge')?.textContent.trim() || '';
        
        // Criar texto para compartilhar
        const shareText = `Congestionamento em ${city}: ${street}. Velocidade: ${speed}, Atraso: ${delay}.`;
        
        // Verificar se a API de compartilhamento está disponível
        if (navigator.share) {
            navigator.share({
                title: 'Informação de Trânsito',
                text: shareText,
                url: window.location.href
            }).catch(err => {
                console.log('Erro ao compartilhar:', err);
                fallbackShare(shareText);
            });
        } else {
            fallbackShare(shareText);
        }
    }
    
    // Fallback para navegadores sem suporte à API de compartilhamento
    function fallbackShare(text) {
        // Copiar para a área de transferência
        navigator.clipboard.writeText(text).then(() => {
            // Mostrar notificação
            if (typeof $.notify !== 'undefined') {
                $.notify("Informações copiadas para a área de transferência!", {
                    position: "top right",
                    className: "success",
                    autoHideDelay: 3000
                });
            } else {
                alert("Informações copiadas para a área de transferência!");
            }
        }).catch(err => {
            console.error('Erro ao copiar:', err);
            alert("Erro ao compartilhar. Texto: " + text);
        });
    }
    
    // Atualizar estatísticas periodicamente (a cada 60 segundos)
    let updateInterval = null;
    
    function startAutoUpdate() {
        if (updateInterval) clearInterval(updateInterval);
        
        updateInterval = setInterval(() => {
            // Em produção, você faria uma requisição AJAX para atualizar os dados
            console.log('Atualizando dados de congestionamentos...');
            
            // Atualizar o indicador "ao vivo"
            const pulseDot = document.querySelector('.pulse-dot');
            if (pulseDot) {
                pulseDot.style.animation = 'none';
                setTimeout(() => {
                    pulseDot.style.animation = 'pulse-animation 2s ease-in-out infinite';
                }, 10);
            }
            
            // Mostrar notificação (opcional)
            if (typeof $.notify !== 'undefined') {
                $.notify("Dados atualizados", {
                    position: "top right",
                    className: "info",
                    autoHideDelay: 2000
                });
            }
        }, 60000); // 60 segundos
    }
    
    // Iniciar atualização automática
    startAutoUpdate();
    
    // Configurar animação do indicador "ao vivo"
    const pulseDot = document.querySelector('.pulse-dot');
    if (pulseDot) {
        setInterval(() => {
