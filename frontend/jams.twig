<style>
    /* Estilos específicos para a página de congestionamentos */
    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--header-border);
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .page-header .subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .live-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(220, 53, 69, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        color: #dc3545;
    }

    .live-indicator .pulse-dot {
        width: 10px;
        height: 10px;
        background: #dc3545;
        border-radius: 50%;
        animation: pulse-animation 2s ease-in-out infinite;
    }

    @keyframes pulse-animation {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.7;
        }
    }

    .stats-card {
        background: var(--card-bg);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
        height: 100%;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--card-shadow-hover);
    }

    .stats-card.primary {
        border-left-color: #4e73df;
    }

    .stats-card.success {
        border-left-color: #1cc88a;
    }

    .stats-card.warning {
        border-left-color: #f6c23e;
    }

    .stats-card.danger {
        border-left-color: #e74a3b;
    }

    .stats-card.info {
        border-left-color: #36b9cc;
    }

    .stats-card-icon {
        width: 60px;
        height: 60px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .stats-card.primary .stats-card-icon {
        background: linear-gradient(135deg, rgba(78, 115, 223, 0.1), rgba(54, 101, 223, 0.1));
        color: #4e73df;
    }

    .stats-card.success .stats-card-icon {
        background: linear-gradient(135deg, rgba(28, 200, 138, 0.1), rgba(19, 133, 92, 0.1));
        color: #1cc88a;
    }

    .stats-card.warning .stats-card-icon {
        background: linear-gradient(135deg, rgba(246, 194, 62, 0.1), rgba(221, 162, 10, 0.1));
        color: #f6c23e;
    }

    .stats-card.danger .stats-card-icon {
        background: linear-gradient(135deg, rgba(231, 74, 59, 0.1), rgba(190, 38, 23, 0.1));
        color: #e74a3b;
    }

    .stats-card.info .stats-card-icon {
        background: linear-gradient(135deg, rgba(54, 185, 204, 0.1), rgba(37, 131, 145, 0.1));
        color: #36b9cc;
    }

    .stats-card-value {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .stats-card-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modern-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: var(--card-shadow);
        background: var(--card-bg);
        margin-bottom: 1.5rem;
    }

    .modern-card:hover {
        box-shadow: var(--card-shadow-hover);
    }

    .modern-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 1.05rem;
    }

    .modern-card-header i {
        font-size: 1.2rem;
    }

    .modern-card-header.bg-warning-gradient {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
    }

    .modern-card-header.bg-danger-gradient {
        background: linear-gradient(135deg, #e74a3b 0%, #be2617 100%);
    }

    .modern-card-header.bg-success-gradient {
        background: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
    }

    .modern-card-header.bg-info-gradient {
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
    }

    .badge-counter {
        background: rgba(255, 255, 255, 0.25);
        padding: 0.4rem 0.75rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.95rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .modern-table {
        margin-bottom: 0;
        font-size: 0.9rem;
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

    .modern-table thead th {
        background: var(--table-hover);
        border: none;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: var(--text-secondary);
        padding: 1rem 0.75rem;
        letter-spacing: 0.5px;
        white-space: nowrap;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .modern-table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid var(--border-color);
    }

    .modern-table tbody tr:hover {
        background-color: var(--table-hover);
    }

    .modern-table tbody tr:last-child {
        border-bottom: none;
    }

    .modern-table tbody td {
        padding: 0.85rem 0.75rem;
        vertical-align: middle;
        color: var(--text-primary);
        border-top: 1px solid var(--border-color);
    }

    .modern-table .city-cell {
        min-width: 120px;
    }

    .modern-table .text-truncate-cell {
        max-width: 180px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        display: inline-block;
        vertical-align: middle;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        border: none;
        margin: 0 3px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .action-btn:hover {
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .action-btn i {
        font-size: 0.9rem;
    }

    .speed-badge {
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
        min-width: 70px;
        white-space: nowrap;
        text-align: center;
    }

    .speed-low {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15), rgba(220, 53, 69, 0.05));
        color: #dc3545;
        border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .speed-medium {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15), rgba(255, 193, 7, 0.05));
        color: #d39e00;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .speed-high {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.15), rgba(40, 167, 69, 0.05));
        color: #28a745;
        border: 1px solid rgba(40, 167, 69, 0.3);
    }

    .delay-badge {
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
        background: linear-gradient(135deg, rgba(108, 117, 125, 0.15), rgba(108, 117, 125, 0.05));
        color: #495057;
        border: 1px solid rgba(108, 117, 125, 0.3);
        white-space: nowrap;
        min-width: 60px;
        text-align: center;
    }

    .length-badge {
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.15), rgba(23, 162, 184, 0.05));
        color: #138496;
        border: 1px solid rgba(23, 162, 184, 0.3);
        white-space: nowrap;
        min-width: 60px;
        text-align: center;
    }

    .table-hover-actions {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .modern-table tbody tr:hover .table-hover-actions {
        opacity: 1;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 1rem;
    }

    .empty-state i {
        font-size: 5rem;
        color: var(--empty-icon-color);
        margin-bottom: 1.5rem;
        opacity: 0.4;
    }

    .empty-state h5 {
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 0;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--card-bg);
        opacity: 0.95;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        border-radius: 1rem;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid var(--border-color);
        border-top: 4px solid #4e73df;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-text {
        margin-top: 1rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Modal styles */
    .modal-content {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--card-shadow-hover);
    }

    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.25rem 1.5rem;
        border-bottom: none;
    }

    .modal-header .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    .modal-header .btn-close:hover {
        opacity: 1;
    }

    .modal-title {
        font-weight: 700;
        font-size: 1.25rem;
    }

    .modal-body {
        padding: 0;
        position: relative;
    }

    .modal-map-container {
        height: 400px;
        width: 100%;
        border-radius: 0;
    }

    .insights-container {
        padding: 1.5rem;
        background: var(--card-bg);
    }

    .insight-card {
        background: var(--table-hover);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 0.75rem;
        border-left: 4px solid #4e73df;
    }

    .insight-card h6 {
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .insight-card p {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0;
    }

    /* Melhorias para tabela responsiva */
    .table-responsive {
        position: relative;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
    
    .table-responsive::-webkit-scrollbar {
        height: 6px;
    }
    
    .table-responsive::-webkit-scrollbar-track {
        background: var(--border-color);
        border-radius: 3px;
    }
    
    .table-responsive::-webkit-scrollbar-thumb {
        background: #4e73df;
        border-radius: 3px;
    }
    
    .table-responsive::-webkit-scrollbar-thumb:hover {
        background: #2e59d9;
    }

    /* Responsividade para tabelas */
    @media (max-width: 991.98px) {
        .modern-table {
            font-size: 0.85rem;
        }
        
        .modern-table thead th,
        .modern-table tbody td {
            padding: 0.75rem 0.5rem;
        }
        
        .speed-badge,
        .delay-badge,
        .length-badge {
            font-size: 0.75rem;
            padding: 0.3rem 0.4rem;
            min-width: 55px;
        }
        
        .text-truncate-cell {
            max-width: 140px;
        }
        
        .table-hover-actions {
            opacity: 1;
        }
    }

    @media (max-width: 767.98px) {
        .page-header h1 {
            font-size: 1.5rem;
        }

        .stats-card-value {
            font-size: 2rem;
        }

        .stats-card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
        }
        
        /* Para telas muito pequenas, ocultamos algumas colunas */
        .modern-table .mobile-hide {
            display: none;
        }
        
        .modern-table .mobile-text-small {
            font-size: 0.8rem;
        }
        
        .action-btn {
            width: 32px;
            height: 32px;
            margin: 0 2px;
        }
        
        .action-btn i {
            font-size: 0.8rem;
        }

        .modal-map-container {
            height: 300px;
        }
        
        .speed-badge,
        .delay-badge,
        .length-badge {
            font-size: 0.7rem;
            padding: 0.25rem 0.35rem;
            min-width: 50px;
        }
        
        .text-truncate-cell {
            max-width: 100px;
        }
        
        .insights-container {
            padding: 1rem;
        }
        
        .insight-card {
            padding: 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .insight-card h6 {
            font-size: 0.75rem;
        }
        
        .insight-card p {
            font-size: 1rem;
        }
    }

    @media (max-width: 575.98px) {
        /* Em telas muito pequenas, simplificamos ainda mais */
        .modern-table .mobile-hide-2 {
            display: none;
        }
        
        .text-truncate-cell {
            max-width: 80px;
        }
        
        .stats-card {
            padding: 1rem;
        }
        
        .stats-card-value {
            font-size: 1.75rem;
        }
        
        .modern-table tbody td {
            padding: 0.65rem 0.4rem;
        }
    }

    /* Tooltip customizado */
    .custom-tooltip {
        background: var(--card-bg) !important;
        color: var(--text-primary) !important;
        padding: 0.5rem 0.75rem !important;
        border-radius: 0.5rem !important;
        font-size: 0.85rem !important;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3) !important;
        border: 1px solid var(--border-color) !important;
        max-width: 300px !important;
    }
    
    /* Melhorias para DataTable responsivo */
    .dataTables_wrapper {
        padding: 0 0.5rem;
    }
    
    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_paginate {
        font-size: 0.85rem;
    }
    
    .dataTables_wrapper .dataTables_filter input {
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 0.375rem 0.75rem;
        background: var(--card-bg);
        color: var(--text-primary);
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border: 1px solid var(--border-color) !important;
        border-radius: 0.5rem !important;
        margin: 0 2px !important;
        padding: 0.375rem 0.75rem !important;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background: #4e73df !important;
        border-color: #4e73df !important;
        color: white !important;
    }
    
    @media (max-width: 767.98px) {
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            font-size: 0.8rem;
        }
        
        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.25rem 0.5rem !important;
            margin: 0 1px !important;
        }
    }
    
    /* Status indicator */
    .status-indicator {
        display: inline-block;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-right: 8px;
    }
    
    .status-active {
        background-color: #dc3545;
        box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.2);
    }
    
    .status-moderate {
        background-color: #ffc107;
        box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
    }
    
    .status-clear {
        background-color: #28a745;
        box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.2);
    }
</style>

<!-- Leaflet CSS + JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div class="container-fluid px-3 px-lg-4 mt-4">
    
    <!-- Header da Página -->
    <div class="page-header fade-in">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1><i class="fas fa-traffic-light me-2"></i>Congestionamentos em Tempo Real</h1>
                <p class="subtitle mb-0">
                    Monitoramento de tráfego e congestionamentos ativos. Dados atualizados em tempo real.
                </p>
            </div>
            <div class="live-indicator">
                <span class="pulse-dot"></span>
                DADOS AO VIVO
            </div>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in">
            <div class="stats-card danger">
                <div class="stats-card-icon">
                    <i class="fas fa-car-crash"></i>
                </div>
                <div class="stats-card-value" id="activeJamsCount">{{ jams|length }}</div>
                <div class="stats-card-label">Congestionamentos Ativos</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in" style="animation-delay: 0.1s;">
            <div class="stats-card warning">
                <div class="stats-card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-card-value" id="totalDelay">
                    {% set total_delay = 0 %}
                    {% for jam in jams %}
                        {% set total_delay = total_delay + (jam.delay / 60) %}
                    {% endfor %}
                    {{ total_delay|number_format(0) }}
                </div>
                <div class="stats-card-label">Atraso Total (min)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-md-0 fade-in" style="animation-delay: 0.2s;">
            <div class="stats-card info">
                <div class="stats-card-icon">
                    <i class="fas fa-road"></i>
                </div>
                <div class="stats-card-value" id="totalLength">
                    {% set total_length = 0 %}
                    {% for jam in jams %}
                        {% set total_length = total_length + jam.length %}
                    {% endfor %}
                    {{ (total_length / 1000)|number_format(1) }}
                </div>
                <div class="stats-card-label">Extensão Total (km)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="stats-card success">
                <div class="stats-card-icon">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div class="stats-card-value" id="avgSpeed">
                    {% set total_speed = 0 %}
                    {% for jam in jams %}
                        {% set total_speed = total_speed + jam.speed %}
                    {% endfor %}
                    {% if jams|length > 0 %}
                        {{ (total_speed / jams|length)|number_format(0) }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-label">Velocidade Média (km/h)</div>
            </div>
        </div>
    </div>

    <!-- Tabela de Congestionamentos -->
    <div class="fade-in" style="animation-delay: 0.4s;">
        <div class="card modern-card">
            <div class="modern-card-header bg-danger-gradient">
                <span>
                    <i class="fas fa-list-alt me-2"></i>
                    Lista de Congestionamentos Ativos
                </span>
                {% if jams is not empty %}
                    <span class="badge-counter">{{ jams|length }} ativos</span>
                {% endif %}
            </div>
            
            <div class="card-body p-0 position-relative">
                {% if jams is not empty %}
                    <div class="table-responsive">
                        <table class="table modern-table" id="jamsTable">
                            <thead>
                                <tr>
                                    <th class="mobile-text-small">Cidade</th>
                                    <th class="mobile-text-small">Localização</th>
                                    <th class="mobile-text-small mobile-hide-2">Destino</th>
                                    <th class="mobile-text-small">Velocidade</th>
                                    <th class="mobile-text-small mobile-hide">Vel. Atual</th>
                                    <th class="mobile-text-small">Atraso</th>
                                    <th class="mobile-text-small mobile-hide-2">Extensão</th>
                                    <th class="mobile-text-small d-none d-lg-table-cell">Detectado</th>
                                    <th class="text-center mobile-text-small">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for jam in jams %}
                                {% set delay_minutes = (jam.delay / 60)|round(0, 'ceil') %}
                                {% set pub_date = null %}
                                
                                {# Corrigir o parsing da data #}
                                {% if jam.pubMillis is defined and jam.pubMillis is not empty %}
                                    {# Tentar diferentes formatos #}
                                    {% if jam.pubMillis matches '/^\\d+\\.\\d+$/' %}
                                        {# É um timestamp com ponto decimal #}
                                        {% set pub_timestamp = jam.pubMillis|split('.')|first %}
                                        {% set pub_date = pub_timestamp|date('d/m/Y H:i:s', timezone="America/Sao_Paulo") %}
                                    {% elseif jam.pubMillis matches '/^\\d+$/' %}
                                        {# É um timestamp inteiro #}
                                        {% set pub_date = jam.pubMillis|date('d/m/Y H:i:s', timezone="America/Sao_Paulo") %}
                                    {% else %}
                                        {# Tentar usar como string #}
                                        {% set pub_date = jam.pubMillis %}
                                    {% endif %}
                                {% endif %}
                                
                                {# Determinar status baseado na velocidade #}
                                {% set speed_status = '' %}
