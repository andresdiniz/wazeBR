<div class="container-fluid px-3 px-lg-4 mt-4">
    
    <!-- Header da Página -->
    <div class="page-header fade-in">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1><i class="fas fa-traffic-light me-2"></i>Congestionamentos em Tempo Real</h1>
                <p class="subtitle mb-0">
                    Monitoramento de tráfego e congestionamentos ativos
                </p>
            </div>
            <div class="live-indicator">
                <span class="pulse-dot"></span>
                DADOS AO VIVO
            </div>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in">
            <div class="stats-card danger">
                <div class="stats-card-icon">
                    <i class="fas fa-car-crash"></i>
                </div>
                <div class="stats-card-value">{{ jams|length }}</div>
                <div class="stats-card-label">Congestionamentos Ativos</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0 fade-in" style="animation-delay: 0.1s;">
            <div class="stats-card warning">
                <div class="stats-card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-card-value" id="totalDelay">0</div>
                <div class="stats-card-label">Atraso Total (min)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-md-0 fade-in" style="animation-delay: 0.2s;">
            <div class="stats-card info">
                <div class="stats-card-icon">
                    <i class="fas fa-road"></i>
                </div>
                <div class="stats-card-value" id="totalLength">0</div>
                <div class="stats-card-label">Extensão Total (km)</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="stats-card success">
                <div class="stats-card-icon">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div class="stats-card-value" id="avgSpeed">0</div>
                <div class="stats-card-label">Velocidade Média</div>
            </div>
        </div>
    </div>

    <!-- Tabela de Congestionamentos -->
    <div class="fade-in" style="animation-delay: 0.4s;">
        <div class="card modern-card">
            <div class="modern-card-header bg-danger-gradient">
                <span>
                    <i class="fas fa-list-alt me-2"></i>
                    Lista de Congestionamentos Ativos
                </span>
                {% if jams is not empty %}
                    <span class="badge-counter">{{ jams|length }} ativos</span>
                {% endif %}
            </div>
            
            <div class="card-body p-0 position-relative">
                {% if jams is not empty %}
                    <div class="table-responsive">
                        <table class="table modern-table" id="routesTable">
                            <thead>
                                <tr>
                                    <th>Cidade</th>
                                    <th>Início</th>
                                    <th>Fim</th>
                                    <th>Vel. Normal</th>
                                    <th>Vel. Atual</th>
                                    <th>Atraso</th>
                                    <th>Comprimento</th>
                                    <th class="d-none d-lg-table-cell">Publicado em</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for jam in jams %}
                                <tr>
                                    <td class="city-cell">
                                        <div class="fw-bold text-primary">{{ jam.city }}</div>
                                        <small class="text-muted d-lg-none">{{ (jam.pubMillis / 1000)|round|date("d/m H:i") }}</small>
                                    </td>
                                    <td>
                                        <span class="text-truncate-cell" title="{{ jam.street }}">
                                            {{ jam.street }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-truncate-cell" title="{{ jam.endNode }}">
                                            {{ jam.endNode }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if jam.speedKMH < 20 %}
                                            <span class="speed-badge speed-low">{{ jam.speedKMH|number_format(1) }} km/h</span>
                                        {% elseif jam.speedKMH < 40 %}
                                            <span class="speed-badge speed-medium">{{ jam.speedKMH|number_format(1) }} km/h</span>
                                        {% else %}
                                            <span class="speed-badge speed-high">{{ jam.speedKMH|number_format(1) }} km/h</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if jam.speed < 10 %}
                                            <span class="speed-badge speed-low">{{ jam.speed|number_format(1) }} km/h</span>
                                        {% elseif jam.speed < 20 %}
                                            <span class="speed-badge speed-medium">{{ jam.speed|number_format(1) }} km/h</span>
                                        {% else %}
                                            <span class="speed-badge speed-high">{{ jam.speed|number_format(1) }} km/h</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="delay-badge">{{ (jam.delay / 60)|number_format(1) }} min</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                            {% if jam.length >= 1000 %}
                                                {{ (jam.length / 1000)|number_format(2) }} km
                                            {% else %}
                                                {{ jam.length|number_format(0) }} m
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        <div class="text-nowrap">{{ (jam.pubMillis / 1000)|round|date("d/m/Y") }}</div>
                                        <small class="text-muted">{{ (jam.pubMillis / 1000)|round|date("H:i:s") }}</small>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-primary action-btn view-route" 
                                                data-bs-toggle="modal"
                                                data-bs-target="#mapModal"
                                                data-route-id="{{ jam.uuid }}"
                                                title="Ver detalhes no mapa">
                                            <i class="fas fa-map-marked-alt"></i>
                                        </button>
                                        <a href="https://www.waze.com/ul?ll={{ jam.location_y }},{{ jam.location_x }}" 
                                           target="_blank"
                                           class="btn btn-info action-btn"
                                           title="Abrir no Waze">
                                            <i class="fab fa-waze"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Loading overlay -->
                    <div class="loading-overlay d-none" id="tableLoading">
                        <div class="spinner"></div>
                        <div class="loading-text">Carregando dados...</div>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-traffic-light"></i>
                        <h5>Trânsito fluindo</h5>
                        <p>Não há congestionamentos ativos no momento.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

