{# settings.twig - Versão com CSS e Espaçamento Aprimorados #}

{% block styles %}
<style>
/* ========================================= */
/* 1. VARIÁVEIS DE COR E ESTILO (para consistência) */
/* ========================================= */
:root {
    --primary-color: #4e73df;
    --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    --success-color: #1cc88a;
    --success-gradient: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
    --bg-light: #f9f9fc;
    --border-color: #e3e6f0;
    --shadow-main: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
}

/* Garante que o container tenha respiro */
.container-fluid {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
}

/* ========================================= */
/* 2. HEADER E TÍTULOS */
/* ========================================= */
.page-header-custom {
    padding-bottom: 1.5rem; /* Aumenta o respiro abaixo do header */
    border-bottom: 2px solid var(--border-color);
}
.page-header-custom .h2 {
    font-weight: 700;
}

/* ========================================= */
/* 3. CARDS (Melhoria no Spacing) */
/* ========================================= */
.card {
    border-radius: 0.75rem;
    border: none;
    transition: transform 0.3s ease;
}

.card-header {
    border-bottom: none;
    border-radius: 0.75rem 0.75rem 0 0 !important;
    padding: 1rem 1.5rem; /* Mais respiro interno */
    font-weight: 600;
}

/* Aplica o gradiente nas cores principais dos cards */
.card.border-primary .card-header.bg-primary {
    background-image: var(--primary-gradient);
}
.card.border-success .card-header.bg-success {
    background-image: var(--success-gradient);
}

/* Remove padding do card-body se contiver uma tabela */
.card-body.p-0 .table-responsive {
    border-radius: 0 0 0.75rem 0.75rem;
    border: 1px solid var(--border-color);
    border-top: none;
}

/* ========================================= */
/* 4. TABELAS (Melhoria no Spacing e Alinhamento) */
/* ========================================= */

.table {
    border-collapse: separate;
    border-spacing: 0;
    margin-bottom: 0 !important; /* Remove margem desnecessária */
}

.table thead th {
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.8rem;
    padding: 0.75rem 1rem; /* Mais espaço no cabeçalho */
}

.table tbody tr {
    transition: all 0.2s ease;
}
.table-hover tbody tr:hover {
    background-color: var(--bg-light); /* Fundo mais suave */
    transform: none; /* Remove a translação lateral desnecessária */
}

.table tbody td {
    padding: 1rem 1rem; /* AUMENTADO: Mais espaçamento vertical nas células */
    vertical-align: middle; /* Garante que o conteúdo esteja sempre centralizado verticalmente */
}

/* Estilos de Imagem e Cor na Tabela */
.table img {
    border: 1px solid var(--border-color);
    object-fit: cover;
}
.color-preview {
    border: 2px solid var(--border-color) !important;
}

/* ========================================= */
/* 5. MODAIS (Estilização da Navegação) */
/* ========================================= */

.modal-content {
    border-radius: 0.7rem;
}

.modal-header.bg-gradient-primary {
    background-image: var(--primary-gradient);
    border-bottom: none;
}

/* Navegação Lateral do Modal de Configurações */
#settingsModal .nav-link {
    padding: 0.75rem 1rem;
    color: var(--primary-color);
    border-radius: 0.5rem;
    margin-bottom: 0.5rem;
    transition: all 0.2s;
}

#settingsModal .nav-link.active {
    background-color: var(--primary-color);
    color: white;
    box-shadow: 0 4px 8px rgba(78, 115, 223, 0.2);
}

/* Conteúdo das abas com padding consistente */
#settingsModal .tab-content {
    padding: 1rem 1.5rem !important;
}

/* Footer do Modal */
.modal-footer {
    padding: 1rem 1.5rem;
    background-color: var(--bg-light);
    border-top: 1px solid var(--border-color);
}

/* Estilo para a box de upload */
.file-upload-box {
    border: 2px dashed var(--border-color) !important;
    cursor: pointer;
    transition: all 0.2s;
}
.file-upload-box:hover {
    border-color: var(--primary-color) !important;
}

</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-5 page-header-custom">
        <h1 class="h2 mb-0 text-primary page-header-custom-title">
            <i class="fas fa-cogs me-2"></i>Configurações do Sistema
        </h1>
    </div>

    <div class="card shadow mb-5 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="m-0">
                <i class="fas fa-wrench me-2"></i>Configurações Gerais
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 80px;">ID</th>
                            <th>Nome do Sistema</th>
                            <th style="width: 150px;">Tema</th>
                            <th>Contato</th>
                            <th class="text-center" style="width: 120px;">Manutenção</th>
                            <th class="text-center" style="width: 100px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for setting in settingsdata %}
                        <tr class="align-middle">
                            <td class="text-center fw-bold text-primary">{{ setting.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if setting.logo %}
                                    <img src="{{ setting.logo }}" alt="Logo" class="rounded me-2" style="height: 30px;">
                                    {% endif %}
                                    {{ setting.systemname }}
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="color-preview me-2" 
                                         style="background:{{ setting.theme_color }};
                                                width: 25px; 
                                                height: 25px;
                                                border-radius: 4px;">
                                    </div>
                                    <span class="text-muted small">{{ setting.theme_color }}</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-primary">{{ setting.contact_email }}</span>
                                    <small class="text-muted">{{ setting.admin_email }}</small>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge rounded-pill bg-{{ setting.manutencao ? 'danger' : 'success' }}">
                                    {{ setting.manutencao ? 'Ativo' : 'Inativo' }}
                                </span>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary btn-edit-setting" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#settingsModal"
                                        data-all='{{ setting|json_encode }}'>
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="fas fa-exclamation-circle me-2"></i>Nenhuma configuração encontrada
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow mb-5 border-success">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="m-0">
                <i class="fas fa-file-alt me-2"></i>Gerenciamento de Páginas
            </h5>
            <button class="btn btn-light btn-sm fw-bold" data-bs-toggle="modal" data-bs-target="#pageModal">
                <i class="fas fa-plus me-2"></i>Nova Página
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 80px;">ID</th>
                            <th>Título</th>
                            <th style="width: 120px;">Status</th>
                            <th>URL</th>
                            <th style="width: 150px;">Última Atualização</th>
                            <th class="text-center" style="width: 100px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for page in pagesdata.pageData %}
                        <tr class="align-middle">
                            <td class="text-center fw-bold text-primary">{{ page.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if page.featured_image %}
                                    <img src="{{ page.featured_image }}" alt="Imagem" class="rounded me-2" style="height: 30px;">
                                    {% endif %}
                                    {{ page.title }}
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-{{ page.status == 'published' ? 'success' : page.status == 'archived' ? 'secondary' : 'warning' }}">
                                    {{ page.status|capitalize }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ page.url }}" target="_blank" class="text-decoration-none">
                                    {{ page.url }}
                                    <i class="fas fa-external-link-alt ms-2 text-muted small"></i>
                                </a>
                            </td>
                            <td class="small">
                                <i class="fas fa-clock text-muted me-2"></i>{{ page.updated_at|date('d/m/Y H:i') }}
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary btn-edit-page" 
                                        data-bs-toggle="modal"
                                        data-bs-target="#pageModal"
                                        data-all='{{ page|json_encode }}'>
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form action="" method="POST" class="d-inline">
                                        <input type="hidden" name="form_type" value="delete_page">
                                        <input type="hidden" name="id" value="{{ page.id }}">
                                        
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="fas fa-exclamation-circle me-2"></i>Nenhuma página encontrada
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow mb-5 border-primary">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="m-0">
                <i class="fas fa-users me-2"></i> Gerenciamento de Parcerias
            </h5>
            <button class="btn btn-light btn-sm fw-bold rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#createPartnerModal">
                <i class="fas fa-plus me-1"></i> Novo Parceiro
            </button>
        </div>
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Identificador</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for parceiro in parceirosdata %}
                        <tr>
                            <td class="fw-bold">{{ parceiro.id }}</td>
                            <td>{{ parceiro.Nome }}</td>
                            <td>{{ parceiro.name_partner }}</td>
                            <td class="text-center">
                                <button class="btn btn-outline-primary btn-sm rounded-pill me-2" data-bs-toggle="modal" data-bs-target="#editPartnerModal"
                                    data-id="{{ parceiro.id }}" data-nome="{{ parceiro.Nome }}" data-identificador="{{ parceiro.name_partner }}">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                
                                <form action="" method="POST" class="d-inline">
                                    <input type="hidden" name="action" value="delete_partner">
                                    <input type="hidden" name="id" value="{{ parceiro.id }}">
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="fas fa-trash-alt"></i> Remover
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>    
</div>

<div class="modal fade" id="settingsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-gradient-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-sliders-h me-2"></i>Configurações Avançadas
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form method="POST" enctype="multipart/form-data">
                <div class="modal-body p-0">
                    <div class="d-flex flex-wrap flex-lg-nowrap">
                        <nav class="nav flex-column bg-light border-end p-3" style="min-width: 220px;">
                            <a class="nav-link active" data-bs-toggle="tab" href="#tab-geral">
                                <i class="fas fa-cog me-2"></i>Geral
                            </a>
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-aparencia">
                                <i class="fas fa-palette me-2"></i>Aparência
                            </a>
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-seo">
                                <i class="fas fa-chart-line me-2"></i>SEO
                            </a>
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-seguranca">
                                <i class="fas fa-shield-alt me-2"></i>Segurança
                            </a>
                        </nav>

                        <div class="tab-content flex-grow-1 p-4">
                            <div class="tab-pane fade show active" id="tab-geral">
                                <input type="hidden" name="form_type" value="update_general">
                                <div class="mb-4">
                                    <label class="form-label fw-bold">Informações Básicas</label>
                                    <input type="text" class="form-control mb-3" name="systemname" placeholder="Nome do Sistema" required>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <input type="email" class="form-control" name="contact_email" placeholder="E-mail de Contato">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="email" class="form-control" name="admin_email" placeholder="E-mail Administrativo">
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Fuso Horário</label>
                                    <select class="form-select" name="timezone">
                                        <option value="America/Sao_Paulo">Brasília (UTC-3)</option>
                                        <option value="UTC">UTC</option>
                                    </select>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="tab-aparencia">
                                <input type="hidden" name="form_type" value="update_appearance">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <h6 class="card-title mb-3">
                                                    <i class="fas fa-paint-brush me-2"></i>Personalização
                                                </h6>

                                                <div class="mb-3">
                                                    <label class="form-label">Cor Primária</label>
                                                    <div class="input-group color-picker-group">
                                                        <input type="color" class="form-control form-control-color" name="theme_color">
                                                        <span class="input-group-text">Seletor</span>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label">Logo do Sistema</label>
                                                    <div class="file-upload-box border rounded p-3 text-center">
                                                        <input type="file" class="d-none" name="logo" accept="image/*">
                                                        <i class="fas fa-upload fa-2x text-muted mb-2"></i>
                                                        <p class="mb-0 small">Arraste ou clique para enviar</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <h6 class="card-title mb-3">
                                                    <i class="fas fa-share-alt me-2"></i>Redes Sociais
                                                </h6>

                                                <div class="mb-3">
                                                    <input type="url" class="form-control" name="social_facebook" placeholder="URL do Facebook">
                                                </div>
                                                <div class="mb-3">
                                                    <input type="url" class="form-control" name="social_instagram" placeholder="URL do Instagram">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="tab-seo">
                                <input type="hidden" name="form_type" value="update_seo">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Configurações SEO</label>
                                    <input type="text" class="form-control mb-3" name="seo_keywords" placeholder="Palavras-chave (separadas por vírgula)">
                                    <input type="text" class="form-control" name="google_analytics_id" placeholder="ID do Google Analytics">
                                </div>
                            </div>

                            <div class="tab-pane fade" id="tab-seguranca">
                                <input type="hidden" name="form_type" value="update_security">
                                <div class="alert alert-warning mb-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Configurações sensíveis - modifique com cuidado
                                </div>

                                <div class="mb-4">
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" name="manutencao">
                                        <label class="form-check-label">Modo Manutenção</label>
                                    </div>

                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="cookie_consent">
                                        <label class="form-check-label">Consentimento de Cookies</label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Tentativas de Login (Máx)</label>
                                    <input type="number" class="form-control" name="max_login_attempts" min="1" max="10" value="5" style="max-width: 150px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="pageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content border-0">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-file-alt me-2"></i><span id="modalPageTitle">Nova Página</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="pageForm" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="form_type" value="new_page">
                <div class="modal-body">
                    <div class="row g-4">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Título da Página</label>
                                <input type="text" class="form-control" name="title" required maxlength="20">
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">URL</label>
                                <div class="input-group">
                                    <span class="input-group-text">{{ base_url }}/</span>
                                    <input type="text" class="form-control" name="url" maxlength="50">
                                </div>
                            </div>
                        
                            <div class="mb-3">
                                <label class="form-label">Conteúdo</label>
                                <textarea class="form-control" name="description" rows="5" maxlength="255"></textarea>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Imagem Destaque</label>
                                <input type="file" class="form-control" name="featured_image" accept="image/*">
                            </div>
                        </div>

                        <div class="col-md-4 border-start">
                            <div class="mb-4">
                                <label class="form-label fw-bold">Status</label>
                                <select class="form-select" name="status">
                                    <option value="draft">Rascunho</option>
                                    <option value="published">Publicado</option>
                                    <option value="archived">Arquivado</option>
                                </select>
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold">SEO</label>
                                <input type="text" class="form-control mb-2" 
                                       name="meta_title" 
                                       placeholder="Meta Título" 
                                       maxlength="60">
                                <textarea class="form-control" 
                                          name="meta_description" 
                                          rows="3" 
                                          placeholder="Meta Descrição"
                                          maxlength="160"></textarea>
                                <div class="text-end text-muted small mt-1">
                                    <span id="metaCounter">0/160</span>
                                </div>
                            </div>
                            
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="show_in_nav">
                                <label class="form-check-label">Mostrar na navegação</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Salvar Página</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="createPartnerModal" tabindex="-1" role="dialog" aria-labelledby="createPartnerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createPartnerModalLabel">Adicionar Parceiro</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <form id="createPartnerForm" method="post">
                    <input type="hidden" name="form_type" value="create_partner">
                    <div class="mb-3">
                        <label for="createNome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="createNome" name="Nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="createIdentificador" class="form-label">Identificador</label>
                        <input type="text" class="form-control" id="createIdentificador" name="name_partner" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editPartnerModal" tabindex="-1" role="dialog" aria-labelledby="editPartnerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editPartnerModalLabel">Editar Parceiro</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <form id="editPartnerForm" method="post" action="">
                    <input type="hidden" name="form_type" value="edit_partner">
                    <input type="hidden" id="editId" name="id">
                    <div class="mb-3">
                        <label for="editNome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="editNome" name="Nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="editIdentificador" class="form-label">Identificador</label>
                        <input type="text" class="form-control" id="editIdentificador" name="name_partner" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
$(document).ready(function() {
    // Função para obter dados de um atributo 'data-all' (JSON)
    const getDataFromButton = (button) => {
        try {
            // O data-all no Twig já faz json_encode, então é apenas um string JSON
            return JSON.parse(button.data('all'));
        } catch (e) {
            console.error("Erro ao decodificar JSON do botão:", e);
            return {};
        }
    };
    
    // Configurações do Sistema
    $('#settingsModal').on('show.bs.modal', function(e) {
        const button = $(e.relatedTarget);
        const data = getDataFromButton(button);
        const modal = $(this);
        
        modal.find('input[name="systemname"]').val(data.systemname);
        modal.find('input[name="theme_color"]').val(data.theme_color);
        modal.find('input[name="contact_email"]').val(data.contact_email);
        modal.find('input[name="admin_email"]').val(data.admin_email);
        modal.find('select[name="timezone"]').val(data.timezone);
        // Garante que o checkbox seja marcado corretamente (0 ou 1)
        modal.find('input[name="manutencao"]').prop('checked', data.manutencao == 1); 
        modal.find('input[name="social_facebook"]').val(data.social_facebook);
        modal.find('input[name="social_instagram"]').val(data.social_instagram);
    });

    // Páginas
    $('#pageModal').on('show.bs.modal', function(e) {
        const button = $(e.relatedTarget);
        const data = button.data('all') ? getDataFromButton(button) : null;
        const isEdit = !!data;
        const modal = $(this);
        
        if(isEdit) {
            modal.find('#modalPageTitle').html('<i class="fas fa-edit me-2"></i>Editar Página');
            modal.find('input[name="form_type"]').val('update_page'); // Altera o tipo de formulário para update
            
            modal.find('input[name="title"]').val(data.title);
            modal.find('input[name="url"]').val(data.url);
            modal.find('textarea[name="description"]').val(data.descripton);
            modal.find('select[name="status"]').val(data.status);
            modal.find('input[name="meta_title"]').val(data.meta_title);
            modal.find('textarea[name="meta_description"]').val(data.meta_description);

            // Trigger para atualizar o contador de caracteres
            $('textarea[name="meta_description"]').trigger('input'); 
        } else {
            modal.find('#modalPageTitle').html('<i class="fas fa-plus me-2"></i>Nova Página');
            modal.find('input[name="form_type"]').val('new_page'); // Garante o valor padrão
            modal.find('form')[0].reset();
            // Reseta o contador
            $('#metaCounter').text('0/160');
        }
    });

    // Contador de caracteres para SEO
    $('textarea[name="meta_description"]').on('input', function() {
        const length = $(this).val().length;
        $('#metaCounter').text(`${length}/160`);
    });

    // Edição de Parceiro
    $('#editPartnerModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        var nome = button.data('nome');
        var identificador = button.data('identificador');

        var modal = $(this);
        modal.find('#editId').val(id);
        modal.find('#editNome').val(nome);
        modal.find('#editIdentificador').val(identificador);
    });
});
</script>
{% endblock %}