{# container.twig #}

<div class="container-fluid">
    <!-- Cabeçalho com botão de nova página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Configurações do Sistema</h1>
        <button class="btn btn-primary" id="btn-create-page">
            <i class="fas fa-plus me-2"></i>Nova Página
        </button>
    </div>

    <!-- Modal Settings Completo -->
    <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white py-3">
                    <h5 class="modal-title fs-5">
                        <i class="fas fa-cog me-2"></i>Editar Configuração
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formSettings" action="update_setting.php" method="POST" enctype="multipart/form-data">
                    <div class="modal-body px-4 py-3">
                        <input type="hidden" name="id" id="setting_id">
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="systemname" class="form-label">Nome do Sistema</label>
                                <input type="text" class="form-control" id="systemname" name="systemname" required maxlength="10">
                            </div>
                            
                            <div class="col-md-6">
                                <label for="theme_color" class="form-label">Cor do Tema</label>
                                <input type="color" class="form-control form-control-color" id="theme_color" name="theme_color" required>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="contact_email" class="form-label">E-mail de Contato</label>
                                <input type="email" class="form-control" id="contact_email" name="contact_email" required>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="admin_email" class="form-label">E-mail do Admin</label>
                                <input type="email" class="form-control" id="admin_email" name="admin_email" required>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="timezone" class="form-label">Fuso Horário</label>
                                <select class="form-select" id="timezone" name="timezone" required>
                                    <option value="America/Sao_Paulo">America/Sao_Paulo</option>
                                    <option value="UTC">UTC</option>
                                    <!-- Adicione mais opções conforme necessário -->
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Modo Manutenção</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="manutencao" name="manutencao">
                                    <label class="form-check-label" for="manutencao">Ativar</label>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <label for="logo" class="form-label">Logo do Sistema</label>
                                <input class="form-control" type="file" id="logo" name="logo" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light py-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Pages Completo -->
    <div class="modal fade" id="pagesModal" tabindex="-1" aria-labelledby="pagesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white py-3">
                    <h5 class="modal-title fs-5">
                        <i class="fas fa-file-alt me-2"></i>Editar Página
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formPages" action="update_page.php" method="POST" enctype="multipart/form-data">
                    <div class="modal-body px-4 py-3">
                        <input type="hidden" name="id" id="page_id">
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="title" class="form-label">Título</label>
                                <input type="text" class="form-control" id="title" name="title" required maxlength="20">
                            </div>
                            
                            <div class="col-md-6">
                                <label for="url" class="form-label">URL</label>
                                <div class="input-group">
                                    <span class="input-group-text">/</span>
                                    <input type="text" class="form-control" id="url" name="url" required maxlength="50">
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <label for="description" class="form-label">Conteúdo</label>
                                <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
                            </div>
                            
                            <div class="col-md-4">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="draft">Rascunho</option>
                                    <option value="published">Publicado</option>
                                    <option value="archived">Arquivado</option>
                                </select>
                            </div>
                            
                            <div class="col-md-8">
                                <label for="featured_image" class="form-label">Imagem Destaque</label>
                                <input class="form-control" type="file" id="featured_image" name="featured_image" accept="image/*">
                            </div>
                            
                            <div class="col-md-6">
                                <label for="meta_title" class="form-label">Meta Título 
                                    <span class="text-muted float-end" id="meta-title-counter">0/60</span>
                                </label>
                                <input type="text" class="form-control" id="meta_title" name="meta_title" maxlength="60">
                            </div>
                            
                            <div class="col-md-6">
                                <label for="meta_description" class="form-label">Meta Descrição 
                                    <span class="text-muted float-end" id="meta-description-counter">0/160</span>
                                </label>
                                <textarea class="form-control" id="meta_description" name="meta_description" maxlength="160" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light py-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Configurações - Preencher Modal
    $('#settingsModal').on('show.bs.modal', function(event) {
        const button = $(event.relatedTarget);
        const modal = $(this);
        
        modal.find('#setting_id').val(button.data('id'));
        modal.find('#systemname').val(button.data('systemname'));
        modal.find('#theme_color').val(button.data('theme_color'));
        modal.find('#contact_email').val(button.data('contact_email'));
        modal.find('#admin_email').val(button.data('admin_email'));
        modal.find('#timezone').val(button.data('timezone'));
        modal.find('#manutencao').prop('checked', button.data('manutencao') == 1);
    });

    // Páginas - Preencher Modal
    $('#pagesModal').on('show.bs.modal', function(event) {
        const button = $(event.relatedTarget);
        const modal = $(this);
        
        modal.find('#page_id').val(button.data('id'));
        modal.find('#title').val(button.data('title'));
        modal.find('#url').val(button.data('url'));
        modal.find('#description').val(button.data('description')); // Corrigido typo
        modal.find('#status').val(button.data('status'));
        modal.find('#meta_title').val(button.data('meta_title'));
        modal.find('#meta_description').val(button.data('meta_description'));
        
        // Atualizar contadores
        $('#meta-title-counter').text(modal.find('#meta_title').val().length);
        $('#meta-description-counter').text(modal.find('#meta_description').val().length);
    });

    // Criar Nova Página
    $('#btn-create-page').click(function() {
        $('#pagesModal')
            .modal('show')
            .find('form')[0].reset();
    });

    // Contadores de caracteres
    $('#meta_title, #meta_description').on('input', function() {
        const counterId = $(this).attr('id') + '-counter';
        $('#' + counterId).text($(this).val().length);
    });
});
</script>