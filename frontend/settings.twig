{# container.twig #}

<div class="container-fluid">
    <!-- Título da Página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Configurações do Sistema</h1>
    </div>

    <!-- Páginas do Site -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-info text-white">
            <h6 class="m-0 font-weight-bold">Páginas do Site</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="pagesTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>URL</th>
                            <th>Descrição</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if pagesdata.pageData is not empty %}
                            {% for page in pagesdata.pageData %}
                            <tr>
                                <td>{{ page.id }}</td>
                                <td>{{ page.title }}</td>
                                <td>{{ page.url }}</td>
                                <td>{{ page.descripton }}</td>
                                <td>
                                    <button class="btn btn-sm btn-warning btn-edit-page"
                                        data-id="{{ page.id }}"
                                        data-title="{{ page.title }}"
                                        data-url="{{ page.url }}"
                                        data-descripton="{{ page.descripton }}">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Nenhuma página encontrada.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edição Páginas -->
<div class="modal fade" id="pagesModal" tabindex="-1" role="dialog" aria-labelledby="pagesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="pagesModalLabel">Editar Página</h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form id="formPages" action="update_page.php" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="id" id="page_id">
                    <div class="form-group">
                        <label for="title">Título</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="url">URL</label>
                        <input type="text" class="form-control" id="url" name="url" required>
                    </div>
                    <div class="form-group">
                        <label for="descripton">Descrição</label>
                        <textarea class="form-control" id="descripton" name="descripton" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Abrir Modal de Edição de Página e Popular Dados
    $(document).on('click', '.btn-edit-page', function() {
        let data = $(this).data();
        $('#page_id').val(data.id);
        $('#title').val(data.title);
        $('#url').val(data.url);
        $('#descripton').val(data.descripton);
        $('#pagesModal').modal('show');
    });

    // Fechar modal ao clicar no botão "Cancelar" ou no "X"
    $(document).on('click', '[data-dismiss="modal"]', function() {
        $(this).closest('.modal').modal('hide');
    });

    // Envio do Formulário via AJAX
    $('#formPages').on('submit', function(e) {
        e.preventDefault();
        let $form = $(this);

        $.ajax({
            type: 'POST',
            url: $form.attr('action'),
            data: $form.serialize(),
            dataType: 'json',
            success: function(response) {
                if(response.success) {
                    $('#pagesModal').modal('hide'); // Fechar modal após salvar
                    location.reload();
                } else {
                    alert('Erro ao salvar: ' + response.message);
                }
            },
            error: function() {
                alert('Erro na comunicação com o servidor');
            }
        });
    });
});
</script>
