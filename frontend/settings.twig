<div class="container-fluid">
    <!-- Título da Página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Configurações do Sistema</h1>
    </div>

    <!-- Configurações do Sistema -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold">Configurações Gerais</h6>
            <button class="btn btn-sm btn-warning btn-edit-settings">
                <i class="fas fa-cog"></i> Editar Configurações
            </button>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><strong>Nome do Site:</strong> {{ settings.site_name }}</li>
                <li class="list-group-item"><strong>Email de Contato:</strong> {{ settings.contact_email }}</li>
                <li class="list-group-item"><strong>Idioma Padrão:</strong> {{ settings.default_language }}</li>
            </ul>
        </div>
    </div>

    <!-- Páginas do Site -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-info text-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold">Páginas do Site</h6>
            <button class="btn btn-sm btn-success btn-new-page">
                <i class="fas fa-plus"></i> Criar Página
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="pagesTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>URL</th>
                            <th>Descrição</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for page in pagesdata %}
                        <tr>
                            <td>{{ page.id }}</td>
                            <td>{{ page.title }}</td>
                            <td>{{ page.url }}</td>
                            <td>{{ page.description }}</td>
                            <td>
                                <button class="btn btn-sm btn-warning btn-edit-page"
                                    data-id="{{ page.id }}"
                                    data-title="{{ page.title }}"
                                    data-url="{{ page.url }}"
                                    data-description="{{ page.description }}">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Nenhuma página encontrada.</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Edição de Configurações -->
<div class="modal fade" id="settingsModal" tabindex="-1" role="dialog" aria-labelledby="settingsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="settingsModalLabel">Editar Configurações</h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form id="formSettings" action="update_settings.php" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="site_name">Nome do Site</label>
                        <input type="text" class="form-control" id="site_name" name="site_name" value="{{ settings.site_name }}" required>
                    </div>
                    <div class="form-group">
                        <label for="contact_email">Email de Contato</label>
                        <input type="email" class="form-control" id="contact_email" name="contact_email" value="{{ settings.contact_email }}" required>
                    </div>
                    <div class="form-group">
                        <label for="default_language">Idioma Padrão</label>
                        <input type="text" class="form-control" id="default_language" name="default_language" value="{{ settings.default_language }}" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Edição/Criação de Páginas -->
<div class="modal fade" id="pagesModal" tabindex="-1" role="dialog" aria-labelledby="pagesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="pagesModalLabel">Gerenciar Página</h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form id="formPages" action="update_page.php" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="id" id="page_id">
                    <div class="form-group">
                        <label for="title">Título</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="url">URL</label>
                        <input type="text" class="form-control" id="url" name="url" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Descrição</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Modal de Configurações
    $(document).on('click', '.btn-edit-settings', function() {
        $('#settingsModal').modal('show');
    });

    // Modal de Páginas
    $(document).on('click', '.btn-new-page', function() {
        $('#formPages')[0].reset();
        $('#pagesModalLabel').text('Criar Nova Página');
        $('#pagesModal').modal('show');
    });

    $(document).on('click', '.btn-edit-page', function() {
        let data = $(this).data();
        $('#page_id').val(data.id);
        $('#title').val(data.title);
        $('#url').val(data.url);
        $('#description').val(data.description);
        $('#pagesModalLabel').text('Editar Página');
        $('#pagesModal').modal('show');
    });

    // Fechar modais ao clicar no "x" ou no "Cancelar"
    $('#settingsModal, #pagesModal').on('click', '.close, .btn-secondary', function() {
        $(this).closest('.modal').modal('hide');
    });
});
</script>
