{# container.twig #}

<div class="container-fluid">
    <!-- Título da Página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Configurações do Sistema</h1>
    </div>

    <!-- Configurações Gerais -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Configurações Gerais</h6>
            <button class="btn btn-sm btn-success" id="btn-refresh-settings">
                <i class="fas fa-sync-alt"></i>
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                {# ... (código anterior mantido) ... #}

<!-- Tabela Settings com novos campos -->
<table class="table table-bordered table-hover" id="settingsTable" width="100%" cellspacing="0">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome Sistema</th>
            <th>Tema</th>
            <th>Contato</th>
            <th>Manutenção</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for setting in settingsdata %}
        <tr>
            <td>{{ setting.id }}</td>
            <td>{{ setting.systemname }}</td>
            <td>
                <span class="color-preview" style="background:{{ setting.theme_color }}"></span>
                {{ setting.theme_color }}
            </td>
            <td>{{ setting.contact_email }}</td>
            <td>
                <span class="badge bg-{{ setting.manutencao ? 'danger' : 'success' }}">
                    {{ setting.manutencao ? 'Ativo' : 'Inativo' }}
                </span>
            </td>
            <td>
                <button class="btn btn-sm btn-primary btn-edit-setting" 
                    data-bs-toggle="modal" 
                    data-bs-target="#settingsModal"
                    data-id="{{ setting.id }}"
                    data-systemname="{{ setting.systemname }}"
                    data-logo="{{ setting.logo }}"
                    data-manutencao="{{ setting.manutencao }}"
                    data-theme_color="{{ setting.theme_color }}"
                    data-contact_email="{{ setting.contact_email }}"
                    data-admin_email="{{ setting.admin_email }}"
                    data-timezone="{{ setting.timezone }}">
                    <i class="fas fa-edit"></i>
                </button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<!-- Tabela Pages com novos campos -->
<table class="table table-bordered table-hover" id="pagesTable" width="100%" cellspacing="0">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Status</th>
            <th>URL</th>
            <th>Atualização</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for page in pagesdata.pageData %}
        <tr>
            <td>{{ page.id }}</td>
            <td>{{ page.title }}</td>
            <td>
                <span class="badge bg-{{ page.status == 'published' ? 'success' : 'warning' }}">
                    {{ page.status|capitalize }}
                </span>
            </td>
            <td>{{ page.url }}</td>
            <td>{{ page.updated_at|date('d/m/Y H:i') }}</td>
            <td>
                <button class="btn btn-sm btn-primary btn-edit-page" 
                    data-bs-toggle="modal"
                    data-bs-target="#pagesModal"
                    data-id="{{ page.id }}"
                    data-title="{{ page.title }}"
                    data-url="{{ page.url }}"
                    data-descripton="{{ page.descripton }}"
                    data-status="{{ page.status }}"
                    data-meta_title="{{ page.meta_title }}"
                    data-meta_description="{{ page.meta_description }}"
                    data-featured_image="{{ page.featured_image }}">
                    <i class="fas fa-edit"></i>
                </button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# Estrutura completa dos modais #}
<!-- Modal Settings -->
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white py-3">
                <h5 class="modal-title fs-5">
                    <i class="fas fa-cog me-2"></i>Editar Configuração
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formSettings" action="update_setting.php" method="POST">
                <div class="modal-body px-4 py-3">
                    <!-- Conteúdo do modal settings -->
                </div>
                <div class="modal-footer bg-light py-3">
                    <!-- Botões do footer -->
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Pages -->
<div class="modal fade" id="pagesModal" tabindex="-1" aria-labelledby="pagesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white py-3">
                <h5 class="modal-title fs-5">
                    <i class="fas fa-file-alt me-2"></i>Editar Página
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formPages" action="update_page.php" method="POST">
                <div class="modal-body px-4 py-3">
                    <!-- Conteúdo do modal pages -->
                </div>
                <div class="modal-footer bg-light py-3">
                    <!-- Botões do footer -->
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Configurações - Abrir Modal e Preencher Dados
        $('#settingsModal').on('show.bs.modal', function(event) {
            const button = $(event.relatedTarget);
            const modal = $(this);
    
            modal.find('#setting_id').val(button.data('id'));
            modal.find('#systemname').val(button.data('systemname'));
            modal.find('#logo').val(button.data('logo'));
            modal.find('#manutencao').prop('checked', button.data('manutencao') === 1 || button.data('manutencao') === '1' || button.data('manutencao') === true);
            modal.find('#theme_color').val(button.data('theme_color'));
            modal.find('#contact_email').val(button.data('contact_email'));
            modal.find('#admin_email').val(button.data('admin_email'));
            modal.find('#timezone').val(button.data('timezone'));
        });
    
        // Páginas - Abrir Modal e Preencher Dados
        $('#pagesModal').on('show.bs.modal', function(event) {
            const button = $(event.relatedTarget);
            const modal = $(this);
    
            modal.find('#page_id').val(button.data('id'));
            modal.find('#title').val(button.data('title'));
            modal.find('#url').val(button.data('url'));
            modal.find('#descripton').val(button.data('descripton'));
            modal.find('#status').val(button.data('status'));
            modal.find('#meta_title').val(button.data('meta_title'));
            modal.find('#meta_description').val(button.data('meta_description'));
            modal.find('#featured_image').val(button.data('featured_image'));
    
            // Atualizar contadores
            $('#meta-title-counter').text(button.data('meta_title')?.length || 0);
            $('#meta-description-counter').text(button.data('meta_description')?.length || 0);
        });
    
        // Contadores de Caracteres em Tempo Real
        $('#meta_title').on('input', function() {
            $('#meta-title-counter').text(this.value.length);
        });
    
        $('#meta_description').on('input', function() {
            $('#meta-description-counter').text(this.value.length);
        });
    
        // Criar Nova Página - Abrir Modal Limpo
        $('#btn-create-page').click(function() {
            const modal = $('#pagesModal');
            modal.find('input, textarea, select').val('');
            modal.find('#status').val('draft');
            modal.modal('show');
        });
    
        // Configuração dos Modais do Bootstrap sem a necessidade de inicialização manual
        // O Bootstrap já cuida do modal automaticamente, então não há necessidade de inicializar com "new bootstrap.Modal"
        // As opções de backdrop e outros ajustes são feitos diretamente no modal, ou usando as configurações da biblioteca
    
        // Inicialização do Modal Settings
        var settingsModal = new bootstrap.Modal(document.getElementById('settingsModal'), {
            backdrop: 'static' // Modal não fecha ao clicar fora
        });
    
        // Inicialização do Modal Pages
        var pagesModal = new bootstrap.Modal(document.getElementById('pagesModal'), {
            backdrop: 'static' // Modal não fecha ao clicar fora
        });
    
        // Use `settingsModal.show()` ou `pagesModal.show()` se você precisar abrir os modais programaticamente
    });
</script>